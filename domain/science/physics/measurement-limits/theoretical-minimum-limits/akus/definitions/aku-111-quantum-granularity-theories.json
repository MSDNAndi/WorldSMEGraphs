  "content": {
    "title": "Theories of Quantum Granularity",
    "abstract": "Overview of theoretical frameworks that predict discretization of physical quantities at the Planck scale, including Loop Quantum Gravity, String Theory, Causal Set Theory, and Doubly Special Relativity.",
    "core_question": "Is spacetime continuous or discrete at the smallest scales?",
    "theories": [
      {
        "name": "Loop Quantum Gravity (LQG)",
        "discretization": "Area and volume operators have discrete spectra",
        "minimum_area": "A_min = (√3/4) γ l_P² ≈ 10⁻⁷⁰ m²",
        "minimum_volume": "V_min ≈ l_P³ ≈ 10⁻¹⁰⁵ m³",
        "mechanism": "Spin network states span Hilbert space",
        "predictions": [
          "Discrete area/volume spectrum",
          "Black hole entropy from surface punctures",
          "Big Bounce instead of Big Bang"
        ],
        "experimental_tests": "Gamma-ray dispersion (null results so far)"
      },
      {
        "name": "String Theory",
        "discretization": "String length l_s sets fundamental scale",
        "typical_value": "l_s ~ √α' ~ 10⁻³⁴ m (model dependent)",
        "mechanism": "Strings cannot probe below their own length",
        "predictions": [
          "T-duality: physics at R equivalent to physics at l_s²/R",
          "Minimum distance from string scattering",
          "Extra dimensions with compact radii"
        ],
        "complications": "Multiple vacua, landscape problem"
      },
      {
        "name": "Causal Set Theory",
        "discretization": "Spacetime is fundamentally discrete",
        "element_density": "ρ ~ l_P⁻⁴ elements per spacetime volume",
        "mechanism": "Spacetime is partially ordered set (poset)",
        "predictions": [
          "Lorentz invariance preserved statistically",
          "Dark energy prediction (historically)",
          "Inherent spacetime randomness"
        ],
        "advantages": "Background independent, manifestly Lorentz invariant"
      },
      {
        "name": "Doubly Special Relativity (DSR)",
        "discretization": "Planck scale is observer-independent invariant",
        "modification": "Two invariants: c and l_P (or E_P)",
        "mechanism": "Deformed Lorentz transformations",
        "predictions": [
          "Modified dispersion relations: E² = p²c² + m²c⁴ + f(E/E_P)",
          "Energy-dependent speed of light",
          "No trans-Planckian momenta"
        ],
        "experimental_tests": "Gamma-ray burst timing"
      },
      {
        "name": "Generalized Uncertainty Principle (GUP)",
        "discretization": "Minimum length from modified HUP",
        "formula": "Δx ≥ ℏ/(2Δp) + β l_P² Δp/ℏ",
        "minimum_length": "Δx_min = 2√β l_P",
        "mechanism": "Gravitational effects on measurement",
        "predictions": [
          "Modified atomic spectra",
          "Modified black hole thermodynamics",
          "Modified cosmology"
        ],
        "phenomenology": "Testable corrections at accessible energies"
      }
    ],
    "what_is_quantized": {
      "definitely_quantized": [
        "Electric charge (e)",
