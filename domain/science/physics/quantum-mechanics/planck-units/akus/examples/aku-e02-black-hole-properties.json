  "content": {
    "statement": {
      "text": "This worked example demonstrates calculating all thermodynamic properties of a black hole given its mass: Schwarzschild radius, event horizon area, Bekenstein-Hawking entropy, Hawking temperature, and evaporation timescale. We use a primordial black hole with mass 10¹² kg as an example.",
      "formal": "Given M = 10¹² kg, find: r_s, A, S_BH, T_H, τ_evap"
    },
    "worked_example": {
      "problem": {
        "statement": "A primordial black hole has mass M = 10¹² kg (about the mass of a small mountain). Calculate: (a) Schwarzschild radius, (b) Event horizon area, (c) Bekenstein-Hawking entropy, (d) Hawking temperature, (e) Evaporation time.",
        "given": {
          "mass": "M = 10¹² kg",
          "context": "Schwarzschild (non-rotating) black hole"
        },
        "constants_needed": {
          "G": "6.674 × 10⁻¹¹ m³/(kg·s²)",
          "c": "2.998 × 10⁸ m/s",
          "hbar": "1.055 × 10⁻³⁴ J·s",
          "k_B": "1.381 × 10⁻²³ J/K"
        }
      },
      "solution": {
        "part_a_schwarzschild_radius": {
          "formula": "r_s = 2GM/c²",
          "formula_latex": "r_s = \\frac{2GM}{c^2}",
          "calculation_step_1": "r_s = 2 × (6.674 × 10⁻¹¹) × (10¹²) / (2.998 × 10⁸)²",
          "calculation_step_2": "r_s = 1.335 × 10³ / 8.988 × 10¹⁶",
          "calculation_step_3": "r_s = 1.486 × 10⁻¹⁴ m",
          "result": "r_s ≈ 1.49 × 10⁻¹⁴ m = 14.9 fm",
          "interpretation": "About 15 times the size of a proton (0.84 fm) - subatomic scale!",
          "comparison_to_planck": "r_s / ℓₚ ≈ 1.49 × 10⁻¹⁴ / 1.62 × 10⁻³⁵ ≈ 9.2 × 10²⁰"
        },
        "part_b_horizon_area": {
          "formula": "A = 4πr_s²",
          "formula_latex": "A = 4\\pi r_s^2",
          "calculation_step_1": "A = 4π × (1.486 × 10⁻¹⁴)²",
          "calculation_step_2": "A = 4π × 2.208 × 10⁻²⁸",
          "calculation_step_3": "A = 2.775 × 10⁻²⁷ m²",
          "result": "A ≈ 2.78 × 10⁻²⁷ m²",
          "interpretation": "Tiny area - about (53 fm)² comparable to nuclear scales",
          "in_planck_areas": "A / ℓₚ² ≈ 2.78 × 10⁻²⁷ / 2.61 × 10⁻⁷⁰ ≈ 1.06 × 10⁴³ Planck areas"
        },
        "part_c_entropy": {
          "formula": "S_BH = (k_B c³ / 4ℏG) × A = k_B A / (4ℓₚ²)",
          "formula_latex": "S_{\\text{BH}} = \\frac{k_B c^3}{4\\hbar G} A = \\frac{k_B A}{4\\ell_P^2}",
          "method_1_using_prefactor": {
            "prefactor": "k_B c³ / (4ℏG) = 1.38 × 10⁻²³ × (3.0 × 10⁸)³ / (4 × 1.05 × 10⁻³⁴ × 6.67 × 10⁻¹¹)",
            "prefactor_value": "≈ 1.33 × 10⁴³ J/(K·m²)",
            "calculation": "S_BH = 1.33 × 10⁴³ × 2.78 × 10⁻²⁷ ≈ 3.7 × 10¹⁶ J/K"
          },
          "method_2_using_planck_areas": {
            "calculation": "S_BH = k_B × (1.06 × 10⁴³) / 4 = k_B × 2.65 × 10⁴²",
            "result_in_nats": "S_BH / k_B ≈ 2.65 × 10⁴² nats",
            "result_in_bits": "S_BH / (k_B ln 2) ≈ 3.82 × 10⁴² bits"
          },
          "result": "S_BH ≈ 3.7 × 10¹⁶ J/K ≈ 2.7 × 10³⁹ k_B",
          "interpretation": "Enormous entropy - about 10³⁹ times the Boltzmann constant",
          "information_content": "Can store ~3.8 × 10⁴² bits of information"
        },
        "part_d_hawking_temperature": {
          "formula": "T_H = ℏc³ / (8πGMk_B)",
          "formula_latex": "T_H = \\frac{\\hbar c^3}{8\\pi G M k_B}",
          "calculation_step_1": "T_H = (1.055 × 10⁻³⁴) × (2.998 × 10⁸)³ / [8π × (6.674 × 10⁻¹¹) × (10¹²) × (1.381 × 10⁻²³)]",
          "calculation_step_2": "Numerator: 1.055 × 10⁻³⁴ × 2.694 × 10²⁵ = 2.842 × 10⁻⁹",
          "calculation_step_3": "Denominator: 8π × 6.674 × 10⁻¹¹ × 10¹² × 1.381 × 10⁻²³ = 2.312 × 10⁻²¹",
          "calculation_step_4": "T_H = 2.842 × 10⁻⁹ / 2.312 × 10⁻²¹ = 1.229 × 10¹² K",
          "result": "T_H ≈ 1.23 × 10¹² K",
          "interpretation": "Incredibly hot - about 10⁸ times the core temperature of the Sun!",
          "comparison_to_planck": "T_H / Tₚ ≈ 1.23 × 10¹² / 1.42 × 10³² ≈ 8.7 × 10⁻²¹ (still far below Planck temperature)"
        },
        "part_e_evaporation_time": {
          "formula": "τ_evap ≈ 5120πG²M³ / (ℏc⁴)",
          "formula_latex": "\\tau_{\\text{evap}} \\approx \\frac{5120\\pi G^2 M^3}{\\hbar c^4}",
          "derivation_note": "Comes from integrating dM/dt = -k(M) where k involves Stefan-Boltzmann law",
          "calculation_step_1": "Numerator: 5120π × (6.674 × 10⁻¹¹)² × (10¹²)³",
          "calculation_step_2": "= 5120π × 4.454 × 10⁻²¹ × 10³⁶ = 7.18 × 10¹⁹",
          "calculation_step_3": "Denominator: (1.055 × 10⁻³⁴) × (2.998 × 10⁸)⁴ = 1.055 × 10⁻³⁴ × 8.07 × 10³³ = 8.51 × 10⁻¹",
          "calculation_step_4": "τ_evap = 7.18 × 10¹⁹ / 8.51 × 10⁻¹ ≈ 8.44 × 10¹⁹ seconds",
          "conversion_to_years": "τ_evap ≈ 8.44 × 10¹⁹ s / (3.156 × 10⁷ s/yr) ≈ 2.67 × 10¹² years",
          "result": "τ_evap ≈ 2.7 trillion years",
          "interpretation": "About 190 times the current age of the universe (13.8 billion years)!",
          "note": "This black hole would outlive all stars but eventually evaporate via Hawking radiation"
        }
      },
      "summary_table": {
        "schwarzschild_radius": "1.49 × 10⁻¹⁴ m (15 fm)",
        "horizon_area": "2.78 × 10⁻²⁷ m²",
        "entropy_SI": "3.7 × 10¹⁶ J/K",
        "entropy_bits": "3.8 × 10⁴² bits",
        "hawking_temperature": "1.23 × 10¹² K",
        "evaporation_time": "2.7 × 10¹² years (2700 billion years)"
      },
      "key_insights": [
        "Small black holes are HOT (T ∝ 1/M) - this one at 10¹² K radiates intensely",
        "Despite being hot, evaporation is slow - smaller than this evaporate faster",
        "Entropy is enormous - black holes are maximum entropy objects",
        "Temperature scales inversely with mass: double mass → half temperature",
        "At Planck mass (mₚ ≈ 2 × 10⁻⁸ kg), T_H ≈ Tₚ and quantum gravity becomes essential"
      ]
    },
    "verification_checks": {
      "dimensional_analysis": {
        "r_s": "[r_s] = [G][M]/[c]² = (L³/MT²)(M)/(L²/T²) = L ✓",
        "T_H": "[T_H] = [ℏ][c]³/([G][M][k_B]) = (ML²/T)(L³/T³)/((L³/MT²)(M)(ML²/T²K)) = K ✓",
        "all_formulas_dimensionally_consistent": true
      },
      "limit_checks": {
        "if_M_increases": "r_s ↑, A ↑, S ↑, T_H ↓, τ ↑ (massive black holes are cold and long-lived) ✓",
        "if_M_approaches_planck_mass": "T_H → Tₚ, quantum gravity becomes important ✓",
        "stefan_boltzmann_check": "Power ~ T⁴ × Area, consistent with derivation ✓"
      }
    }
  },
