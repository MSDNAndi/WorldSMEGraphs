  "content": {
    "title": "Natural Units: Definition and Dimensional Relationships",
    "summary": "Natural units are unit systems where certain fundamental physical constants are set to unity by definition. This simplifies equations and reveals the underlying physics by removing conversion factors.",
    "definition": {
      "statement": "A natural unit system is defined by choosing fundamental constants to have the numerical value 1 (dimensionless).",
      "planck_units": {
        "constants_set_to_one": ["c = 1", "ℏ = 1", "G = 1", "k_B = 1"],
        "result": "All mechanical quantities (mass, length, time, temperature) become equivalent dimensions"
      },
      "particle_physics_units": {
        "constants_set_to_one": ["c = 1", "ℏ = 1"],
        "result": "Energy becomes the fundamental dimension; [M] = [L⁻¹] = [T⁻¹] = [E]",
        "common_usage": "Masses in GeV, lengths in GeV⁻¹"
      }
    },
    "dimensional_relationships": {
      "with_c_equals_1": {
        "implication": "[L] = [T] (length and time equivalent)",
        "examples": ["1 light-second = 1 second (in these units)", "Energy and momentum have same dimension"]
      },
      "with_hbar_equals_1": {
        "implication": "[E] = [T⁻¹] (energy is inverse time)",
        "examples": ["E = ω (without ℏ factor)", "p = k (momentum equals wave number)"]
      },
      "with_G_equals_1": {
        "implication": "[M] = [L] (mass is a length)",
        "examples": ["Schwarzschild radius r_s = 2M (no G factor)", "Mass measured in Planck masses"]
      },
      "with_kB_equals_1": {
        "implication": "[T_temp] = [E] (temperature is energy)",
        "examples": ["T in energy units directly", "β = 1/T (inverse temperature in energy⁻¹)"]
      },
      "combined_c_hbar_equals_1": {
        "implication": "[M] = [L⁻¹] = [T⁻¹] = [E]",
        "examples": ["Compton wavelength: λ = 1/m", "All masses in GeV"]
      },
      "full_planck_units": {
        "implication": "Everything dimensionless when measured in Planck units",
        "examples": ["Length in ℓ_P, mass in m_P, time in t_P"]
      }
    },
    "advantages": [
      "Equations become simpler (fewer conversion factors)",
      "Physical relationships become more transparent",
      "Dimensional analysis simplified",
      "Numerical calculations more intuitive in natural scales"
    ],
    "cautions": [
      "Must track dimensions carefully when converting back to SI",
      "Different sub-fields use different conventions",
      "Numerical factors may differ between conventions"
    ]
  },
