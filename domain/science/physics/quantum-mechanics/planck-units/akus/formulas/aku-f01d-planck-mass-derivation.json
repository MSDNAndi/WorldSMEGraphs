  "content": {
    "title": "Derivation of Planck Mass via Dimensional Analysis",
    "summary": "Step-by-step derivation of the Planck mass m_P from fundamental constants c, ℏ, and G using dimensional analysis.",
    "target": {
      "quantity": "Mass",
      "dimension": "[M]",
      "notation": "[M¹ L⁰ T⁰]"
    },
    "derivation": {
      "ansatz": "m_P = c^α × ℏ^β × G^γ",
      "dimensional_equation": "[M] = [L T⁻¹]^α × [M L² T⁻¹]^β × [M⁻¹ L³ T⁻²]^γ",
      "expanding": "[M¹ L⁰ T⁰] = [M^(β-γ) L^(α+2β+3γ) T^(-α-β-2γ)]",
      "system_of_equations": [
        "M: 1 = β - γ",
        "L: 0 = α + 2β + 3γ",
        "T: 0 = -α - β - 2γ"
      ],
      "solution": {
        "from_T": "α = -β - 2γ",
        "into_L": "0 = (-β - 2γ) + 2β + 3γ = β + γ → β = -γ",
        "into_M": "1 = β - γ = -γ - γ = -2γ → γ = -1/2",
        "therefore": "γ = -1/2, β = 1/2, α = -1/2 - 2(-1/2) = 1/2"
      },
      "result": "m_P = c^(1/2) × ℏ^(1/2) × G^(-1/2) = √(ℏc/G)"
    },
    "alternative_derivations": [
      {
        "method": "From Planck length and time",
        "formula": "m_P = ℓ_P × c/t_P = (ℓ_P/t_P) × (1/c) × c² × t_P/ℓ_P = ...",
        "result": "m_P = ℏ/(c × ℓ_P) = √(ℏc/G)"
      },
      {
        "method": "Compton wavelength equals Schwarzschild radius",
        "formula": "λ_C = ℏ/(mc) = r_s = 2Gm/c² at m = m_P/√2",
        "result": "Gives m ~ √(ℏc/G) with O(1) factor"
      }
    ],
    "verification": {
      "check_dimensions": "[ℏc/G] = [M L² T⁻¹ × L T⁻¹ / M⁻¹ L³ T⁻²] = [M L³ T⁻² × M / L³ T⁻²] = [M²] → √[M²] = [M] ✓"
    },
    "numerical_value": {
      "formula": "m_P = √((1.055×10⁻³⁴ × 2.998×10⁸)/(6.674×10⁻¹¹))",
      "calculation": "m_P = √(3.162×10⁻²⁶/6.674×10⁻¹¹) = √(4.738×10⁻¹⁶)",
      "result": "m_P = 2.176 × 10⁻⁸ kg ≈ 21.8 μg"
    },
    "physical_interpretation": "The Planck mass is the unique mass constructible from fundamental constants. Unlike Planck length and time (incredibly small), the Planck mass is macroscopically large—about the mass of a flea egg or a grain of sand. This is related to the extreme weakness of gravity."
  },
