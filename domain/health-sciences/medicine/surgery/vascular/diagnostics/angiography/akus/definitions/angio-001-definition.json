  "content": {
    "title": "Conventional Angiography",
    "definition": "Conventional angiography (catheter angiography) is an invasive diagnostic and therapeutic procedure using fluoroscopy and iodinated contrast injection through an arterial catheter to visualize the vascular lumen, remaining the gold standard for vascular imaging resolution and real-time intervention.",
    "clinical_features": {
      "technical_principles": {
        "access": "Percutaneous arterial puncture (femoral, radial, brachial)",
        "guidance": "Fluoroscopy with digital subtraction angiography (DSA)",
        "contrast": "Iodinated contrast injection",
        "imaging": "Real-time visualization of contrast-filled vessels"
      },
      "access_sites": {
        "common_femoral": {
          "most_common": "Standard access for most procedures",
          "technique": "Below inguinal ligament, over femoral head",
          "complications": "Hematoma, pseudoaneurysm, AV fistula"
        },
        "radial": {
          "increasing_use": "Lower bleeding complications",
          "limitations": "Catheter length, vessel size"
        },
        "brachial": "Alternative for upper extremity access",
        "popliteal": "Antegrade access for below-knee interventions"
      },
      "digital_subtraction_angiography": {
        "principle": "Subtracts pre-contrast image from contrast image",
        "advantage": "Removes bone/soft tissue, enhances vessel visualization",
        "limitation": "Motion artifact"
      },
      "indications": {
        "diagnostic": [
          "Suspected PAD when non-invasive tests equivocal",
          "Mesenteric ischemia evaluation",
          "Renal artery stenosis assessment",
          "Trauma evaluation",
          "AVM/malformation mapping"
        ],
        "therapeutic": [
          "Angioplasty/stenting",
          "Thrombolysis",
          "Embolization",
          "Stent-graft placement"
        ]
      },
      "contrast_agents": {
        "iodinated": "Standard - iso-osmolar or low-osmolar preferred",
        "co2": "Alternative for renal insufficiency or iodine allergy",
        "gadolinium": "Rarely used - nephrogenic systemic fibrosis risk"
      },
      "complications": {
        "access_site": ["Hematoma (1-5%)", "Pseudoaneurysm (0.5-2%)", "AV fistula", "Retroperitoneal hemorrhage"],
        "contrast_related": ["Allergic reaction", "Contrast-induced nephropathy (CIN)", "Hyperthyroidism"],
        "procedural": ["Dissection", "Thromboembolism", "Vessel perforation", "Cholesterol embolization"],
        "systemic": "Stroke (cerebral procedures)"
      },
      "contrast_nephropathy_prevention": {
        "risk_factors": "Pre-existing CKD, diabetes, volume depletion, contrast volume",
        "prevention": ["IV hydration (pre and post)", "Minimize contrast volume", "Avoid nephrotoxins", "Consider CO2 angiography"]
      },
      "vs_non_invasive_imaging": {
        "advantages": "Highest resolution, real-time, therapeutic capability",
        "disadvantages": "Invasive, contrast risks, radiation, cost"
      }
    },
