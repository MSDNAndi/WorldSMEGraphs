  "content": {
    "identifier": "DX-020",
    "title": "CTA Protocols in Vascular Surgery",
    "definition": "Computed tomography angiography protocols optimized for different vascular territories and clinical indications.",
    "concepts": [
      {
        "concept_id": "aortic-cta",
        "term": "Aortic CTA Protocol",
        "definition": "CT angiography protocol for evaluation of thoracic and abdominal aortic pathology.",
        "clinical_features": {
          "phases": {
            "non_contrast": "For intramural hematoma, calcification",
            "arterial": "20-25 sec delay, aortic opacification",
            "delayed": "60-70 sec, for endoleak detection"
          },
          "coverage": "Thoracic inlet to femoral heads",
          "contrast": "100-120 mL at 4-5 mL/sec"
        }
      },
      {
        "concept_id": "runoff-cta",
        "term": "Lower Extremity Runoff CTA",
        "definition": "CTA protocol for peripheral arterial disease evaluation from aorta to feet.",
        "clinical_features": {
          "bolus_tracking": "Trigger at abdominal aorta >150 HU",
          "coverage": "Renal arteries to toes",
          "technique": ["Test bolus vs bolus tracking", "Dual-phase for slow flow"],
          "contrast": "100-150 mL at 4 mL/sec"
        }
      },
      {
        "concept_id": "carotid-cta",
        "term": "Carotid CTA Protocol",
        "definition": "CTA protocol for extracranial and intracranial carotid evaluation.",
        "clinical_features": {
          "coverage": "Aortic arch to vertex",
          "timing": "Bolus tracking at aortic arch",
          "collimation": "0.5-0.625 mm for fine detail",
          "contrast": "60-80 mL at 4-5 mL/sec"
        }
      },
      {
        "concept_id": "venous-cta",
        "term": "CT Venography Protocol",
        "definition": "Delayed phase CT for venous thrombosis and compression syndromes.",
        "clinical_features": {
          "timing": "180-240 sec delay",
          "indications": ["DVT", "IVC thrombus", "May-Thurner", "IVCS"],
          "contrast": "150 mL or split bolus technique"
        }
      }
    ],
    "clinical_features": {
      "radiation_reduction": ["Iterative reconstruction", "Tube current modulation", "Low kVp"],
      "contrast_safety": ["eGFR check", "Hydration", "Minimize volume in CKD"]
    },
    "diagnostic_criteria": {
      "quality_metrics": "HU >200 in target vessel, minimal artifact"
    }
  },
