  "content": {
    "title": "Vascular Physical Examination",
    "summary": "The vascular physical examination systematically evaluates arterial, venous, and lymphatic systems through inspection, palpation, and auscultation. It provides immediate diagnostic information and guides further testing.",
    "definition": "A systematic clinical assessment of the vascular system including inspection of skin and tissues, palpation of pulses and masses, and auscultation for bruits to identify vascular pathology",
    "general_assessment": {
      "vital_signs": {
        "blood_pressure": {
          "technique": "Both arms; leg if indicated",
          "significance": {
            "arm_difference": ">20 mmHg suggests subclavian stenosis",
            "elevated": "Risk factor assessment",
            "low": "Consider shock, volume depletion"
          }
        },
        "heart_rate": "Regularity (atrial fibrillation = embolic risk)"
      },
      "general_appearance": [
        "Nutritional status",
        "Skin color and texture",
        "Evidence of tobacco use (staining, odor)",
        "Signs of systemic disease"
      ]
    },
    "arterial_examination": {
      "inspection": {
        "color": {
          "pallor": "Indicates reduced perfusion",
          "rubor": "Reactive hyperemia with dependency",
          "mottling": "Acute ischemia"
        },
        "skin_changes": [
          "Hair loss (chronic ischemia)",
          "Thin, shiny skin",
          "Thickened nails",
          "Ulcers (location, character)"
        ],
        "muscle_atrophy": "Suggests chronic ischemia"
      },
      "palpation": {
        "pulse_grading": {
          "0": "Absent",
          "1": "Diminished",
          "2": "Normal",
          "3": "Bounding"
        },
        "standard_pulses": {
          "upper_extremity": ["Radial", "Ulnar", "Brachial", "Axillary"],
          "lower_extremity": ["Femoral", "Popliteal", "Dorsalis pedis", "Posterior tibial"],
          "neck": ["Carotid (gentle!)", "Temporal"]
        },
        "technique_notes": [
          "Popliteal: flex knee, compress from posterior",
          "Posterior tibial: posterior to medial malleolus",
          "Dorsalis pedis: lateral to extensor hallucis tendon"
        ],
        "capillary_refill": "Normal <2-3 seconds",
        "temperature": "Cool extremity suggests ischemia",
        "aneurysm_assessment": "Femoral, popliteal, abdominal aorta"
      },
      "auscultation": {
        "bruits": {
          "carotid": "Stenosis >50% (though low sensitivity)",
          "subclavian": "Proximal stenosis",
          "abdominal": "Renal artery stenosis, mesenteric, aortoiliac",
          "femoral": "Inflow or local disease"
        },
        "technique": "Bell of stethoscope, light pressure",
        "limitations": "Bruit disappears with >90% stenosis"
      },
      "special_tests": {
        "buergers_test": {
          "technique": "Elevate legs 60° for 1 minute, then dependent",
          "positive": "Pallor with elevation, rubor with dependency",
          "significance": "Suggests advanced ischemia"
        },
        "allen_test": "Assess palmar arch patency",
        "ABI_bedside": "Doppler with BP cuff for ankle-brachial index"
      }
    },
    "venous_examination": {
      "inspection": {
        "varicose_veins": "Dilated, tortuous superficial veins",
        "skin_changes": [
          "Hyperpigmentation (hemosiderin)",
          "Lipodermatosclerosis",
          "Atrophie blanche",
          "Corona phlebectatica (ankle flare)"
        ],
        "edema": "Pitting vs non-pitting, distribution",
        "ulcers": "Typically medial malleolus, shallow, irregular"
      },
      "palpation": {
        "tenderness": "DVT may cause calf tenderness",
        "cord": "Palpable thrombosed vein",
        "edema_assessment": "Grade 1-4 by depth/duration"
      },
      "special_tests": {
        "trendelenburg_test": {
          "technique": "Empty veins by elevation, apply tourniquet, stand",
          "interpretation": "Rapid filling = saphenofemoral incompetence"
        },
        "tap_test": "Transmitted impulse indicates incompetent valve",
        "homan_sign": "Calf pain with dorsiflexion (low sensitivity for DVT)"
      }
    },
    "abdominal_examination": {
      "inspection": "Pulsatile mass, surgical scars",
      "palpation": {
        "aorta": {
          "normal": "2-3 cm, gently pulsatile",
          "aneurysm": ">3 cm, expansile (not transmitted) pulsation"
        },
        "technique": "Deep palpation, both hands straddling aorta"
      },
      "auscultation": "Bruits suggesting renal or mesenteric stenosis"
    },
    "carotid_examination": {
      "inspection": "Visible pulsation, surgical scars",
      "palpation": {
        "caution": "Gentle! Avoid bilateral simultaneous palpation",
        "assess": "Pulse quality, thrill"
      },
      "auscultation": {
        "technique": "Along SCM from clavicle to angle of jaw",
        "significance": "Bruit suggests stenosis (50-95%)"
      }
    },
    "documenting_findings": {
      "pulse_chart": "Standard notation for all examined pulses",
      "wound_description": "Location, size, depth, base, edges",
      "photography": "Serial photos for wound progression"
    }
  },
