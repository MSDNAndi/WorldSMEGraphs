  "content": {
    "title": "Completion Angiography",
    "description": "Intraoperative imaging performed after vascular reconstruction to assess technical adequacy and identify correctable problems.",
    "purpose": [
      "Confirm anastomotic integrity",
      "Identify residual stenosis or thrombus",
      "Assess distal runoff",
      "Evaluate graft configuration",
      "Document baseline for future comparison"
    ],
    "techniques": {
      "fixed_fluoroscopy": "Hybrid OR, high-quality imaging",
      "portable_c_arm": "Standard OR, adequate for most cases",
      "views": "AP, lateral, obliques as needed for anastomoses"
    },
    "findings_requiring_revision": {
      "anastomotic_stenosis": ">30% narrowing",
      "intimal_flap": "Any significant flap",
      "thrombus": "Visible filling defect",
      "graft_kink": "Hemodynamically significant",
      "missed_lesions": "Unrecognized inflow or outflow disease"
    },
    "alternatives": {
      "duplex": "Intraoperative ultrasound for flow assessment",
      "continuous_wave_doppler": "Quick assessment of pulse quality",
      "angioscopy": "Direct visualization (less common)"
    },
    "documentation": "Images archived in medical record and PACS"
  },
