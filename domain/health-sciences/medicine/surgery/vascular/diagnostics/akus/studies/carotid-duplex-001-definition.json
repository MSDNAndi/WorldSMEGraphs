{
  "@context": "https://schema.org/",
  "@type": "MedicalTest",
  "@id": "aku:vascular:diagnostics:duplex-ultrasound-carotid",
  "name": "Carotid Duplex Ultrasound",
  "alternateName": [
    "Carotid Doppler",
    "Carotid Ultrasound",
    "Duplex Scanning of Carotids"
  ],
  "description": "Non-invasive imaging modality combining B-mode ultrasound (anatomic) with Doppler flow analysis (hemodynamic) to assess carotid artery stenosis. First-line screening tool for carotid disease. Velocity criteria correlate with angiographic stenosis.",
  "code": [
    {
      "@type": "MedicalCode",
      "codeValue": "93880",
      "codingSystem": "CPT"
    },
    {
      "@type": "MedicalCode",
      "codeValue": "418832009",
      "codingSystem": "SNOMED-CT",
      "name": "Duplex ultrasound of carotid arteries"
    }
  ],
  "classification": {
    "domain_path": "health-sciences/medicine/surgery/vascular/diagnostics",
    "type": "definition",
    "subtype": "vascular_imaging",
    "difficulty": "intermediate",
    "board_yield": "HIGH"
  },
  "components": {
    "b_mode": {
      "purpose": "Gray-scale anatomic imaging",
      "assessment": [
        "Plaque morphology (echogenicity)",
        "Plaque surface (smooth, irregular, ulcerated)",
        "Vessel anatomy"
      ]
    },
    "color_doppler": {
      "purpose": "Visualize blood flow patterns",
      "assessment": "Direction, turbulence, aliasing at stenosis"
    },
    "pulsed_wave_doppler": {
      "purpose": "Quantify flow velocities",
      "measurements": [
        "Peak systolic velocity (PSV)",
        "End-diastolic velocity (EDV)",
        "ICA/CCA ratio"
      ]
    }
  },
  "velocity_criteria_stenosis": {
    "sru_consensus_2003": {
      "normal": "PSV <125 cm/s",
      "less_than_50": "PSV <125 cm/s, no spectral broadening",
      "50_to_69": "PSV 125-230 cm/s, EDV 40-100 cm/s",
      "greater_than_70": "PSV >230 cm/s, EDV >100 cm/s",
      "near_occlusion": "High, low, or undetectable velocities",
      "total_occlusion": "No detectable flow"
    },
    "ica_cca_ratio": {
      "50_stenosis": "Ratio >2.0",
      "70_stenosis": "Ratio >4.0"
    }
  },
  "plaque_characteristics": {
    "echogenicity": {
      "echolucent": "Soft plaque, lipid-rich, higher stroke risk",
      "echogenic": "Calcified, fibrous, more stable"
    },
    "surface": {
      "smooth": "Lower embolic risk",
      "irregular_ulcerated": "Higher embolic risk"
    },
    "heterogeneous": "Mixed echogenicity, intraplaque hemorrhage"
  },
  "technique": {
    "probe": "Linear high-frequency (5-10 MHz)",
    "positioning": "Supine with head turned away",
    "vessels_examined": [
      "Common carotid artery (CCA)",
      "Internal carotid artery (ICA)",
      "External carotid artery (ECA)",
      "Vertebral arteries"
    ],
    "angle_correction": "Doppler angle <60 degrees for accurate velocities"
  },
  "ica_vs_eca_differentiation": {
    "ica": {
      "size": "Usually larger",
      "position": "Posterolateral",
      "branches": "No cervical branches",
      "waveform": "Low resistance (diastolic flow)"
    },
    "eca": {
      "size": "Usually smaller",
      "position": "Anteromedial",
      "branches": "Multiple cervical branches",
      "waveform": "High resistance (triphasic)",
      "temporal_tap": "Oscillations visible on ECA"
    }
  },
  "limitations": [
    "Operator dependent",
    "Body habitus (short neck, high bifurcation)",
    "Severe calcification (acoustic shadowing)",
    "Tandem lesions may be missed",
    "Does not image intracranial circulation"
  ],
  "clinical_pearls": [
    "PSV >230 cm/s = >70% stenosis (surgical threshold)",
    "ICA is low resistance (brain needs constant flow); ECA is high resistance",
    "Temporal tap causes oscillations on ECA, not ICA - helps differentiation",
    "Echolucent plaque = soft, unstable, higher stroke risk"
  ],
  "semantic_relations": {
    "broader": [
      "aku:vascular:diagnostics:ultrasound"
    ],
    "narrower": [],
    "related": [
      "aku:vascular:carotid:stenosis",
      "aku:vascular:procedures:cea",
      "aku:vascular:procedures:cas"
    ]
  },
  "learning_objectives": [
    "Apply velocity criteria to grade carotid stenosis severity",
    "Differentiate ICA from ECA based on anatomic and hemodynamic features",
    "Describe plaque characteristics that indicate higher stroke risk"
  ],
