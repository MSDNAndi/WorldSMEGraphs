  "content": {
    "title": "Intravascular Lithotripsy (IVL)",
    "definition": "Endovascular technique using sonic pressure waves to fracture circumferential and deep calcium within the arterial wall, facilitating vessel expansion without the limitations of traditional calcified plaque treatment.",
    "mechanism": {
      "technology": "Catheter-mounted lithotripsy emitters",
      "energy": "Sonic pressure waves propagated through vessel",
      "effect": "Fractures both intimal and medial calcium",
      "advantage": "Works on deep/medial calcium that atherectomy cannot reach"
    },
    "indications": {
      "peripheral": [
        "Severely calcified femoropopliteal lesions",
        "Calcified iliac disease",
        "Failed or suboptimal balloon angioplasty"
      ],
      "aortic": [
        "Calcified landing zones for EVAR/TEVAR",
        "Aortoiliac calcification preventing graft expansion"
      ],
      "coronary": "Calcified coronary lesions"
    },
    "technique": {
      "sizing": "1:1 with reference vessel diameter",
      "delivery": "Standard 0.014\" or 0.035\" platform",
      "activation": "Pulses delivered during balloon inflation",
      "cycles": "Multiple pulse cycles per location"
    },
    "advantages_over_atherectomy": [
      "Addresses medial calcium (not just intimal)",
      "No debris generation",
      "Lower perforation risk",
      "Works through vessel wall, not just lumen"
    ],
    "limitations": [
      "Cost",
      "Requires balloon contact with vessel wall",
      "May still need adjunctive stenting"
    ],
    "outcomes": {
      "acute_gain": "Improved luminal expansion",
      "patency": "Ongoing studies",
      "complications": "Low perforation rate"
    },
    "terminology": {
      "snomed_ct": "410024004",
      "icd_10": "I70.25",
      "cpt": "37225"
    }
  },
  "pedagogical": {
