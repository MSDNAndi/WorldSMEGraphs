  "content": {
    "title": "Lower Extremity Amputation",
    "definition": "Lower extremity amputation is the surgical removal of part or all of the limb, performed when tissue is non-viable or unsalvageable due to critical limb ischemia, infection, trauma, or malignancy, with level selection based on healing potential and functional outcome.",
    "clinical_features": {
      "indications": {
        "critical_limb_ischemia": "Non-reconstructable arterial disease with tissue loss",
        "infection": "Life-threatening sepsis, wet gangrene, osteomyelitis",
        "trauma": "Mangled extremity, unreconstructable injury",
        "malignancy": "Tumor requiring wide excision",
        "non_functional_limb": "Severe deformity, chronic non-healing wounds"
      },
      "amputation_levels": {
        "toe_amputation": {
          "types": "Distal phalanx, ray amputation",
          "healing_potential": "Good with adequate forefoot perfusion",
          "function": "Minimal impact on ambulation"
        },
        "transmetatarsal": {
          "level": "Through metatarsal shafts",
          "indication": "Multiple toe gangrene, forefoot infection",
          "pros": "Preserves heel for weight-bearing",
          "cons": "Requires adequate plantar flap, risk of equinus"
        },
        "below_knee_amputation": {
          "synonym": "BKA, transtibial",
          "level": "10-15cm below tibial tuberosity",
          "indication": "Extensive forefoot/ankle disease, knee salvageable",
          "prosthetic_potential": "Excellent - preserves knee (crucial for ambulation)",
          "energy_cost": "40-60% increase in walking energy"
        },
        "above_knee_amputation": {
          "synonym": "AKA, transfemoral",
          "level": "10-15cm above knee joint",
          "indication": "BKA not feasible (knee flexion contracture, insufficient tissue)",
          "prosthetic_potential": "Good but less than BKA",
          "energy_cost": "65-100% increase in walking energy"
        },
        "hip_disarticulation": {
          "level": "Through hip joint",
          "indication": "Extensive thigh disease, tumor",
          "prosthetic": "Difficult, high energy cost"
        }
      },
      "level_selection": {
        "clinical_assessment": "Tissue viability, infection extent, joint function",
        "perfusion_assessment": ["TcPO2 (>30-40 mmHg favors healing)", "ABI", "Toe pressures", "Doppler waveforms"],
        "principles": {
          "save_knee_if_possible": "BKA has much better prosthetic outcomes than AKA",
          "adequate_tissue": "Healthy flaps for wound closure",
          "control_infection": "May require initial guillotine, later revision"
        }
      },
      "surgical_principles": {
        "flaps": {
          "bka": "Long posterior flap (preferred) or fish-mouth",
          "aka": "Fish-mouth (equal anterior/posterior) or myoplasty"
        },
        "bone_management": "Smooth edges, appropriate length",
        "hemostasis": "Ligate major vessels, control bleeding",
        "nerve_management": "Identify, ligate, allow retraction",
        "wound_closure": "Tension-free, may leave open if infected"
      },
      "complications": {
        "wound": "Dehiscence, infection, delayed healing",
        "stump": "Hematoma, contracture, neuroma",
        "phantom": "Phantom sensation, phantom pain",
        "prosthetic": "Skin breakdown, poor fit",
        "psychological": "Depression, grief, body image issues"
      },
      "rehabilitation": {
        "preprosthetic": "Wound healing, stump shaping, ROM exercises",
        "prosthetic_fitting": "2-6 weeks after healing (BKA), longer for AKA",
        "ambulation_training": "Physical therapy, gait training",
        "functional_goals": "Community ambulation if possible"
      },
      "outcomes": {
        "perioperative_mortality": "10-15% (reflects overall morbidity)",
        "healing_rate": "BKA: 70-90%, AKA: 80-95%",
        "prosthetic_use": "BKA: 70-80%, AKA: 30-50%",
        "contralateral_amputation": "30% at 5 years (PAD population)"
      }
    },
