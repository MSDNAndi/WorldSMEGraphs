  "content": {
    "term": "Patch Angioplasty",
    "synonyms": ["Vein Patch Angioplasty", "Patch Closure", "Bovine Pericardial Patch"],
    "definition": "A surgical technique involving the suture of a patch of autologous or prosthetic material to an arteriotomy site to widen the lumen and prevent stenosis at the closure site. Most commonly used in carotid endarterectomy, femoral endarterectomy, and arterial repairs.",
    "indications": [
      "Carotid endarterectomy closure (standard of care)",
      "Common femoral artery endarterectomy",
      "Small caliber arteries at risk for stenosis with primary closure",
      "Arteriotomy in diseased vessel wall",
      "Traumatic arterial repair when primary repair would narrow lumen"
    ],
    "patch_materials": {
      "autologous": {
        "saphenous_vein": {
          "advantages": [
            "Excellent handling characteristics",
            "Infection resistance",
            "Low thrombogenicity"
          ],
          "disadvantages": [
            "Requires harvest site",
            "Potential for aneurysmal degeneration",
            "May need for future bypass"
          ]
        },
        "external_jugular_vein": {
          "advantages": "Same field, easy harvest",
          "disadvantages": "Smaller patch size"
        }
      },
      "prosthetic": {
        "bovine_pericardium": {
          "advantages": [
            "Readily available",
            "Good handling",
            "Low aneurysm risk",
            "Infection resistance better than synthetic"
          ],
          "disadvantages": ["Cost", "Theoretical prion risk"]
        },
        "dacron": {
          "advantages": ["Readily available", "Consistent quality"],
          "disadvantages": [
            "Higher infection risk",
            "Pseudointimal hyperplasia"
          ]
        },
        "ptfe": {
          "advantages": ["Low thrombogenicity", "Readily available"],
          "disadvantages": ["Suture line bleeding", "Stiff handling"]
        }
      }
    },
    "technique": {
      "patch_sizing": [
        "Cut patch to appropriate width (usually 8-10 mm for carotid)",
        "Taper ends to avoid dog ears",
        "Length to cover entire arteriotomy plus margin"
      ],
      "suturing": [
        "Start at one apex with locking suture",
        "Run continuous 5-0 or 6-0 polypropylene",
        "Close opposite apex last",
        "Alternatively: start at both apices, meet in middle"
      ],
      "completion": [
        "Backbleed before completing closure",
        "Release clamps in sequence (internal carotid last for CEA)",
        "Check for hemostasis"
      ]
    },
    "outcomes": {
      "carotid_endarterectomy": [
        "Reduced restenosis vs primary closure",
        "Lower perioperative stroke rate",
        "Standard of care per guidelines"
      ],
      "femoral_endarterectomy": [
        "Maintains adequate lumen diameter",
        "Reduces early thrombosis risk"
      ]
    },
    "complications": [
      "Patch rupture (rare, usually vein patch)",
      "Patch infection",
      "Pseudoaneurysm formation",
      "Suture line bleeding"
    ]
  },
