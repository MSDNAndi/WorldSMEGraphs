  "content": {
    "identifier": "PAD-032",
    "title": "Subintimal Angioplasty",
    "definition": "An endovascular technique for crossing chronic total occlusions by intentionally dissecting into the subintimal plane, tracking through the dissection plane, and re-entering the true lumen distally.",
    "concepts": [
      {
        "concept_id": "technique",
        "term": "Technique",
        "definition": "How to perform subintimal angioplasty.",
        "clinical_features": {
          "entry": "Create subintimal plane with looped wire at proximal cap",
          "tracking": "Advance wire/catheter in subintimal space",
          "reentry": "Re-enter true lumen distal to occlusion",
          "reentry_devices": "Outback, Pioneer, or spontaneous reentry"
        }
      },
      {
        "concept_id": "indications",
        "term": "Indications",
        "definition": "When to use subintimal approach.",
        "clinical_features": {
          "cto": "Long segment chronic total occlusions",
          "failed_intraluminal": "When true lumen crossing fails",
          "sfa_popliteal": "Most commonly used in SFA/popliteal",
          "iliac": "Can be used in iliac but more risky"
        }
      },
      {
        "concept_id": "outcomes",
        "term": "Outcomes",
        "definition": "Results of subintimal angioplasty.",
        "clinical_features": {
          "technical_success": "80-90% successful recanalization",
          "patency": "Primary patency 50-60% at 1 year in SFA",
          "limb_salvage": "Good limb salvage rates (80%+)",
          "role": "Bridge to healing in CLI, alternative to bypass"
        }
      },
      {
        "concept_id": "complications",
        "term": "Complications",
        "definition": "Potential adverse events.",
        "clinical_features": {
          "perforation": "Wire or catheter perforation",
          "dissection_extension": "Dissection extending beyond occlusion",
          "failed_reentry": "Inability to re-enter true lumen"
        }
      }
    ],
    "clinical_features": {
      "historical": "First described by Bolia in 1989",
      "current_role": "Part of endovascular toolbox for CTOs"
    }
  },
