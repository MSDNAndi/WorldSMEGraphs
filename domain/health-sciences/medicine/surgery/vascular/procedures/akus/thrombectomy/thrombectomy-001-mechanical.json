  "content": {
    "title": "Percutaneous Mechanical Thrombectomy",
    "description": "Catheter-based removal of arterial or venous thrombus using mechanical devices that fragment, aspirate, or remove clot without open surgery.",
    "device_categories": {
      "aspiration": "Penumbra, Indigo - large bore aspiration",
      "rheolytic": "AngioJet - saline jet creates vacuum",
      "rotational": "Rotarex, Cleaner - rotating mechanism fragments clot",
      "combination": "Multiple mechanisms in single device"
    },
    "indications": {
      "arterial": ["ALI (acute limb ischemia)", "Graft thrombosis", "Native artery thrombosis"],
      "venous": ["DVT", "Iliofemoral thrombosis", "Phlegmasia"]
    },
    "angiojet_considerations": {
      "mechanism": "Rheolytic thrombectomy via Venturi effect",
      "hemolysis": "Can cause significant hemolysis",
      "arrhythmia": "Adenosine release - avoid near heart",
      "run_time": "Limit to <480 seconds total"
    },
    "advantages": ["Minimally invasive", "Immediate result", "Single session treatment"],
    "disadvantages": ["Distal embolization risk", "Device cost", "Learning curve"]
  },
