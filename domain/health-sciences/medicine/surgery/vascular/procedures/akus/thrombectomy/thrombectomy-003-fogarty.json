  "content": {
    "title": "Surgical (Fogarty) Balloon Thrombectomy",
    "description": "Open surgical technique using an embolectomy balloon catheter to remove arterial thrombus, first described by Thomas Fogarty in 1963.",
    "indications": [
      "Acute limb ischemia (Rutherford IIa/IIb)",
      "Acute arterial embolism",
      "Thrombosed bypass graft",
      "Failed endovascular thrombectomy"
    ],
    "catheter_types": {
      "standard_fogarty": "Single balloon, various sizes (2Fr-7Fr)",
      "adherent_clot": "Specialized balloon surface",
      "over_the_wire": "Allows wire guidance"
    },
    "technique": {
      "exposure": "Arteriotomy at accessible site",
      "passage": "Deflated balloon passed beyond clot",
      "inflation": "Balloon inflated gently",
      "withdrawal": "Catheter withdrawn with thrombus",
      "repeat": "Until no further clot retrieved",
      "completion": "Arteriography to confirm result"
    },
    "complications": {
      "intimal_injury": "Most common, from over-inflation",
      "distal_embolization": "Incomplete retrieval",
      "vessel_rupture": "Over-inflation in small vessels",
      "arteriovenous_fistula": "Wrong passage into venous system"
    },
    "keys_to_success": [
      "Size balloon appropriately",
      "Gentle inflation",
      "Multiple passes if needed",
      "Completion angiography"
    ]
  },
