  "content": {
    "title": "Radiofrequency Ablation of Saphenous Veins",
    "description": "Minimally invasive endovenous thermal ablation using radiofrequency energy to heat and occlude incompetent superficial veins.",
    "mechanism": "Radiofrequency catheter heats vein wall to 120°C, causing collagen contraction, endothelial damage, and fibrotic occlusion",
    "device": {
      "ClosureFast": "Segmental ablation, 7cm heating element",
      "technique": "3-second heating cycles, overlapping segments",
      "target_temperature": "120°C"
    },
    "procedure": {
      "access": "Percutaneous, ultrasound-guided below-knee",
      "positioning": "Catheter tip 2cm from SFJ (or SSV junction)",
      "tumescent": "Perivenous saline/lidocaine for compression and heat sink",
      "ablation": "Sequential 20-second cycles with 3-second pulses"
    },
    "advantages": [
      "Office-based procedure",
      "Local anesthesia only",
      "Minimal recovery time",
      "High success rates (>95% closure)"
    ],
    "contraindications": {
      "absolute": ["Acute DVT", "Acute superficial thrombophlebitis extending to junction"],
      "relative": ["Very small veins (<3mm)", "Very tortuous segments"]
    },
    "outcomes": {
      "closure_rate": ">95% at 5 years",
      "complications": "Thrombotic extension (EHIT) 1-2%, nerve injury rare"
    }
  },
