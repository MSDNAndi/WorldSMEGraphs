  "content": {
    "title": "Cyanoacrylate Vein Closure (VenaSeal)",
    "description": "Non-thermal, non-tumescent endovenous ablation using medical-grade cyanoacrylate adhesive to occlude incompetent saphenous veins.",
    "mechanism": "Cyanoacrylate polymerizes on contact with blood, mechanically sealing vein. Inflammatory reaction leads to fibrosis.",
    "procedure": {
      "access": "Percutaneous, ultrasound-guided",
      "positioning": "Catheter tip 5cm from SFJ",
      "compression": "External ultrasound compression during injection",
      "injection": "0.1ml injections at 3cm intervals"
    },
    "advantages": {
      "no_tumescent": "Simplifies procedure, no multiple injections",
      "no_thermal": "No risk of thermal injury",
      "immediate": "Immediate ambulation, no compression stockings required",
      "single_access": "One percutaneous access point"
    },
    "disadvantages": {
      "cost": "Higher device cost than thermal ablation",
      "foreign_body": "Permanent implant left in body",
      "phlebitis": "Inflammatory reaction common (may be symptomatic)"
    },
    "clinical_data": {
      "VeClose_trial": "97.2% closure at 3 years, non-inferior to RFA",
      "complications": "Low DVT rate, phlebitis 3-4%"
    },
    "contraindications": ["Cyanoacrylate allergy", "Acute SVT", "Acute DVT"]
  },
