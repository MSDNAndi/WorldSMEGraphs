  "content": {
    "title": "EVAR Anatomic Planning and Device Selection",
    "description": "Critical pre-operative assessment of aortic anatomy for endovascular aneurysm repair to ensure appropriate patient and device selection.",
    "anatomic_requirements": {
      "proximal_neck": {
        "length": "≥15mm (10mm for some devices)",
        "diameter": "18-32mm (device dependent)",
        "angulation": "<60° (suprarenal), <45° (infrarenal)",
        "thrombus": "Minimal (<2mm circumferential)",
        "calcification": "Minimal circumferential"
      },
      "distal_landing_zones": {
        "iliac_diameter": "Device dependent (typically 8-25mm)",
        "iliac_length": "≥15mm for seal",
        "tortuosity": "Assess for delivery sheath passage"
      }
    },
    "imaging_protocol": {
      "cta": "1-2mm slices, arterial phase, from diaphragm to femorals",
      "3d_reconstruction": "Centerline measurements essential",
      "software": "TeraRecon, Aquarius, 3Mensio for planning"
    },
    "measurements": {
      "diameters": "Outer wall to outer wall on axial images",
      "lengths": "Centerline measurements",
      "angles": "Infrarenal and suprarenal aortic angles"
    },
    "device_selection": {
      "considerations": ["Neck anatomy", "Iliac access", "Physician experience", "Cost", "Availability"],
      "available_platforms": ["Gore Excluder", "Medtronic Endurant/ABRE", "Cook Zenith", "Endologix"]
    },
    "access_planning": "Evaluate iliac/femoral caliber, calcification, tortuosity for sheath delivery"
  },
