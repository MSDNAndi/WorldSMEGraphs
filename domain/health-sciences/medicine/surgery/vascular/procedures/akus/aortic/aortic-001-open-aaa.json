  "content": {
    "title": "Open Abdominal Aortic Aneurysm Repair",
    "description": "Traditional surgical repair of infrarenal AAA via laparotomy, interposition grafting, and exclusion of the aneurysm sac.",
    "indications": {
      "elective": ["Aneurysm ≥5.5cm (men) or ≥5.0cm (women)", "Rapid expansion (>0.5cm/6 months)", "Symptomatic"],
      "emergent": ["Rupture", "Impending rupture"]
    },
    "approach_options": {
      "transperitoneal": "Standard midline or paramedian incision, most common",
      "retroperitoneal": "Left flank, preferred for hostile abdomen, juxtarenal extension"
    },
    "key_steps": [
      "Proximal aortic control (infrarenal or suprarenal)",
      "Iliac artery control",
      "Aneurysm opening and back-bleeding control",
      "Graft sizing and anastomosis (tube vs bifurcated)",
      "Oversewing lumbars and IMA assessment",
      "Aneurysm sac closure over graft"
    ],
    "graft_types": {
      "tube": "Infrarenal to aortic bifurcation",
      "bifurcated": "Aortobi-iliac or aortobifemoral"
    },
    "perioperative_considerations": {
      "ima_reimplantation": "Consider if back-pressure <40mmHg, absent meandering mesenteric",
      "renal_protection": "Minimal suprarenal clamp time, cold perfusion if prolonged",
      "declamping_hypotension": "Volume loading, gradual unclamping"
    },
    "outcomes": {
      "mortality_elective": "2-5%",
      "mortality_ruptured": "40-70%"
    }
  },
