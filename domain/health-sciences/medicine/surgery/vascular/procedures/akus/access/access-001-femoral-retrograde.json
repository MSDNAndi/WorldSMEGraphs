  "content": {
    "title": "Retrograde Common Femoral Artery Access",
    "description": "Standard arterial access technique for most endovascular interventions, utilizing the common femoral artery with ultrasound or fluoroscopic guidance.",
    "anatomy": {
      "target": "CFA over femoral head, above profunda origin",
      "landmarks": "Inguinal ligament, femoral head fluoroscopically",
      "boundaries": "Above: EIA (calcified, difficult to compress), Below: bifurcation (PSA risk)"
    },
    "technique": {
      "micropuncture": "21G needle, 0.018 wire, preferred approach",
      "standard": "18G needle, 0.035 wire",
      "ultrasound": "Real-time guidance recommended, improves first-pass success"
    },
    "sheath_selection": {
      "diagnostic": "4-5Fr",
      "intervention": "6-7Fr typical",
      "large_bore": "12-24Fr for EVAR, aortic work"
    },
    "complications": {
      "hematoma": "Most common",
      "pseudoaneurysm": "0.5-2%",
      "avf": "Rare",
      "retroperitoneal_hemorrhage": "High puncture"
    },
    "closure_options": ["Manual compression", "Compression device", "Vascular closure devices"]
  },
