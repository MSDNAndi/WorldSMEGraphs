  "content": {
    "title": "Transradial Arterial Access",
    "description": "Wrist access via the radial artery, increasingly used in peripheral intervention due to lower bleeding complications and patient comfort.",
    "advantages": [
      "Very low bleeding/access site complications",
      "Early ambulation",
      "Dual blood supply to hand (ulnar artery)",
      "Patient preference",
      "Lower cost (no closure device needed)"
    ],
    "limitations": [
      "Vessel size limits sheath to 5-7Fr",
      "Learning curve",
      "Longer working distance for peripheral work",
      "May require specialized long-length equipment"
    ],
    "technique": {
      "allen_test": "Pre-procedural assessment of dual hand circulation",
      "positioning": "Arm extended, wrist slightly hyperextended",
      "access": "Ultrasound guidance helpful",
      "spasmolysis": "Verapamil/nitroglycerin cocktail"
    },
    "applications": {
      "diagnostic": "Excellent for diagnostic arteriography",
      "intervention": "Limited to smaller sheath interventions",
      "carotid": "Emerging option for CAS"
    },
    "complications": {
      "radial_artery_occlusion": "Most common, usually asymptomatic",
      "hematoma": "Minor, easily controlled",
      "hand_ischemia": "Very rare if Allen test normal"
    }
  },
