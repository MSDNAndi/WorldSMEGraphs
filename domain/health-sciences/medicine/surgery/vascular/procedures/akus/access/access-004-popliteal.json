  "content": {
    "title": "Popliteal Artery Access (Retrograde)",
    "description": "Retrograde access via the popliteal artery for recanalization of SFA occlusions when antegrade approach has failed.",
    "indications": [
      "Failed antegrade CTO crossing",
      "Flush SFA occlusion",
      "Distal reconstitution only via popliteal",
      "SAFARI/CART technique"
    ],
    "technique": {
      "positioning": "Prone or lateral decubitus",
      "guidance": "Ultrasound mandatory",
      "target": "P1 segment above knee (larger caliber)",
      "puncture": "Micropuncture technique essential"
    },
    "key_steps": [
      "Identify popliteal artery with ultrasound",
      "Confirm relation to vein (artery typically deeper)",
      "21G micropuncture needle under real-time US",
      "0.018 wire, upsized to 4-5Fr sheath",
      "Retrograde crossing of CTO"
    ],
    "complications": {
      "hematoma": "Limited space, compressible",
      "av_fistula": "Proximity of vein",
      "pseudoaneurysm": "Post-procedural monitoring"
    },
    "advantages": "Allows bidirectional approach to complex lesions",
    "closure": "Manual compression, Gelfoam/vascular closure device off-label"
  },
