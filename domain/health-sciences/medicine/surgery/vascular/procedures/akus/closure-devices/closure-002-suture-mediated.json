  "content": {
    "title": "Suture-Mediated Vascular Closure Devices",
    "description": "Devices that deploy sutures to close arteriotomies percutaneously, allowing immediate hemostasis and ambulation.",
    "mechanism": "Needle-based systems place sutures around arteriotomy edges, which are tied extravascularly to achieve closure",
    "primary_devices": {
      "Perclose_ProGlide": {
        "mechanism": "Deploys single monofilament suture",
        "sizing": "Up to 8Fr single, larger with pre-close technique",
        "suture": "Polypropylene"
      },
      "Perclose_ProStyle": {
        "mechanism": "Similar to ProGlide, earlier generation",
        "note": "Largely replaced by ProGlide"
      }
    },
    "pre_close_technique": {
      "indication": "Large bore access (>8Fr)",
      "method": "Deploy devices BEFORE large sheath placement",
      "number": "Two devices at 10 and 2 o'clock for up to 18Fr; additional for larger",
      "closure": "Tie sutures at end of procedure"
    },
    "advantages": [
      "Immediate hemostasis",
      "Early ambulation (2-4 hours)",
      "Can be used with anticoagulation",
      "Enables large-bore access closure"
    ],
    "contraindications": ["Severely calcified CFA", "Small CFA (<5mm)", "Access above inguinal ligament", "Scarred groin (relative)"],
    "complications": {
      "failure": "2-5%",
      "infection": "Rare",
      "stenosis": "Rare",
      "arterial_injury": "During deployment"
    }
  },
