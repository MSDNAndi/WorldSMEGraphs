  "content": {
    "title": "Collagen-Based Vascular Closure Devices",
    "description": "Devices that use collagen plugs to achieve hemostasis by promoting thrombus formation at the arteriotomy site.",
    "mechanism": "Deploys bioabsorbable collagen sponge/plug against arterial wall; promotes platelet aggregation and thrombus",
    "primary_devices": {
      "AngioSeal": {
        "mechanism": "Collagen plug + intravascular anchor + suture",
        "sizing": "6Fr and 8Fr",
        "absorption": "60-90 days"
      },
      "Mynx": {
        "mechanism": "PEG sealant injected into tissue tract",
        "sizing": "5Fr to 7Fr",
        "features": "No intravascular component"
      }
    },
    "advantages": [
      "Easy to deploy",
      "High success rate (>95%)",
      "Earlier ambulation than manual compression",
      "Lower failure rate than suture-based in some studies"
    ],
    "limitations": [
      "Maximum sheath size limited (usually 8Fr)",
      "Cannot use at same site for 90 days (AngioSeal)",
      "Collagen left in tissue track"
    ],
    "contraindications": [
      "Small CFA (<4mm for 6Fr)",
      "Access not in CFA",
      "Previous VCD at site (relative)",
      "Severe calcification"
    ],
    "complications": {
      "embolization": "Anchor embolization rare but serious",
      "infection": "Rare",
      "pseudoaneurysm": "2-3%"
    }
  },
  "relationships": {
    "related_to": ["vasc:procedures:closure-002-suture-mediated", "vasc:procedures:closure-001-manual"],
