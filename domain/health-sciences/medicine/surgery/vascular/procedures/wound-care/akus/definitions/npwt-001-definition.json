  "content": {
    "title": "Negative Pressure Wound Therapy (NPWT)",
    "definition": "Wound management technique using controlled sub-atmospheric pressure to promote healing through removal of exudate, reduction of edema, and stimulation of granulation tissue formation.",
    "mechanism_of_action": {
      "primary_effects": [
        "Fluid removal from wound bed",
        "Reduction of local edema",
        "Mechanical tissue deformation (macrodeformation)",
        "Cellular stretch promoting proliferation (microdeformation)"
      ],
      "secondary_effects": [
        "Reduced bacterial burden",
        "Increased local blood flow",
        "Enhanced granulation tissue formation"
      ]
    },
    "indications": {
      "vascular_related": [
        "Diabetic foot ulcers post-debridement",
        "Post-amputation wound complications",
        "Groin wound complications (lymph leak, dehiscence)",
        "Infected bypass graft wounds"
      ],
      "general": [
        "Chronic wounds",
        "Acute traumatic wounds",
        "Skin graft bolstering",
        "Open abdomen management"
      ]
    },
    "contraindications": {
      "absolute": [
        "Untreated osteomyelitis",
        "Malignancy in wound",
        "Unexplored fistulas"
      ],
      "relative": [
        "Exposed vessels (requires protective barrier)",
        "Exposed bowel",
        "Active bleeding"
      ]
    },
    "technique": {
      "pressure_settings": "-75 to -125 mmHg typical",
      "mode": "Continuous or intermittent",
      "dressing_changes": "Every 48-72 hours typically",
      "foam_vs_gauze": "Foam for most; gauze for tunneling/undermining"
    },
    "vascular_considerations": {
      "exposed_vessels": "Require protective barrier (muscle, omentum, or non-adherent layer)",
      "graft_infections": "May be used as bridge to definitive management",
      "lymph_complications": "Excellent for lymphoceles and lymph leaks"
    },
    "outcomes": {
      "healing_rates": "Improved compared to standard dressings",
      "time_to_closure": "Reduced",
      "graft_take": "Improved skin graft success"
    },
    "terminology": {
