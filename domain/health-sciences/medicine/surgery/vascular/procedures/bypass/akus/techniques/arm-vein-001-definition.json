  "content": {
    "term": "Arm Vein Bypass",
    "synonyms": ["Upper Extremity Vein Conduit", "Arm Vein Graft", "Basilic Vein Conduit", "Cephalic Vein Conduit"],
    "definition": "Use of arm veins (basilic, cephalic, or brachial) as conduit for lower extremity arterial bypass when great saphenous vein is unavailable or inadequate. Arm veins are the preferred alternative conduit to GSV, superior to prosthetic grafts for infrainguinal bypass.",
    "conduit_hierarchy": {
      "preferred_order": [
        "1. Ipsilateral great saphenous vein (GSV)",
        "2. Contralateral GSV",
        "3. Arm vein (single segment or spliced)",
        "4. Small saphenous vein (SSV)",
        "5. Prosthetic with adjuncts (for above-knee only)"
      ],
      "arm_over_prosthetic": "Arm vein patency significantly better than prosthetic for infrapopliteal bypass"
    },
    "arm_vein_options": {
      "basilic_vein": {
        "location": "Medial upper arm, deep to fascia",
        "caliber": "Usually 3-4 mm, often largest arm vein",
        "length": "~25 cm",
        "advantages": ["Larger caliber", "Usually good quality"],
        "disadvantages": ["Deeper dissection required", "More branches"]
      },
      "cephalic_vein": {
        "location": "Lateral upper arm, superficial",
        "caliber": "Usually 2.5-3.5 mm",
        "length": "~30 cm (extends to forearm)",
        "advantages": ["Superficial, easy harvest", "Long potential length"],
        "disadvantages": ["Often smaller caliber", "May have sclerosis from IVs"]
      },
      "brachial_veins": {
        "location": "Deep, paired veins alongside brachial artery",
        "caliber": "Variable",
        "use": "Rarely used, technically challenging"
      }
    },
    "preoperative_assessment": {
      "duplex_mapping": [
        "Measure vein diameter (minimum 2.5-3.0 mm)",
        "Assess for sclerosis, prior venipuncture damage",
        "Mark course on skin",
        "Evaluate both arms"
      ],
      "protect_veins": "Avoid IVs and blood draws from arm veins in PAD patients"
    },
    "technique": {
      "harvest": [
        "Longitudinal incision over vein course",
        "Ligate branches carefully (prevent avulsion)",
        "Distend to check for leaks",
        "Can harvest endoscopically"
      ],
      "configuration": [
        "Single segment if adequate length",
        "Spliced vein (combined segments) for longer bypasses",
        "Reversed or non-reversed with valve lysis"
      ],
      "splicing": [
        "End-to-end anastomosis of vein segments",
        "Spatulated, beveled anastomosis",
        "Match caliber at anastomosis"
      ]
    },
    "outcomes": {
      "patency": [
        "5-year patency: 50-65%",
        "Better than prosthetic for infrapopliteal",
        "Inferior to single-segment GSV"
      ],
      "limb_salvage": "70-80% at 5 years",
      "factors_affecting_outcomes": [
        "Single segment better than spliced",
        "Larger caliber better",
        "Quality of vein (no sclerosis)"
      ]
    }
  },
