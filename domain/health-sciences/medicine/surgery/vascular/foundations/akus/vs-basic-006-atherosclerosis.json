  "content": {
    "title": "Atherosclerosis: Foundation of Vascular Disease",
    "summary": "Atherosclerosis is a chronic inflammatory disease of arteries characterized by lipid accumulation and plaque formation, representing the most common cause of arterial occlusive disease.",
    "pathogenesis": {
      "stages": [
        {
          "stage": "Endothelial dysfunction",
          "description": "Initial injury from risk factors causes endothelial activation",
          "key_events": ["Increased permeability", "Expression of adhesion molecules", "Reduced NO production"]
        },
        {
          "stage": "Fatty streak formation",
          "description": "LDL accumulation and oxidation in intima",
          "key_events": ["Monocyte recruitment", "Foam cell formation", "Early inflammatory response"]
        },
        {
          "stage": "Intermediate lesion",
          "description": "Organized lipid core with smooth muscle migration",
          "key_events": ["SMC proliferation", "Matrix synthesis", "Lipid core expansion"]
        },
        {
          "stage": "Fibrous plaque",
          "description": "Mature plaque with fibrous cap",
          "key_events": ["Collagen-rich cap formation", "Necrotic core development", "Calcification"]
        },
        {
          "stage": "Complicated plaque",
          "description": "Vulnerable plaque prone to rupture",
          "key_events": ["Thin fibrous cap", "Large lipid core", "Surface ulceration or thrombosis"]
        }
      ]
    },
    "risk_factors": {
      "modifiable": [
        "Hyperlipidemia (especially elevated LDL)",
        "Hypertension",
        "Diabetes mellitus",
        "Smoking",
        "Obesity",
        "Sedentary lifestyle"
      ],
      "non_modifiable": [
        "Age (>45 men, >55 women)",
        "Male sex",
        "Family history of premature CAD",
        "Genetic factors (familial hyperlipidemia)"
      ]
    },
    "common_locations": [
      "Coronary arteries",
      "Carotid bifurcation",
      "Aorta",
      "Iliac arteries",
      "Femoral artery (adductor canal)",
      "Popliteal artery"
    ],
    "clinical_manifestations": {
      "coronary": "Angina, myocardial infarction",
      "cerebrovascular": "Stroke, TIA",
      "peripheral": "Claudication, critical limb ischemia",
      "renovascular": "Hypertension, renal insufficiency",
      "mesenteric": "Chronic mesenteric ischemia"
    },
    "clinical_significance": "Atherosclerosis underlies the majority of conditions treated by vascular surgeons, including peripheral arterial disease, carotid stenosis, and aneurysmal disease"
  },
