  "content": {
    "identifier": "WOUND-007",
    "title": "Wound Debridement Techniques",
    "definition": "The removal of devitalized, contaminated, or foreign material from a wound to promote healing, applicable to chronic wounds including arterial, venous, and diabetic ulcers.",
    "concepts": [
      {
        "concept_id": "surgical",
        "term": "Surgical Debridement",
        "definition": "Sharp removal of tissue with scalpel or curette.",
        "clinical_features": {
          "indications": "Thick eschar, extensive necrosis, urgent need",
          "technique": "Excise nonviable tissue to bleeding margin",
          "advantages": "Rapid, complete removal of devitalized tissue",
          "considerations": "May require anesthesia, bleeding control"
        }
      },
      {
        "concept_id": "mechanical",
        "term": "Mechanical Debridement",
        "definition": "Physical removal using irrigation or dressings.",
        "clinical_features": {
          "wet_to_dry": "Traditional but largely abandoned (nonselective)",
          "pulse_lavage": "Pressurized irrigation to remove debris",
          "hydrotherapy": "Whirlpool for softening and removal",
          "monofilament": "Debridement pads for gentle removal"
        }
      },
      {
        "concept_id": "enzymatic",
        "term": "Enzymatic Debridement",
        "definition": "Chemical breakdown of necrotic tissue.",
        "clinical_features": {
          "agents": "Collagenase (most common), papain-urea",
          "mechanism": "Digest collagen in devitalized tissue",
          "application": "Apply to wound, maintain moist environment",
          "limitations": "Slow, requires viable wound bed margin"
        }
      },
      {
        "concept_id": "autolytic",
        "term": "Autolytic Debridement",
        "definition": "Using body's own enzymes under occlusive dressings.",
        "clinical_features": {
          "mechanism": "Endogenous enzymes liquefy necrotic tissue",
          "dressings": "Hydrocolloids, hydrogels, films",
          "advantages": "Painless, selective, inexpensive",
          "limitations": "Slow, not for infected wounds"
        }
      },
      {
        "concept_id": "biological",
        "term": "Biological Debridement",
        "definition": "Maggot therapy for debridement.",
        "clinical_features": {
          "mechanism": "Larvae secrete enzymes that digest necrotic tissue",
          "selectivity": "Highly selective for devitalized tissue",
          "indications": "Recalcitrant wounds, poor surgical candidates",
          "limitations": "Patient acceptance, availability"
        }
      }
    ],
    "clinical_features": {
      "selection": "Choose based on wound characteristics, patient factors, setting",
      "frequency": "Maintenance debridement often needed regularly"
    }
  },
