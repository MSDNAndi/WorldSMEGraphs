  "content": {
    "identifier": "WOUND-002",
    "title": "Venous Ulcer Management",
    "definition": "A comprehensive approach to treating chronic venous leg ulcers, the most common type of leg ulcer, caused by sustained venous hypertension and chronic venous insufficiency.",
    "concepts": [
      {
        "concept_id": "assessment",
        "term": "Initial Assessment",
        "definition": "Evaluation of venous ulcer patient.",
        "clinical_features": {
          "history": "Duration, recurrence, previous treatments, risk factors",
          "location": "Medial gaiter area (medial malleolus typical)",
          "appearance": "Shallow, irregular borders, granulation base",
          "surrounding_skin": "Lipodermatosclerosis, hemosiderin, eczema"
        }
      },
      {
        "concept_id": "abi",
        "term": "Ankle-Brachial Index",
        "definition": "Essential before compression therapy.",
        "clinical_features": {
          "purpose": "Rule out significant arterial disease",
          "safe_compression": "ABI â‰¥0.8 allows full compression",
          "modified_compression": "ABI 0.5-0.8 requires reduced compression",
          "contraindicated": "ABI <0.5, compression contraindicated"
        }
      },
      {
        "concept_id": "compression",
        "term": "Compression Therapy",
        "definition": "Cornerstone of venous ulcer treatment.",
        "clinical_features": {
          "mechanism": "Reduces venous hypertension, improves calf pump",
          "pressure": "30-40 mmHg at ankle for therapeutic effect",
          "multi_layer": "Four-layer bandaging or two-layer systems",
          "stockings": "Compression stockings after ulcer heals",
          "evidence": "Most effective single intervention for healing"
        }
      },
      {
        "concept_id": "wound-care",
        "term": "Local Wound Care",
        "definition": "Wound bed preparation and dressings.",
        "clinical_features": {
          "debridement": "Remove slough and devitalized tissue",
          "infection": "Treat clinical infection with systemic antibiotics",
          "dressings": "Absorptive dressings for exudate, maintain moist environment",
          "npwt": "Negative pressure for selected non-healing ulcers"
        }
      },
      {
        "concept_id": "intervention",
        "term": "Venous Intervention",
        "definition": "Treatment of underlying venous pathology.",
        "clinical_features": {
          "superficial_reflux": "Ablation of incompetent GSV/SSV",
          "perforator": "Perforator ablation in selected cases",
          "deep": "Iliac vein stenting for obstruction",
          "timing": "Early intervention may accelerate healing"
        }
      }
    ],
    "clinical_features": {
      "healing_rates": "40-70% healing at 24 weeks with compression",
      "recurrence": "Up to 70% recurrence without ongoing compression"
    }
  },
