  "content": {
    "identifier": "PHARM-010",
    "title": "Aspirin in Vascular Surgery",
    "definition": "Acetylsalicylic acid as cornerstone antiplatelet therapy for arterial disease prevention and treatment.",
    "concepts": [
      {
        "concept_id": "mechanism",
        "term": "Mechanism of Action",
        "definition": "Irreversible acetylation of cyclooxygenase-1 (COX-1) inhibiting thromboxane A2 synthesis.",
        "clinical_features": {
          "target": "COX-1 in platelets",
          "product_inhibited": "Thromboxane A2 (TXA2)",
          "effect": "Prevents platelet aggregation",
          "duration": "Lifespan of platelet (7-10 days)"
        }
      },
      {
        "concept_id": "dosing",
        "term": "Aspirin Dosing",
        "definition": "Recommended dosing for different vascular indications.",
        "clinical_features": {
          "primary_prevention": "Not routinely recommended (USPSTF 2022)",
          "secondary_prevention": "81-325 mg daily",
          "acute_acs": "162-325 mg loading dose",
          "post_intervention": [
            "81 mg daily long-term",
            "Higher doses for specific indications"
          ]
        }
      },
      {
        "concept_id": "resistance",
        "term": "Aspirin Resistance",
        "definition": "Failure of aspirin to adequately inhibit platelet function.",
        "clinical_features": {
          "prevalence": "5-60% depending on definition",
          "mechanisms": [
            "Poor compliance",
            "Drug interactions (NSAIDs)",
            "Genetic polymorphisms",
            "Increased platelet turnover"
          ],
          "testing": [
            "Light transmission aggregometry",
            "VerifyNow",
            "TEG platelet mapping"
          ],
          "clinical_significance": "Controversial - routine testing not recommended"
        }
      },
      {
        "concept_id": "perioperative",
        "term": "Perioperative Aspirin Management",
        "definition": "Guidelines for aspirin use around surgical procedures.",
        "clinical_features": {
          "continue": [
            "Carotid surgery",
            "Coronary surgery",
            "Peripheral bypass",
            "Recent coronary stent"
          ],
          "consider_holding": [
            "Intracranial surgery",
            "Spine surgery",
            "Very high bleeding risk"
          ],
          "hold_duration": "7-10 days if discontinued"
        }
      }
    ],
    "clinical_features": {
      "side_effects": [
        "GI bleeding",
        "Hemorrhagic stroke",
        "Aspirin-exacerbated respiratory disease"
      ],
      "gi_protection": "PPI co-prescription in high-risk patients"
    },
    "diagnostic_criteria": {
      "effectiveness": "Platelet function testing if resistance suspected"
