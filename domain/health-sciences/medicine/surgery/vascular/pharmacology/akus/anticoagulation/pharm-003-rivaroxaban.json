  "content": {
    "title": "Rivaroxaban in Vascular Disease",
    "description": "Direct oral anticoagulant (DOAC) with direct factor Xa inhibition, increasingly used in PAD and post-revascularization settings.",
    "mechanism": "Direct competitive inhibition of factor Xa (free and clot-bound), no antithrombin required",
    "pharmacokinetics": {
      "bioavailability": "80-100% (with food for higher doses)",
      "half_life": "5-9 hours in healthy adults, longer in elderly/renal impairment",
      "elimination": "1/3 renal, 2/3 hepatobiliary"
    },
    "vascular_surgery_applications": {
      "compass_trial": {
        "regimen": "Rivaroxaban 2.5mg BID + aspirin 100mg daily",
        "population": "Stable CAD and/or PAD",
        "results": "Reduced MACE and MALE, increased bleeding"
      },
      "post_revascularization": "Emerging evidence for use after peripheral intervention",
      "dvt_vte": "Standard indication"
    },
    "dosing": {
      "pad_compass": "2.5mg twice daily (with aspirin)",
      "vte_treatment": "15mg BID x 21 days, then 20mg daily",
      "vte_prevention": "10mg daily"
    },
    "perioperative_management": {
      "hold": "24-48 hours before procedure (CrCl dependent)",
      "restart": "24-48 hours after if hemostasis adequate",
      "bridging": "Generally not required"
    },
    "reversal": {
      "andexanet_alfa": "Specific reversal agent",
      "pcc": "4-factor PCC can be used if andexanet unavailable"
    }
  },
