  "content": {
    "title": "Pentoxifylline",
    "definition": "Methylxanthine derivative that improves blood flow by increasing red blood cell deformability and decreasing blood viscosity, approved for treatment of intermittent claudication.",
    "mechanism_of_action": {
      "primary": [
        "Increases red blood cell flexibility/deformability",
        "Decreases blood viscosity",
        "Inhibits platelet aggregation"
      ],
      "secondary": [
        "Phosphodiesterase inhibition",
        "Increased cAMP levels",
        "Anti-inflammatory effects"
      ]
    },
    "indications": {
      "approved": "Intermittent claudication from chronic occlusive arterial disease",
      "off_label": [
        "Venous leg ulcers",
        "Radiation-induced fibrosis",
        "Alcoholic hepatitis"
      ]
    },
    "dosing": {
      "standard": "400 mg three times daily",
      "with_meals": "Recommended to reduce GI side effects",
      "renal_adjustment": "May need dose reduction in CKD"
    },
    "efficacy": {
      "claudication": "Modest benefit in walking distance",
      "vs_cilostazol": "Less effective than cilostazol",
      "guideline_status": "Weak recommendation, may be considered if cilostazol contraindicated"
    },
    "side_effects": {
      "common": [
        "Nausea",
        "Dizziness",
        "Headache",
        "Dyspepsia"
      ],
      "serious": "Rare"
    },
    "contraindications": [
      "Recent cerebral or retinal hemorrhage",
      "Intolerance to methylxanthines (caffeine, theophylline)"
    ],
