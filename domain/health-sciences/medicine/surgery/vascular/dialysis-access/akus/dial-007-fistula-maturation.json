  "content": {
    "title": "Fistula Maturation",
    "summary": "Arteriovenous fistula maturation is the process by which a newly created fistula develops sufficient size and flow for effective hemodialysis. The 'Rule of 6s' provides objective criteria to assess maturity and readiness for cannulation.",
    "definition": "The physiologic development of an arteriovenous fistula following surgical creation, characterized by venous dilation, wall thickening, and increased blood flow to support hemodialysis",
    "physiology_of_maturation": {
      "hemodynamic_changes": {
        "flow_increase": "From <100 mL/min to 400-800 mL/min",
        "pressure_transmission": "Arterial pressure transmitted to venous outflow",
        "wall_stress": "Increased circumferential stress causes remodeling"
      },
      "vascular_remodeling": {
        "venous_dilation": "Vein diameter increases 50-100%",
        "wall_thickening": "Arterialization of vein wall",
        "endothelial_changes": "Adaptation to high shear stress",
        "timeline": "Most changes occur in first 6-8 weeks"
      },
      "factors_promoting_maturation": [
        "Adequate arterial inflow",
        "Good venous outflow without stenosis",
        "Absence of accessory veins (steal flow)",
        "Adequate surgical technique"
      ]
    },
    "rule_of_6s": {
      "definition": "Objective criteria to assess fistula maturity for cannulation",
      "criteria": {
        "diameter": "≥6 mm vein diameter",
        "depth": "≤6 mm from skin surface (or 0.6 cm)",
        "flow": "≥600 mL/min blood flow",
        "length": "≥6 cm straight segment for cannulation",
        "time": "≥6 weeks since creation (though some use 4-8 weeks)"
      },
      "assessment_timing": "Evaluate at 4-6 weeks post-creation",
      "success_prediction": "Meeting all criteria predicts successful cannulation"
    },
    "clinical_assessment": {
      "physical_examination": {
        "inspection": [
          "Visible vein dilation",
          "No excessive depth",
          "Adequate length"
        ],
        "palpation": {
          "thrill": "Continuous vibratory sensation over anastomosis",
          "pulse": "Thrill should predominate over pulse; strong pulse only = outflow stenosis",
          "vein_quality": "Soft, easily compressible, dilated"
        },
        "auscultation": "Continuous bruit, low-pitched at anastomosis"
      },
      "duplex_ultrasound": {
        "measurements": [
          "Vein diameter at multiple points",
          "Depth from skin surface",
          "Blood flow volume (mL/min)",
          "Anastomotic flow pattern"
        ],
        "abnormal_findings": [
          "Stenosis (focal narrowing, elevated velocities)",
          "Accessory veins diverting flow",
          "Depth >6mm requiring transposition"
        ]
      }
    },
    "failure_to_mature": {
      "incidence": "20-50% of radiocephalic fistulas fail to mature",
      "causes": {
        "anatomic": [
          "Small vein diameter (<2.5mm preop)",
          "Juxta-anastomotic stenosis",
          "Accessory veins",
          "Poor arterial inflow"
        ],
        "patient_factors": [
          "Diabetes",
          "Female sex",
          "Age >65",
          "Previous IV drug use",
          "Obesity"
        ],
        "technical": [
          "Tension on anastomosis",
          "Twisting of vein",
          "Narrow anastomosis"
        ]
      },
      "management": {
        "surveillance": "Duplex at 4-6 weeks to identify problems",
        "interventions": [
          "Angioplasty of juxta-anastomotic stenosis",
          "Accessory vein ligation",
          "Revision of anastomosis",
          "Superficialization if too deep"
        ]
      }
    },
    "assisted_maturation": {
      "techniques": {
        "accessory_vein_ligation": {
          "indication": "Competing side branches reducing main vein flow",
          "effect": "Redirects flow to primary outflow vein"
        },
        "angioplasty": {
          "indication": "Juxta-anastomotic or outflow stenosis",
          "success": "80-90% technical success"
        },
        "superficialization": {
          "indication": "Mature fistula too deep for cannulation (>6mm)",
          "technique": "Surgical elevation to subcutaneous position"
        }
      },
      "outcomes": "Assisted maturation salvages 50-70% of failing fistulas"
    },
    "early_cannulation_considerations": {
      "risks": [
        "Infiltration and hematoma",
        "Wall damage and pseudoaneurysm",
        "Stenosis development",
        "Fistula failure"
      ],
      "when_considered": [
        "Urgent dialysis need",
        "Clearly mature fistula on exam",
        "Experienced cannulators"
      ]
    }
  },
