  "content": {
    "term": "Venous Thoracic Outlet Syndrome",
    "synonyms": ["Venous TOS", "Paget-Schroetter Syndrome", "Effort Thrombosis"],
    "definition": "Thrombosis of the subclavian-axillary vein due to compression in the thoracic outlet, typically occurring in young, athletic individuals after repetitive overhead arm activity. Also known as Paget-Schroetter syndrome or 'effort thrombosis.'",
    "epidemiology": {
      "frequency": "2-3% of TOS cases",
      "demographics": [
        "Young adults (20-40 years)",
        "Athletes (swimmers, baseball pitchers, weightlifters)",
        "Dominant arm affected",
        "Male predominance"
      ],
      "risk_activities": [
        "Swimming",
        "Baseball pitching",
        "Weightlifting",
        "Rowing",
        "Any repetitive overhead motion"
      ]
    },
    "anatomy": {
      "compression_site": "Costoclavicular space (between clavicle and first rib)",
      "mechanism": [
        "Repetitive compression of subclavian vein",
        "Endothelial injury leads to thrombosis",
        "Venous collaterals develop but are insufficient"
      ]
    },
    "clinical_features": {
      "acute_presentation": [
        "Sudden arm swelling",
        "Arm heaviness and pain",
        "Cyanotic discoloration",
        "Distended superficial veins (chest, shoulder)"
      ],
      "triggering_event": "Often follows strenuous activity",
      "physical_examination": [
        "Arm edema (circumference difference >2 cm)",
        "Cyanosis",
        "Prominent collateral veins over shoulder/chest"
      ]
    },
    "diagnosis": {
      "duplex_ultrasound": [
        "First-line test",
        "Shows thrombus in subclavian-axillary vein",
        "May be limited in thoracic outlet due to clavicle"
      ],
      "venography": [
        "Gold standard for anatomic detail",
        "Positional studies show compression",
        "Can proceed to intervention"
      ],
      "cross_sectional": "CTV or MRV for extent and collaterals"
    },
    "treatment": {
      "anticoagulation": [
        "Immediate anticoagulation (heparin, then DOAC/warfarin)",
        "Continued for 3-6 months minimum"
      ],
      "catheter_directed_thrombolysis": [
        "Preferred in first 14 days of symptoms",
        "Clears thrombus, restores vein patency",
        "Followed by repeat venography to assess compression"
      ],
      "thoracic_outlet_decompression": [
        "First rib resection (standard)",
        "Typically 2-4 weeks after thrombolysis",
        "Addresses underlying compression"
      ],
      "venoplasty": [
        "If residual stenosis after decompression",
        "Avoid stenting before decompression (stent fracture risk)"
      ]
    },
    "timing_of_surgery": {
      "acute_phase": "Thrombolysis + anticoagulation",
      "delayed_decompression": "First rib resection 2-4 weeks later",
      "rationale": "Allows inflammation to resolve, thrombus to organize"
    },
    "outcomes": {
      "with_comprehensive_treatment": "90% good outcome",
      "without_decompression": "High recurrence rate (30-40%)",
      "post_thrombotic_symptoms": "May have residual arm swelling"
    }
  },
