  "content": {
    "term": "Arterial Thoracic Outlet Syndrome",
    "synonyms": ["Arterial TOS", "Subclavian Artery Compression"],
    "definition": "The rarest form of thoracic outlet syndrome (1% of TOS cases), caused by compression of the subclavian artery between the first rib and an anomalous cervical rib or scalene muscle. Arterial TOS causes upper extremity ischemia through thrombosis, embolization, or aneurysm formation.",
    "anatomy": {
      "compression_site": "Costoclavicular space (between clavicle and first rib)",
      "structures": [
        "Subclavian artery",
        "Cervical rib or abnormal first rib (almost always present)",
        "Anterior scalene muscle insertion"
      ],
      "associated_anomalies": [
        "Cervical rib (most common - 90%)",
        "Abnormal first rib",
        "Fibrous band from C7 transverse process"
      ]
    },
    "pathophysiology": {
      "sequence": [
        "Repeated compression with arm movement",
        "Intimal injury to subclavian artery",
        "Post-stenotic dilation/aneurysm formation",
        "Thrombus formation in aneurysm",
        "Distal embolization to upper extremity"
      ],
      "arterial_changes": [
        "Subclavian artery stenosis",
        "Post-stenotic aneurysm",
        "Thrombosis",
        "Mural thrombus with emboli"
      ]
    },
    "clinical_features": {
      "upper_extremity_ischemia": [
        "Cold, pale hand",
        "Digital ischemia/gangrene",
        "Arm claudication (rare)",
        "Acute limb ischemia (embolization)"
      ],
      "physical_examination": [
        "Diminished radial pulse",
        "Blood pressure differential between arms",
        "Supraclavicular pulsatile mass (aneurysm)",
        "Digital ischemia/splinter hemorrhages",
        "May have cervical rib palpable"
      ],
      "provocative_maneuvers": [
        "Adson test (limited specificity)",
        "Roos test (hands up, fist clenching)",
        "Wright maneuver (hyperabduction)"
      ]
    },
    "diagnosis": {
      "imaging": [
        "CTA/MRA of thoracic outlet",
        "Arterial duplex with positional maneuvers",
        "Chest X-ray for cervical rib",
        "Conventional angiography with arm positions"
      ],
      "key_findings": [
        "Cervical rib or anomalous first rib",
        "Subclavian artery stenosis/occlusion",
        "Post-stenotic aneurysm",
        "Thrombus or intimal irregularity"
      ]
    },
    "treatment": {
      "surgical_decompression": [
        "First rib resection (transaxillary or supraclavicular)",
        "Cervical rib resection (required if present)",
        "Anterior scalenectomy"
      ],
      "arterial_reconstruction": [
        "Required if aneurysm or significant stenosis",
        "Interposition graft for aneurysm",
        "Bypass for occlusion"
      ],
      "thrombolysis": "For acute thrombosis prior to definitive repair",
      "embolectomy": "For distal embolization"
    },
    "outcomes": {
      "surgical_success": ">90% with complete decompression and arterial repair",
      "limb_salvage": "Usually excellent if treated promptly",
      "recurrence": "Rare if rib fully resected"
    }
  },
