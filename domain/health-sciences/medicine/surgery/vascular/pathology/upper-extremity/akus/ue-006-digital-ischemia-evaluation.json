  "content": {
    "title": "Digital Ischemia Evaluation",
    "summary": "Digital ischemia refers to inadequate blood supply to the fingers, resulting in pain, color changes, ulceration, or gangrene. Evaluation requires systematic assessment of proximal arterial inflow, local small vessel disease, and vasospastic components.",
    "definition": "Insufficient arterial blood supply to one or more digits, manifesting as pain, pallor, cyanosis, ulceration, or tissue loss",
    "epidemiology": {
      "prevalence": "Relatively uncommon as isolated presentation",
      "demographics": "Peak in 40-60 years, varies by etiology",
      "risk_factors": [
        "Smoking",
        "Connective tissue disorders",
        "Occupational vibration exposure",
        "Atherosclerosis",
        "Hypercoagulable states"
      ]
    },
    "etiology_classification": {
      "large_vessel_proximal": {
        "atherosclerotic": "Subclavian, axillary, brachial stenosis",
        "embolic_source": [
          "Cardiac: atrial fibrillation, mural thrombus, valve disease",
          "Proximal arterial: subclavian aneurysm, thoracic outlet compression"
        ],
        "dissection": "Carotid, subclavian, or axillary dissection",
        "aneurysm": "Subclavian or axillary with thromboemboli"
      },
      "medium_vessel_forearm_hand": {
        "thrombosis": "Radial or ulnar artery thrombosis",
        "trauma": "Hypothenar hammer syndrome, catheterization injury",
        "entrapment": "Thoracic outlet syndrome (arterial)"
      },
      "small_vessel_digital": {
        "vasospastic": "Raynaud's phenomenon (primary and secondary)",
        "obliterative": "Buerger's disease, scleroderma, other CTD",
        "embolic": "Atheroemboli, cholesterol emboli",
        "thrombotic": "Hypercoagulable states, cryoglobulinemia"
      },
      "systemic_conditions": {
        "autoimmune": [
          "Scleroderma (systemic sclerosis)",
          "SLE",
          "Rheumatoid vasculitis",
          "CREST syndrome"
        ],
        "hematologic": [
          "Polycythemia vera",
          "Essential thrombocythemia",
          "Cryoglobulinemia",
          "Cold agglutinin disease"
        ],
        "malignancy": "Paraneoplastic syndrome"
      }
    },
    "clinical_evaluation": {
      "history": {
        "key_questions": [
          "Unilateral vs bilateral? (unilateral suggests embolic/thrombotic)",
          "Episodic vs constant? (episodic = vasospastic)",
          "Triggered by cold? (Raynaud's)",
          "Occupation? (vibration, repetitive trauma)",
          "Smoking history? (Buerger's, atherosclerosis)",
          "Connective tissue symptoms? (skin changes, dysphagia)"
        ]
      },
      "physical_examination": {
        "inspection": [
          "Color changes (pallor, cyanosis, rubor)",
          "Ulceration pattern and location",
          "Skin texture (sclerodactyly, calcinosis)",
          "Nail changes (pitting, pterygium)"
        ],
        "palpation": [
          "Radial and ulnar pulses",
          "Temperature differential",
          "Capillary refill time",
          "Allen test"
        ],
        "special_tests": {
          "allen_test": "Assess radial/ulnar palmar arch patency",
          "adson_test": "Thoracic outlet evaluation",
          "elevated_arm_stress_test": "Thoracic outlet syndrome"
        }
      }
    },
    "diagnostic_workup": {
      "non_invasive_vascular": {
        "digital_pressures": "Absolute pressure and digital-brachial index",
        "digital_waveforms": "PPG or strain gauge plethysmography",
        "cold_challenge_test": "Document vasospastic response",
        "duplex_ultrasound": "Proximal artery evaluation"
      },
      "imaging": {
        "CTA": "Proximal arterial evaluation, aneurysms",
        "MRA": "Alternative to CTA, no radiation",
        "conventional_angiography": "Gold standard for digital arteries"
      },
      "laboratory": {
        "baseline": [
          "CBC",
          "CMP",
          "ESR",
          "CRP"
        ],
        "autoimmune": [
          "ANA",
          "RF",
          "anti-Scl-70",
          "anticentromere"
        ],
        "hypercoagulable": [
          "PT/INR",
          "aPTT",
          "protein C/S",
          "antiphospholipid antibodies"
        ],
        "hematologic": [
          "Cryoglobulins",
          "cold agglutinins",
          "serum protein electrophoresis"
        ]
      }
    },
    "management_principles": {
      "conservative": [
        "Smoking cessation (absolute requirement)",
        "Cold avoidance and hand protection",
        "Wound care for ulcers",
        "Treatment of underlying condition"
      ],
      "pharmacologic": {
        "vasodilators": [
          "Calcium channel blockers (nifedipine)",
          "Phosphodiesterase inhibitors (sildenafil)"
        ],
        "antiplatelet": "Aspirin, clopidogrel",
        "anticoagulation": "When indicated by etiology",
        "prostaglandins": "Iloprost IV for severe cases"
      },
      "interventional": {
        "sympathectomy": "Thoracic or digital for vasospastic component",
        "revascularization": "Proximal lesions amenable to bypass or stent",
        "thrombolysis": "Acute thromboembolism",
        "amputation": "Non-viable tissue, uncontrolled infection"
      }
    },
    "statement": "Digital Ischemia Evaluation is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Upper-Extremity that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding Digital Ischemia Evaluation helps build foundational knowledge. The concept connects to broader principles in the field.",
