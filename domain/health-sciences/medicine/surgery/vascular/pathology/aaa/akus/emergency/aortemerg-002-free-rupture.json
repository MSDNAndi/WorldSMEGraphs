  "content": {
    "title": "Free Aortic Rupture",
    "definition": "Complete transmural tear of the aortic wall with free hemorrhage into the peritoneal or retroperitoneal space, representing a catastrophic vascular emergency with mortality exceeding 90% without immediate intervention.",
    "clinical_features": {
      "classic_presentation": [
        "Sudden severe abdominal or back pain",
        "Rapid hemodynamic collapse",
        "Abdominal distension",
        "Decreased or absent femoral pulses"
      ],
      "mortality": {
        "pre_hospital": "50% die before reaching hospital",
        "hospital": "Up to 90% overall mortality",
        "post_operative": "40-70% even with emergent repair"
      },
      "vs_contained_rupture": {
        "hemodynamics": "Unstable vs relatively stable",
        "hemorrhage": "Free vs tamponaded by retroperitoneum",
        "time_window": "Minutes vs hours"
      }
    },
    "management": {
      "resuscitation": {
        "permissive_hypotension": "Target SBP 70-90 mmHg",
        "massive_transfusion": "Activate protocol immediately",
        "avoid": "Aggressive fluid resuscitation (clot disruption)"
      },
      "surgical_approach": {
        "open": "Rapid laparotomy with supraceliac clamping",
        "evar": "Limited role in true free rupture",
        "decision": "Based on hemodynamic stability, anatomy"
      },
      "damage_control": {
        "indications": "Coagulopathy, hypothermia, acidosis",
        "technique": "Temporary aortic control, packing"
      }
    },
    "terminology": {
      "snomed_ct": "233985008",
      "icd_10": "I71.3"
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Differentiate free from contained rupture",
      "Apply permissive hypotension principles",
      "Understand mortality determinants"
    ],
    "clinical_pearls": [
      "Every minute of delay increases mortality exponentially",
      "Do NOT wait for CT if patient is unstable",
      "Supraceliac clamp first, assess later"
    ]
  },
