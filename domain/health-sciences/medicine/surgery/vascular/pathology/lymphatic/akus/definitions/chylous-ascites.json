  "content": {
    "title": "Chylous Ascites",
    "definition": "Accumulation of chyle (lymphatic fluid rich in triglycerides) in the peritoneal cavity due to disruption or obstruction of the abdominal lymphatic system.",
    "etiology": {
      "surgical": {
        "most_common": "Abdominal/retroperitoneal surgery",
        "procedures": ["Aortic surgery", "Spine surgery", "Retroperitoneal node dissection"]
      },
      "malignancy": {
        "mechanism": "Lymphatic obstruction by tumor",
        "types": ["Lymphoma", "Metastatic disease"]
      },
      "cirrhosis": "Portal hypertension causing lymphatic leakage",
      "congenital": "Primary lymphatic abnormalities",
      "trauma": "Retroperitoneal injury"
    },
    "pathophysiology": {
      "cisterna_chyli": "Major lymphatic reservoir in retroperitoneum",
      "thoracic_duct": "Main lymphatic trunk",
      "disruption": "Leakage of chyle into peritoneum"
    },
    "clinical_features": {
      "symptoms": [
        "Abdominal distension",
        "Weight gain",
        "Dyspnea (if massive)"
      ],
      "timing": "Days to weeks after surgery"
    },
    "diagnosis": {
      "paracentesis": {
        "appearance": "Milky white fluid",
        "triglycerides": ">200 mg/dL (diagnostic)",
        "cholesterol": "<200 mg/dL (differentiates from pseudochylous)"
      },
      "lymphangiography": "Identifies leak site",
      "ct_mri": "Rule out malignancy"
    },
    "treatment": {
      "conservative": {
        "diet": "Medium-chain triglyceride (MCT) diet",
        "tpn": "Total parenteral nutrition",
        "octreotide": "Reduces lymphatic flow",
        "paracentesis": "Symptomatic relief"
      },
      "surgical": {
        "indication": "Failed conservative therapy (2-3 weeks)",
        "options": [
          "Peritoneovenous shunt",
          "Surgical ligation of leak",
          "Lymphatic embolization"
        ]
      }
    },
    "prognosis": {
      "conservative": "60-70% resolve with diet modification",
      "surgical": "High success with identified leak"
    },
    "terminology": {
      "snomed_ct": "49218002",
      "icd_10": "I89.8"
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Identify causes of chylous ascites",
      "Interpret paracentesis findings",
      "Apply stepwise management approach"
    ],
    "clinical_pearls": [
      "Triglycerides >200 mg/dL = chylous",
      "MCT diet bypasses lymphatic absorption",
      "Most resolve with conservative management"
    ]
  },
