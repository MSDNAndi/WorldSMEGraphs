  "content": {
    "title": "Primary Lymphedema",
    "definition": "Lymphedema caused by intrinsic abnormalities of the lymphatic system, typically congenital or hereditary, manifesting as chronic swelling due to impaired lymphatic transport.",
    "classification_by_age_of_onset": {
      "congenita": {
        "age": "Present at birth or within first 2 years",
        "hereditary_form": "Milroy disease (FLT4/VEGFR3 mutation)",
        "features": "Bilateral lower extremity swelling"
      },
      "praecox": {
        "age": "Onset 2-35 years (most common form)",
        "hereditary_form": "Meige disease (lymphedema-distichiasis)",
        "features": "Usually unilateral, female predominance"
      },
      "tarda": {
        "age": "Onset after age 35",
        "associations": "May be triggered by minor injury or infection",
        "features": "Often progressive"
      }
    },
    "pathophysiology": {
      "mechanisms": [
        "Lymphatic hypoplasia (reduced number)",
        "Lymphatic hyperplasia with dysfunction",
        "Aplasia (complete absence)"
      ],
      "consequences": [
        "Impaired protein and fluid clearance",
        "Chronic tissue inflammation",
        "Fibrosis and adipose deposition"
      ]
    },
    "clinical_features": {
      "distribution": "Usually lower extremities, may involve genitalia",
      "progression": [
        "Initially pitting edema",
        "Becomes non-pitting with fibrosis",
        "Skin changes (elephantiasis)"
      ],
      "stemmer_sign": "Inability to pinch skin at base of second toe"
    },
    "diagnosis": {
      "clinical": "Often sufficient with characteristic presentation",
      "lymphoscintigraphy": "Gold standard for lymphatic function",
      "mri_lymphography": "Detailed anatomy, surgical planning"
    },
    "treatment": {
      "conservative": [
        "Complete decongestive therapy (CDT)",
        "Compression garments",
        "Elevation and exercise"
      ],
      "surgical": [
        "Lymphovenous anastomosis (LVA)",
        "Vascularized lymph node transfer (VLNT)",
        "Debulking procedures"
      ]
    },
    "terminology": {
      "snomed_ct": "234098001",
      "icd_10": "Q82.0"
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Classify primary lymphedema by age of onset",
      "Recognize Milroy and Meige disease",
      "Apply staged treatment approach"
    ],
    "clinical_pearls": [
      "Praecox is the most common form",
      "Positive Stemmer sign = lymphedema",
      "Female:male ratio is 10:1 for praecox"
    ]
  },
