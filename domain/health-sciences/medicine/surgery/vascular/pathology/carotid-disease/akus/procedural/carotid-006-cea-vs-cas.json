      "procedure_overview": {
        "cea": {
          "technique": "Open surgical removal of atherosclerotic plaque",
          "history": "Gold standard since 1954",
          "advantages": ["Durable results", "Lower periprocedural stroke", "Well-established"],
          "disadvantages": ["General anesthesia usually", "Neck incision", "Cranial nerve injury risk"]
        },
        "cas": {
          "technique": "Endovascular stent placement with embolic protection",
          "development": "FDA approved 2004 for high surgical risk",
          "advantages": ["Minimally invasive", "No neck incision", "Avoids cranial nerves"],
          "disadvantages": ["Higher periprocedural stroke (especially in elderly)", "Need for dual antiplatelet"]
        }
      },
