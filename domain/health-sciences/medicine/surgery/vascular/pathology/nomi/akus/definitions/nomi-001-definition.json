  "content": {
    "title": "Non-Occlusive Mesenteric Ischemia (NOMI)",
    "definition": "Mesenteric ischemia occurring without arterial or venous occlusion, caused by splanchnic vasoconstriction in the setting of low-flow states. Represents 20-30% of acute mesenteric ischemia cases with high mortality due to delayed recognition.",
    "clinical_features": {
      "pathophysiology": {
        "mechanism": "Splanchnic vasoconstriction in response to systemic hypoperfusion",
        "mediators": [
          "Catecholamines (endogenous and exogenous)",
          "Angiotensin II",
          "Vasopressin",
          "Digoxin"
        ],
        "progression": "Prolonged vasoconstriction → mucosal ischemia → transmural necrosis"
      },
      "risk_factors": [
        "Cardiogenic shock",
        "Septic shock (late phase)",
        "Hypovolemic shock",
        "Cardiac surgery (especially with bypass)",
        "Hemodialysis (intradialytic hypotension)",
        "Major burns",
        "Severe dehydration",
        "Digoxin toxicity",
        "High-dose vasopressor use",
        "Cocaine use"
      ],
      "presentation": {
        "symptoms": [
          "Abdominal pain (may be absent or masked by sedation)",
          "Abdominal distension",
          "Nausea and vomiting",
          "Bloody diarrhea"
        ],
        "signs": [
          "Diffuse abdominal tenderness",
          "Decreased bowel sounds",
          "Peritonitis (late)",
          "Signs of underlying shock state"
        ],
        "clinical_context": "Often occurs in ICU setting in critically ill patients"
      },
      "diagnostic_criteria": {
        "cta_findings": {
          "early": [
            "No arterial or venous occlusion",
            "Diffuse mesenteric vasoconstriction (pruning of vessels)",
            "Alternating segments of vasospasm",
            "Reduced intestinal enhancement"
          ],
          "late": [
            "Bowel wall thickening",
            "Pneumatosis intestinalis",
            "Portal venous gas",
            "Free air (perforation)"
          ]
        },
        "angiography_findings": {
          "classic_signs": [
            "Spasm of SMA and branches",
            "Alternating dilation and narrowing",
            "Impaired filling of intramural vessels",
            "Slow transit of contrast",
            "Reflux into aorta"
          ]
        },
        "laboratory": [
          "Elevated lactate",
          "Metabolic acidosis",
          "Leukocytosis or leukopenia",
          "Elevated D-dimer"
        ]
      }
    },
    "management": {
      "resuscitation": {
        "goals": [
          "Optimize cardiac output",
          "Correct hypovolemia",
          "Minimize vasopressor use when possible",
          "Discontinue digoxin if contributing"
        ]
      },
      "pharmacologic": {
        "papaverine": {
          "mechanism": "Direct-acting smooth muscle relaxant",
          "administration": "Intra-arterial via SMA catheter",
          "dose": "30-60 mg bolus, then 30-60 mg/hr infusion",
          "duration": "24-48 hours with repeat angiography"
        },
        "alternatives": [
          "Prostaglandin E1 (alprostadil)",
          "Nitroglycerin (intra-arterial)",
          "Glucagon"
        ]
      },
      "surgical_indications": [
        "Peritonitis",
        "Bowel perforation",
        "Clinical deterioration despite treatment",
        "Extensive bowel necrosis"
      ],
      "second_look_laparotomy": "Essential if bowel resection performed - typically at 24-48 hours"
    },
    "prognosis": {
      "mortality": "50-70% (highest of mesenteric ischemia types)",
      "factors": [
        "Often delayed diagnosis",
        "Underlying critical illness",
        "Multi-organ dysfunction"
      ],
      "survivors": "High risk of short bowel syndrome if extensive resection"
    },
    "codes": {
      "snomed_ct": "396332003 | Non-occlusive mesenteric ischemia",
      "icd_10": "K55.01 | Acute (reversible) ischemia of small intestine"
    }
  },
