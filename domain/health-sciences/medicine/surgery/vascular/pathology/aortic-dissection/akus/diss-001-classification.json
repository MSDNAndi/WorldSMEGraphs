  "content": {
    "title": "Aortic Dissection Classification Systems",
    "description": "Standard classification systems for categorizing aortic dissection based on anatomic extent and timing.",
    "stanford_classification": {
      "type_A": {
        "definition": "Involves ascending aorta (regardless of origin)",
        "management": "Emergent surgical repair",
        "mortality_untreated": "1-2% per hour initially"
      },
      "type_B": {
        "definition": "Originates distal to left subclavian, does not involve ascending aorta",
        "management": "Medical therapy (uncomplicated) or intervention (complicated)",
        "mortality_medical": "10% at 30 days"
      }
    },
    "debakey_classification": {
      "type_I": "Originates in ascending, extends to descending",
      "type_II": "Limited to ascending aorta only",
      "type_III": "Originates in descending aorta",
      "type_IIIa": "Limited to descending thoracic",
      "type_IIIb": "Extends below diaphragm"
    },
    "timing": {
      "acute": "<14 days from symptom onset",
      "subacute": "14-90 days",
      "chronic": ">90 days"
    },
    "clinical_utility": "Stanford preferred for rapid treatment decisions; DeBakey provides more anatomic detail"
  },
