  "content": {
    "title": "Malperfusion Syndromes in Aortic Dissection",
    "definition": "Organ or limb ischemia resulting from compromised branch vessel perfusion in aortic dissection. Occurs when the dissection flap obstructs branch vessel origins or when the true lumen is severely compressed. Malperfusion is a major determinant of mortality and morbidity in aortic dissection.",
    "clinical_features": {
      "mechanisms": {
        "static_obstruction": {
          "mechanism": "Intimal flap extends into branch vessel",
          "characteristics": "Fixed obstruction regardless of hemodynamics",
          "treatment": "Usually requires fenestration or stenting"
        },
        "dynamic_obstruction": {
          "mechanism": "True lumen compression, flap prolapses across ostium",
          "characteristics": "Variable with BP, position",
          "treatment": "May respond to proximal therapy alone"
        }
      },
      "types_of_malperfusion": {
        "coronary": {
          "incidence": "7-15% in Type A",
          "vessels": "RCA more common (dissection propagates rightward)",
          "presentation": "Chest pain, STEMI, cardiogenic shock",
          "diagnosis": "ECG changes, TTE, coronary angiography",
          "management": "Aortic repair Â± coronary reconstruction/CABG",
          "mortality": "Very high, especially with cardiogenic shock"
        },
        "cerebral": {
          "incidence": "15-25% in Type A",
          "mechanism": "Carotid, innominate artery involvement",
          "presentation": "Stroke, TIA, altered consciousness",
          "significance": "Independent predictor of mortality",
          "dilemma": "Operate despite stroke? (controversial)"
        },
        "spinal": {
          "incidence": "2-5%",
          "mechanism": "Intercostal, artery of Adamkiewicz involvement",
          "presentation": "Paraplegia, paraparesis",
          "management": "Urgent reperfusion, CSF drainage"
        },
        "mesenteric": {
          "incidence": "3-5%",
          "vessels": "Celiac, SMA involvement",
          "presentation": "Abdominal pain out of proportion, lactate elevation",
          "diagnosis": "CT showing malperfused bowel, lactate",
          "significance": "Very high mortality (50-75%)",
          "management": [
            "Fenestration of dissection flap",
            "Branch vessel stenting",
            "Exploratory laparotomy for bowel assessment"
          ]
        },
        "renal": {
          "incidence": "8-15%",
          "presentation": "Acute kidney injury, oliguria, hypertension",
          "diagnosis": "CT showing asymmetric perfusion, rising creatinine",
          "management": "Fenestration, renal stenting"
        },
        "limb": {
          "incidence": "15-20%",
          "vessels": "Iliac artery involvement",
          "presentation": "Acute limb ischemia, pulse deficit",
          "diagnosis": "Clinical, CT showing iliac involvement",
          "management": [
            "Iliac stenting",
            "Extra-anatomic bypass (fem-fem)",
            "May resolve with proximal aortic repair"
          ]
        }
      },
      "diagnostic_approach": {
        "initial": {
          "ecg": "Coronary malperfusion",
          "neuro_exam": "Cerebral malperfusion",
          "pulse_exam": "Limb malperfusion",
          "lactate": "Mesenteric malperfusion marker"
        },
        "imaging": {
          "ct_angiography": "Defines entire extent, branch involvement",
          "findings": [
            "True lumen compression",
            "Flap extension into branches",
            "Differential organ perfusion"
          ]
        }
      },
      "treatment_approach": {
        "type_a": {
          "principle": "Central repair first (usually)",
          "rationale": "Restores true lumen flow, may resolve malperfusion",
          "exceptions": "Severe mesenteric ischemia may require revascularization first"
        },
        "type_b_with_malperfusion": {
          "indication": "TEVAR or fenestration/stenting",
          "goal": "Restore true lumen flow, cover entry tear",
          "techniques": [
            "TEVAR to cover entry tear",
            "Bare metal stent to expand true lumen",
            "Fenestration to equalize pressures",
            "Branch stenting"
          ]
        }
      }
    },
    "diagnostic_codes": {
      "icd10": ["I71.0", "K55.059"],
      "snomed_ct": ["308546005"]
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Recognize the clinical presentations of different malperfusion syndromes",
      "Differentiate static vs dynamic obstruction mechanisms",
      "Apply appropriate treatment strategies for each type"
    ],
    "clinical_pearls": [
      "Malperfusion is a surgical emergency - don't delay treatment",
      "RCA is more commonly affected than LCA in coronary malperfusion",
      "Mesenteric malperfusion has highest mortality - check lactate",
      "Dynamic obstruction may resolve with central repair; static needs local treatment",
      "Type B dissection with malperfusion = complicated = needs intervention"
    ],
    "common_misconceptions": [
      "Misconception: Type B dissection is always managed medically - Reality: Malperfusion in Type B requires intervention"
    ]
  },
