  "content": {
    "title": "Type A Aortic Dissection",
    "description": "Acute aortic syndrome involving the ascending aorta, representing a surgical emergency with high mortality if untreated.",
    "presentation": {
      "classic": "Sudden severe chest/back pain (tearing/ripping)",
      "other": ["Syncope", "Stroke", "Limb ischemia", "Cardiac tamponade", "Acute aortic regurgitation"]
    },
    "risk_factors": ["Hypertension", "Bicuspid aortic valve", "Marfan syndrome", "Previous cardiac surgery", "Pregnancy", "Cocaine use"],
    "diagnosis": {
      "cta": "Gold standard, shows intimal flap, true/false lumen, extension",
      "tee": "If hemodynamically unstable, in OR",
      "ecg": "Rule out MI (can coexist)"
    },
    "complications": {
      "tamponade": "Extension into pericardium",
      "aortic_regurgitation": "Prolapse of cusps",
      "coronary_malperfusion": "Usually right coronary",
      "stroke": "Arch vessel involvement",
      "malperfusion": "Visceral, renal, limb"
    },
    "surgical_management": {
      "goal": "Replace ascending aorta, resect intimal tear, restore true lumen flow",
      "options": ["Supracoronary graft", "Root replacement (Bentall)", "Valve-sparing root (David)", "Hemiarch/total arch if needed"]
    },
    "outcomes": {
      "surgical_mortality": "15-25%",
      "without_surgery": ">50% mortality at 48 hours"
    }
  },
