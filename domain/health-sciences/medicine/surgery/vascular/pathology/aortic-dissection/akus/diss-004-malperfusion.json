  "content": {
    "title": "Malperfusion Syndromes in Aortic Dissection",
    "description": "Ischemic complications from branch vessel compromise in aortic dissection, occurring via static or dynamic obstruction mechanisms.",
    "mechanisms": {
      "dynamic_obstruction": "True lumen collapse from false lumen pressurization; flap oscillates across branch ostia",
      "static_obstruction": "Dissection extends into branch vessel, or false lumen thrombosis occludes branch"
    },
    "malperfusion_types": {
      "cerebral": {
        "vessels": "Carotid, vertebral",
        "presentation": "Stroke, TIA, altered mental status",
        "incidence": "~5-10%"
      },
      "spinal": {
        "vessels": "Intercostals, artery of Adamkiewicz",
        "presentation": "Paraplegia, paraparesis",
        "incidence": "~5%"
      },
      "visceral": {
        "vessels": "Celiac, SMA",
        "presentation": "Abdominal pain, elevated lactate, liver dysfunction",
        "incidence": "~5-10%",
        "mortality": "High if delayed treatment"
      },
      "renal": {
        "vessels": "Renal arteries",
        "presentation": "Oliguria, rising creatinine, hypertension",
        "incidence": "~10-20%"
      },
      "limb": {
        "vessels": "Iliac arteries",
        "presentation": "Acute limb ischemia (often leg)",
        "incidence": "~10-15%"
      }
    },
    "treatment_principles": {
      "type_a": "Central aortic repair first (often resolves malperfusion)",
      "type_b": "TEVAR to restore true lumen flow Â± branch stenting",
      "adjuncts": ["Branch vessel stenting", "Fenestration", "Surgical bypass"]
    }
  },
