      {
        "mutation": "CBS deficiency",
        "inheritance": "Autosomal recessive",
        "clinical": "Severe homocystinuria - Marfanoid habitus, ectopia lentis, intellectual disability, early thrombosis"
      }
    ],
    "acquired_causes": [
      "Folate deficiency (most common)",
      "Vitamin B12 deficiency",
      "Vitamin B6 deficiency",
      "Chronic kidney disease",
      "Hypothyroidism",
      "Medications (methotrexate, phenytoin)"
    ],
    "mechanism_of_thrombosis": [
