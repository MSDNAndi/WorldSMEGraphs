  "clinical_features": {
    "phases": {
      "pre_pulseless": {
        "symptoms": [
          "Constitutional symptoms",
          "Fever",
          "Malaise",
          "Weight loss",
          "Arthralgia",
          "Night sweats"
        ],
        "duration": "Weeks to months",
        "findings": "Elevated ESR/CRP, may have no vascular symptoms"
      },
      "pulseless": {
        "symptoms": [
          "Arm claudication",
          "Syncope",
          "Visual disturbances",
          "Stroke/TIA",
          "Angina",
          "Renovascular hypertension"
        ],
        "findings": [
          "Absent or diminished pulses",
          "Blood pressure discrepancy between arms",
          "Arterial bruits",
          "Aortic regurgitation"
        ]
      }
    },
    "acr_criteria_1990": {
      "criteria": [
        "Age at disease onset \u226440 years",
        "Claudication of extremities",
        "Decreased brachial artery pulse",
        "BP difference >10 mmHg between arms",
        "Bruit over subclavian arteries or aorta",
        "Arteriographic abnormality"
      ],
      "diagnosis": "3 of 6 criteria = sensitivity 90.5%, specificity 97.8%"
    },
    "treatment": {
      "medical": {
        "first_line": "Corticosteroids (prednisone 1 mg/kg/day, taper over 6-12 months)",
        "steroid_sparing": [
          "Methotrexate",
          "Azathioprine",
          "Mycophenolate"
        ],
        "biologics": [
          "Tocilizumab (anti-IL-6)",
          "Infliximab (anti-TNF)"
        ]
      },
      "surgical": {
        "timing": "Quiescent phase preferred (ESR normal, no symptoms of active inflammation)",
        "options": [
          "Bypass grafting",
          "Endarterectomy (rarely)",
          "Aortic reconstruction"
        ],
        "endovascular": "Angioplasty \u00b1 stenting - higher restenosis than in atherosclerosis"
      }
    }
  },
