  "content": {
    "term": "IgG4-Related Vasculitis",
    "synonyms": ["IgG4-Related Aortitis", "IgG4-Related Periaortitis", "Inflammatory Aortic Aneurysm"],
    "definition": "A fibroinflammatory condition affecting the aorta and its branches as part of IgG4-related disease (IgG4-RD), characterized by lymphoplasmacytic infiltration with abundant IgG4-positive plasma cells, storiform fibrosis, and obliterative phlebitis. May present as inflammatory aortic aneurysm, periaortitis, or retroperitoneal fibrosis with vascular involvement.",
    "clinical_features": {
      "aortic_involvement": [
        "Inflammatory aortic aneurysm (thoracic or abdominal)",
        "Periaortitis with wall thickening",
        "Retroperitoneal fibrosis encasing aorta",
        "Aortic dissection risk"
      ],
      "branch_vessel_involvement": [
        "Coronary artery disease",
        "Renal artery involvement",
        "Mesenteric vessel involvement",
        "Carotid involvement (rare)"
      ],
      "systemic_manifestations": [
        "Other organ IgG4-RD (pancreas, salivary glands, kidney)",
        "Constitutional symptoms may be absent",
        "Elevated serum IgG4 (75% of cases)"
      ],
      "imaging_features": [
        "Soft tissue rind around aorta",
        "Homogeneous wall thickening",
        "Periaortic mass encasing but not obstructing",
        "FDG-PET avidity in active disease"
      ]
    },
    "pathophysiology": {
      "etiology": "Unknown - possibly autoimmune",
      "mechanism": "IgG4-expressing plasma cell infiltration with fibrosis",
      "histologic_triad": [
        "Dense lymphoplasmacytic infiltrate with IgG4+ cells",
        "Storiform (cartwheel) pattern fibrosis",
        "Obliterative phlebitis"
      ]
    },
    "diagnosis": {
      "laboratory": [
        "Elevated serum IgG4 (>135 mg/dL) - 75% sensitivity",
        "Elevated total IgG",
        "Elevated ESR/CRP"
      ],
      "imaging": [
        "CT: Periaortic soft tissue cuff",
        "MRI: T2 hyperintense wall thickening",
        "PET: FDG-avid in active inflammation"
      ],
      "histology": [
        "Tissue IgG4+/IgG ratio >40%",
        ">10 IgG4+ cells per HPF",
        "Storiform fibrosis pattern",
        "Obliterative phlebitis"
      ],
      "differential": [
        "Takayasu arteritis",
        "Giant cell arteritis",
        "Infectious aortitis",
        "Atherosclerotic aneurysm with periaortic reaction"
      ]
    },
    "management": {
      "medical": [
        "Glucocorticoids (first-line) - dramatic response",
        "Prednisone 0.6 mg/kg/day with taper",
        "Rituximab for refractory/relapsing disease",
        "Azathioprine/mycophenolate for steroid-sparing"
      ],
      "surgical_indications": [
        "Aneurysm meeting size criteria despite medical therapy",
        "Symptomatic aneurysm",
        "Rapid expansion",
        "Complications (rupture, dissection)"
      ],
      "surveillance": [
        "Serial imaging to assess response",
        "Monitor for relapse (common)",
        "Screen for multi-organ IgG4-RD"
      ]
    },
    "prognosis": {
      "treatment_response": "Usually excellent response to steroids",
      "relapse": "40-50% relapse rate on steroid taper",
      "complications": "Aneurysm rupture, dissection, ureteral obstruction from RPF"
    }
  },
