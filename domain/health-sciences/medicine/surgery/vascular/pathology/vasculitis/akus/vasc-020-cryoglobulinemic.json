  "content": {
    "title": "Cryoglobulinemic Vasculitis",
    "description": "Small vessel vasculitis caused by cryoglobulin deposition, strongly associated with hepatitis C.",
    "clinical_features": {
      "types": {
        "type_I": "Monoclonal - associated with lymphoproliferative disorders",
        "type_II": "Mixed (monoclonal IgM + polyclonal IgG) - most common, HCV-associated",
        "type_III": "Polyclonal - rheumatic diseases"
      },
      "manifestations": ["Palpable purpura", "Arthralgias", "Glomerulonephritis", "Peripheral neuropathy", "Digital ischemia"]
    },
    "vascular_implications": {
      "digital_ischemia": "May cause finger/toe gangrene",
      "treatment": "Address underlying cause (HCV treatment), immunosuppression"
    },
    "clinical_pearl": "Always check hepatitis C serology and cryoglobulins in unexplained digital ischemia with purpura"
  },
