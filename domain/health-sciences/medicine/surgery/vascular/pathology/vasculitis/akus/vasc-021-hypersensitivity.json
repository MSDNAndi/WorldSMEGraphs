  "content": {
    "title": "Hypersensitivity Vasculitis",
    "description": "Small vessel vasculitis triggered by external antigens (drugs, infections) affecting predominantly the skin.",
    "clinical_features": {
      "triggers": ["Medications (antibiotics, NSAIDs)", "Infections", "Malignancy"],
      "presentation": ["Palpable purpura", "Usually limited to skin", "Lower extremity predominance"]
    },
    "diagnosis": {
      "skin_biopsy": "Leukocytoclastic vasculitis with neutrophilic infiltrate",
      "workup": "Identify and remove offending agent"
    },
    "treatment": {
      "first_line": "Remove triggering agent, supportive care",
      "severe_cases": "Short-course corticosteroids"
    },
    "clinical_pearl": "Usually self-limited once trigger removed; systemic vasculitis should be excluded if visceral involvement"
  },
