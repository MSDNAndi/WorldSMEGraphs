  "content": {
    "title": "Cogan Syndrome",
    "description": "Rare inflammatory disorder characterized by interstitial keratitis and vestibuloauditory dysfunction with variable vessel vasculitis.",
    "clinical_features": {
      "triad": ["Interstitial keratitis", "Vestibuloauditory symptoms (vertigo, hearing loss)", "Systemic vasculitis"],
      "vascular_manifestations": ["Aortitis (10-15%)", "Aortic regurgitation", "Large vessel aneurysms"]
    },
    "vascular_complications": {
      "aortic_involvement": "May require aortic valve replacement or aortic surgery",
      "similar_to": "Takayasu in vascular manifestations"
    },
    "treatment": {
      "medical": "High-dose corticosteroids, immunosuppressants",
      "surgical": "For aortic aneurysm or significant regurgitation"
    },
    "clinical_pearl": "Consider Cogan in young patient with aortitis plus audiovestibular symptoms"
  },
