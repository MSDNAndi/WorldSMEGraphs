  "content": {
    "title": "Vascular Behçet Disease",
    "definition": "Vascular manifestations of Behçet disease, a systemic vasculitis affecting vessels of all sizes characterized by recurrent oral and genital ulcers, uveitis, and skin lesions. Vascular involvement (vasculo-Behçet) occurs in 7-38% of patients and includes both arterial aneurysms/occlusions and venous thrombosis, with arterial aneurysms being the leading cause of mortality.",
    "clinical_features": {
      "epidemiology": {
        "vascular_involvement": "7-38% of Behçet patients",
        "sex_predominance": "Male predominance for vascular complications",
        "geographic_distribution": "Silk Road countries (Turkey, Iran, Japan, Korea)",
        "hla_association": "HLA-B51"
      },
      "pathophysiology": {
        "mechanism": "Vasculitis affecting vasa vasorum",
        "arterial": "Weakening of wall → aneurysm formation",
        "venous": "Endothelial dysfunction → thrombosis",
        "unique_feature": "Inflammation of thrombus itself (inflammatory thrombus)"
      },
      "venous_manifestations": {
        "frequency": "Most common vascular manifestation",
        "distribution": [
          "Deep vein thrombosis (most common)",
          "Superficial thrombophlebitis",
          "Vena cava thrombosis (superior and inferior)",
          "Cerebral venous thrombosis",
          "Hepatic vein (Budd-Chiari)"
        ],
        "unique_features": {
          "inflammatory_thrombus": "Adherent to vessel wall",
          "pe_rarity": "PE is RARE despite extensive DVT",
          "recurrence": "High recurrence rate"
        },
        "treatment_controversy": {
          "anticoagulation": "Debated due to inflammatory nature",
          "immunosuppression": "May be more important than anticoagulation",
          "consensus": "Immunosuppression +/- anticoagulation"
        }
      },
      "arterial_manifestations": {
        "types": {
          "aneurysms": {
            "common_sites": ["Pulmonary", "Aorta", "Femoral", "Popliteal"],
            "morphology": "Often multiple, saccular",
            "significance": "Leading cause of Behçet mortality"
          },
          "occlusions": "Less common than aneurysms",
          "dissection": "Can occur"
        },
        "pulmonary_artery_aneurysm": {
          "significance": "Characteristic of Behçet (Hughes-Stovin syndrome)",
          "presentation": "Hemoptysis (can be massive and fatal)",
          "treatment": "Immunosuppression first, then intervention"
        },
        "aortic_involvement": {
          "frequency": "Uncommon but serious",
          "manifestations": ["Aneurysm", "Pseudoaneurysm", "Dissection"]
        }
      },
      "surgical_challenges": {
        "anastomotic_pseudoaneurysms": "HIGH RISK - vessel inflammation",
        "graft_occlusion": "Accelerated due to ongoing vasculitis",
        "principles": [
          "Control inflammation before surgery",
          "Avoid surgery during active disease",
          "Endovascular preferred when possible",
          "Suture to healthy tissue"
        ]
      },
      "diagnostic_criteria": {
        "international_criteria_2014": {
          "required": "Recurrent oral ulceration (≥3 times/year)",
          "plus_two_of": [
            "Recurrent genital ulceration",
            "Eye lesions (uveitis, retinal vasculitis)",
            "Skin lesions (erythema nodosum, pseudofolliculitis)",
            "Positive pathergy test"
          ]
        },
        "vascular_evaluation": {
          "imaging": "CT/MR angiography of all arterial beds",
          "screening": "Regular surveillance for aneurysms"
        }
      },
      "treatment": {
        "medical": {
          "immunosuppression": {
            "first_line": "Corticosteroids + azathioprine or cyclophosphamide",
            "refractory": "Anti-TNF agents (infliximab, adalimumab)",
            "maintenance": "Azathioprine, mycophenolate"
          },
          "anticoagulation": "Controversial, often used for venous disease"
        },
        "endovascular": {
          "preferred_for": "Aneurysm exclusion when possible",
          "advantages": "Avoids anastomotic complications",
          "challenges": "Device erosion through inflamed tissue"
        },
        "surgical": {
          "timing": "After immunosuppressive control of inflammation",
          "technique": "Extra-anatomic bypass when possible",
          "surveillance": "Long-term for pseudoaneurysm formation"
        }
      }
    },
    "diagnostic_codes": {
      "icd10": ["M35.2"],
      "snomed_ct": ["310701003"]
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Recognize vascular manifestations of Behçet disease",
      "Understand the inflammatory nature of Behçet thrombosis",
      "Apply appropriate perioperative immunosuppression"
    ],
    "clinical_pearls": [
      "PE is RARE in Behçet despite extensive DVT - thrombus is adherent/inflammatory",
      "Pulmonary artery aneurysm with hemoptysis is characteristic (Hughes-Stovin syndrome)",
      "NEVER operate during active Behçet - anastomotic pseudoaneurysm risk is very high",
      "Immunosuppression may be more important than anticoagulation for venous disease",
      "Think Behçet in young male from Silk Road country with recurrent DVT and oral ulcers"
    ],
    "common_misconceptions": [
      "Misconception: Extensive DVT requires aggressive anticoagulation - Reality: In Behçet, immunosuppression is the priority"
    ]
  },
