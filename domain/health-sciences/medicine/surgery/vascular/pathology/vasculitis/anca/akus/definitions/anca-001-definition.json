  "content": {
    "title": "ANCA-Associated Vasculitis",
    "definition": "Group of systemic vasculitides characterized by necrotizing inflammation of small to medium vessels and presence of anti-neutrophil cytoplasmic antibodies (ANCA), including GPA, MPA, and EGPA.",
    "classification": {
      "gpa": {
        "name": "Granulomatosis with Polyangiitis (formerly Wegener's)",
        "anca_type": "c-ANCA (PR3-ANCA)",
        "features": [
          "Granulomatous inflammation",
          "Upper/lower respiratory",
          "Glomerulonephritis"
        ]
      },
      "mpa": {
        "name": "Microscopic Polyangiitis",
        "anca_type": "p-ANCA (MPO-ANCA)",
        "features": [
          "Necrotizing vasculitis",
          "Glomerulonephritis",
          "Pulmonary capillaritis"
        ]
      },
      "egpa": {
        "name": "Eosinophilic Granulomatosis with Polyangiitis (Churg-Strauss)",
        "anca_type": "p-ANCA (40-60%)",
        "features": [
          "Asthma",
          "Eosinophilia",
          "Granulomatous inflammation"
        ]
      }
    },
    "vascular_manifestations": {
      "arterial": [
        "Medium vessel aneurysms",
        "Arterial thrombosis",
        "Digital ischemia"
      ],
      "microvasculature": [
        "Purpura",
        "Nail fold infarcts",
        "Splinter hemorrhages"
      ],
      "organ_involvement": [
        "Renal (glomerulonephritis)",
        "Pulmonary (hemorrhage, nodules)",
        "Peripheral nerves (mononeuritis multiplex)"
      ]
    },
    "diagnosis": {
      "anca_testing": {
        "screening": "Indirect immunofluorescence (IF)",
        "confirmation": "ELISA for PR3 and MPO",
        "interpretation": "c-ANCA/PR3 suggests GPA; p-ANCA/MPO suggests MPA"
      },
      "biopsy": "Target affected organ (renal, lung, skin)"
    },
    "treatment": {
      "induction": [
        "Glucocorticoids",
        "Cyclophosphamide or Rituximab"
      ],
      "maintenance": [
        "Azathioprine or Rituximab",
        "Low-dose steroids"
      ],
      "refractory": "Plasma exchange for severe renal/pulmonary"
    },
    "terminology": {
