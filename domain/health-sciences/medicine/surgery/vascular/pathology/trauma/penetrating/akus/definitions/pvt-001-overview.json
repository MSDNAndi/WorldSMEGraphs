  "content": {
    "title": "Penetrating Vascular Trauma",
    "definition": "Vascular injury caused by external objects penetrating the body, including gunshot wounds, stab wounds, and impalement injuries. Penetrating vascular trauma requires rapid assessment and surgical decision-making to prevent exsanguination and limb loss.",
    "clinical_features": {
      "epidemiology": {
        "incidence": "Most common vascular trauma mechanism in urban centers",
        "demographics": "Young males, often associated with violence",
        "mortality": "12-22% overall, higher for central injuries"
      },
      "mechanisms": {
        "gunshot_wounds": {
          "low_velocity": "<2000 ft/s, civilian handguns",
          "high_velocity": ">2000 ft/s, rifles, military weapons",
          "shotgun": "Variable, depends on range",
          "injury_pattern": "Direct laceration, blast effect (high velocity)"
        },
        "stab_wounds": {
          "mechanism": "Clean laceration",
          "prognosis": "Generally better than GSW",
          "complications": "Pseudoaneurysm, AV fistula if partial injury"
        },
        "impalement": {
          "management": "Leave object in place until OR",
          "imaging": "CT angiography when stable"
        }
      },
      "clinical_presentation": {
        "hard_signs": {
          "definition": "Mandate immediate surgical exploration",
          "findings": [
            "Pulsatile bleeding",
            "Expanding/pulsatile hematoma",
            "Absent distal pulses",
            "Bruit or thrill (AV fistula)",
            "Obvious arterial injury",
            "Ischemic limb (6 P's)"
          ]
        },
        "soft_signs": {
          "definition": "Warrant further investigation",
          "findings": [
            "Diminished pulses (compared to contralateral)",
            "Small stable hematoma",
            "Injury proximity to major vessels",
            "Peripheral nerve deficit",
            "Unexplained hypotension"
          ]
        }
      },
      "diagnostic_workup": {
        "unstable_with_hard_signs": "Direct to OR",
        "stable_patient": {
          "ankle_brachial_index": {
            "threshold": "<0.9 requires imaging",
            "interpretation": ">0.9 with soft signs - may observe"
          },
          "ct_angiography": "First-line imaging for stable patients",
          "duplex_ultrasound": "Adjunct, operator dependent",
          "conventional_angiography": "For endovascular intervention"
        }
      },
      "anatomic_zones": {
        "neck": {
          "zone_I": "Clavicle to cricoid - difficult exposure",
          "zone_II": "Cricoid to angle of mandible - most accessible",
          "zone_III": "Above angle of mandible - difficult exposure"
        },
        "extremity": {
          "upper": "Subclavian, axillary, brachial, radial, ulnar",
          "lower": "Femoral, popliteal, tibial vessels"
        },
        "torso": {
          "thoracic": "Aorta, PA, great vessels",
          "abdominal": "Aorta, IVC, visceral vessels, iliac"
        }
      },
      "management_principles": {
        "initial": {
          "atls": "Primary survey, resuscitation",
          "hemorrhage_control": "Direct pressure, tourniquet for extremity",
          "permissive_hypotension": "SBP 80-90 in penetrating torso trauma"
        },
        "surgical": {
          "indications": "Hard signs, hemodynamic instability",
          "principles": [
            "Proximal and distal control",
            "Primary repair if <50% circumference",
            "Interposition graft if >50% or tension",
            "Shunt for damage control",
            "Ligation for non-essential vessels"
          ],
          "fasciotomy": "Low threshold in ischemia >4-6 hours"
        },
        "endovascular": {
          "role": "Expanding in stable patients",
          "indications": [
            "Difficult anatomy",
            "Pseudoaneurysm",
            "AV fistula"
          ],
          "techniques": [
            "Covered stent",
            "Embolization"
          ]
        },
        "damage_control": {
          "concept": "Staged repair in unstable patients",
          "techniques": [
            "Temporary shunt",
            "Ligation",
            "Packing"
          ],
          "definitive": "Return to OR when stable"
        }
      }
    },
