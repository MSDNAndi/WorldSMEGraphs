  "content": {
    "title": "Etiologies of Acute Limb Ischemia",
    "description": "Primary causes of acute limb ischemia including embolism, thrombosis, trauma, and iatrogenic injury.",
    "major_categories": {
      "embolism": {
        "cardiac_sources": ["Atrial fibrillation (most common)", "Mural thrombus post-MI", "Prosthetic valve", "Endocarditis", "Paradoxical embolism"],
        "arterial_sources": ["Aneurysm (aortic, popliteal)", "Atherosclerotic plaque"],
        "characteristics": ["Sudden onset", "No prior claudication history", "Patent bypass grafts"]
      },
      "thrombosis": {
        "native_artery": ["Pre-existing PAD (most common)", "Hypercoagulable states", "Low-flow states"],
        "bypass_graft": ["Early: technical or hypercoagulable", "Intermediate: intimal hyperplasia", "Late: progression of disease"],
        "characteristics": ["More gradual onset", "History of claudication", "Developed collaterals"]
      },
      "trauma": {
        "types": ["Blunt injury", "Penetrating injury", "Iatrogenic (catheterization)"],
        "mechanisms": ["Laceration", "Intimal flap", "External compression", "Spasm"]
      }
    },
    "distinguishing_embolism_vs_thrombosis": {
      "embolism": "Sudden onset, no PAD history, irregular rhythm, normal contralateral pulses",
      "thrombosis": "Gradual onset, PAD history, palpable aneurysm, diminished contralateral pulses"
    }
