  "content": {
    "title": "Acute Limb Ischemia Treatment Algorithm",
    "description": "Evidence-based approach to managing acute limb ischemia based on severity classification and patient factors.",
    "initial_management": {
      "anticoagulation": "Immediate IV heparin (5000-10000 units bolus, drip)",
      "pain_control": "Adequate analgesia",
      "fluid_resuscitation": "Anticipate reperfusion",
      "imaging": "Duplex or CTA if time permits"
    },
    "treatment_by_category": {
      "category_I": {
        "approach": "Elective evaluation and treatment",
        "options": ["Medical optimization", "Scheduled revascularization if indicated"],
        "timing": "Non-urgent"
      },
      "category_IIa": {
        "approach": "Urgent revascularization",
        "options": ["Catheter-directed thrombolysis (preferred if <14 days)", "Surgical thrombectomy", "Endovascular aspiration"],
        "timing": "Within 6-12 hours"
      },
      "category_IIb": {
        "approach": "Emergency revascularization",
        "options": ["Surgical thrombectomy/embolectomy", "Bypass (if underlying PAD)", "Hybrid approach"],
        "timing": "Immediate (within 6 hours)"
      },
      "category_III": {
        "approach": "Primary amputation",
        "rationale": "Reperfusion of non-viable tissue risks MODS",
        "timing": "After stabilization"
      }
    },
    "reperfusion_syndrome": {
      "pathophysiology": "Ischemia-reperfusion injury releases myoglobin, potassium, lactate",
      "manifestations": ["Myoglobinuria/renal failure", "Hyperkalemia", "Metabolic acidosis", "Compartment syndrome"],
      "prevention": "Mannitol, bicarbonate, adequate hydration, fasciotomy if indicated"
    }
  },
