  "content": {
    "title": "Rutherford Classification of Acute Limb Ischemia",
    "description": "Standard classification system for acute limb ischemia severity, guiding treatment urgency and approach.",
    "classification_categories": {
      "I_viable": {
        "description": "Not immediately threatened",
        "sensory_loss": "None",
        "muscle_weakness": "None",
        "arterial_doppler": "Audible",
        "venous_doppler": "Audible",
        "treatment": "Elective revascularization if indicated"
      },
      "IIa_marginally_threatened": {
        "description": "Salvageable if promptly treated",
        "sensory_loss": "Minimal (toes) or none",
        "muscle_weakness": "None",
        "arterial_doppler": "Often inaudible",
        "venous_doppler": "Audible",
        "treatment": "Urgent revascularization"
      },
      "IIb_immediately_threatened": {
        "description": "Salvageable with immediate revascularization",
        "sensory_loss": "More than toes, rest pain",
        "muscle_weakness": "Mild to moderate",
        "arterial_doppler": "Usually inaudible",
        "venous_doppler": "Audible",
        "treatment": "Emergency revascularization"
      },
      "III_irreversible": {
        "description": "Major tissue loss or permanent nerve damage inevitable",
        "sensory_loss": "Profound, anesthetic",
        "muscle_weakness": "Profound, paralysis (rigor)",
        "arterial_doppler": "Inaudible",
        "venous_doppler": "Inaudible",
        "treatment": "Primary amputation"
      }
    },
    "key_clinical_findings": "The '6 Ps': Pain, Pallor, Pulselessness, Poikilothermia, Paresthesias, Paralysis"
  },
