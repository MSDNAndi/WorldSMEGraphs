  "vascular_complications": {
    "rethrombosis_acute": {
      "timing": "<30 days post-procedure",
      "incidence": "5-15%",
      "risk_factors": [
        "Inadequate revascularization",
        "Low flow state (cardiogenic shock)",
        "Hypercoagulable state",
        "Technical issues (dissection, kinking)"
      ],
      "presentation": [
        "Return of abdominal pain",
        "Feeding intolerance",
        "Rising lactate",
        "Hemodynamic instability"
      ],
      "diagnosis": "CTA; high suspicion threshold in any post-op deterioration",
      "management": {
        "endovascular_thrombosis": "May attempt repeat intervention",
        "surgical_thrombosis": "Thrombectomy, revision, or bypass",
        "open_graft_failure": "Revision or new bypass"
      },
      "prevention": [
        "Adequate inflow and outflow",
        "Anticoagulation",
        "Surveillance imaging if concerning symptoms"
      ]
    },
    "stent_thrombosis": {
      "incidence": "5-10% at 1 year",
      "risk_factors": [
        "Suboptimal result",
        "Insufficient antiplatelet/anticoagulation",
        "Progression of atherosclerosis"
      ],
      "presentation": "May be acute (AMI symptoms) or chronic (CMI recurrence)",
      "management": "Repeat endovascular intervention or surgical bypass"
    },
    "restenosis": {
      "timing": "Months to years post-stent",
      "incidence": "20-40% at 3 years",
      "presentation": "Gradual return of CMI symptoms",
      "management": "Surveillance duplex; reintervention when symptomatic"
    },
    "graft_infection": {
      "incidence": "1-3%",
      "risk_factors": [
        "Bowel content contamination",
        "Immunosuppression",
        "Prolonged procedure"
      ],
      "presentation": "Fever, graft hemorrhage, perigraft fluid/gas on imaging",
      "management": "Typically requires graft excision and extra-anatomic bypass"
    }
  },
  "bowel_complications": {
    "anastomotic_leak": {
      "incidence": "5-15%",
      "timing": "Usually postoperative days 5-10",
      "risk_factors": [
        "Ischemic bowel at anastomosis site",
        "Tension on anastomosis",
        "Malnutrition",
        "Steroid use"
      ],
      "presentation": [
        "Fever, tachycardia",
        "Abdominal pain (may be subtle if on pain meds)",
        "Elevated WBC",
        "Peritonitis on exam",
        "Drain output (if drain present)"
      ],
      "diagnosis": [
        "CT with oral contrast",
        "Clinical deterioration"
      ],
      "management": {
        "contained": "Antibiotics, drainage, NPO, possible conservative management",
        "free_leak": "Operative exploration, resection, diversion"
      },
      "prevention": "Ensure viable margins at anastomosis; consider diversion if any concern"
    },
    "bowel_obstruction": {
      "timing": "Early (ileus) or late (adhesive)",
      "incidence": "10-20%",
      "management": [
        "Conservative initially",
        "Surgery if not resolving"
      ]
    },
    "stricture": {
      "mechanism": "Healing of ischemic injury with fibrosis",
      "timing": "Weeks to months post-op",
      "presentation": "Obstructive symptoms, food intolerance",
      "management": [
        "Endoscopic dilation if accessible",
        "Surgical resection if not"
      ]
    },
    "enterocutaneous_fistula": {
      "mechanism": "Anastomotic leak tracking to skin",
      "incidence": "2-5%",
      "management": [
        "Nutritional support (TPN)",
        "Source control",
        "Delayed surgical repair"
      ]
    }
  },
  "systemic_complications": {
    "sepsis_and_septic_shock": {
      "mechanism": "Bacterial translocation from ischemic bowel; anastomotic leak; ongoing source",
      "incidence": "Common\u201430-50% of patients develop sepsis",
      "management": [
        "Source control (resect necrotic bowel, drain abscess, treat leak)",
        "Antibiotics",
        "Hemodynamic support",
        "Organ support as needed"
      ],
      "prognosis": "Septic shock with MOF carries 60-80% mortality"
    },
    "multi_organ_failure": {
      "organs_commonly_affected": [
        "Kidney (AKI)",
        "Lung (ARDS)",
        "Liver",
        "Coagulation (DIC)"
      ],
      "mechanism": "Systemic inflammatory response, ischemia-reperfusion injury, sepsis",
      "prognosis": {
        "single_organ": "Moderate mortality",
        "two_organs": "50-60% mortality",
        "three_or_more": ">80% mortality"
      },
      "management": "ICU organ support; address underlying cause if possible"
    },
    "acute_respiratory_distress_syndrome": {
      "mechanism": "Systemic inflammation, aspiration, sepsis",
      "incidence": "10-20%",
      "management": "Lung-protective ventilation, treat underlying cause"
    },
    "acute_kidney_injury": {
      "mechanism": "Hypoperfusion, contrast nephropathy, sepsis",
      "incidence": "20-40%",
      "management": "Fluid optimization, avoid nephrotoxins, RRT if needed"
    },
    "reperfusion_injury": {
      "see_related": "aku-040",
      "manifestations": [
        "SIRS",
        "Hyperkalemia",
        "Acidosis",
        "Myocardial depression"
      ],
      "management": "Supportive; anticipate and prepare"
    }
  },
  "wound_complications": {
    "wound_infection": {
      "incidence": "10-20% (contaminated field)",
      "management": "Antibiotics, wound opening/drainage if needed"
    },
    "fascial_dehiscence": {
      "incidence": "3-5%",
      "risk_factors": [
        "Malnutrition",
        "Infection",
        "Abdominal distension",
        "Coughing"
      ],
      "presentation": "Serosanguinous drainage, evisceration",
      "management": "Emergent operative closure"
    },
    "incisional_hernia": {
      "incidence": "10-20% at 2 years",
      "management": "Elective repair when patient recovered"
    }
  },
  "failure_modes_analysis": {
    "diagnostic_failures": [
      {
        "failure": "Delayed diagnosis",
        "consequence": "Irreversible necrosis",
        "prevention": "High suspicion, low threshold for CTA"
      },
      {
        "failure": "Missed diagnosis on imaging",
        "consequence": "Delayed treatment",
        "prevention": "Adequate CTA protocol, experienced radiologist"
      }
    ],
    "treatment_failures": [
      {
        "failure": "Inadequate revascularization",
        "consequence": "Persistent ischemia, rethrombosis",
        "prevention": "Ensure adequate inflow/outflow, completion angiography"
      },
      {
        "failure": "Incorrect viability assessment",
        "consequence": "SBS (over-resection) or sepsis (under-resection)",
        "prevention": "Use adjuncts, plan second-look"
      },
      {
        "failure": "Delayed surgery for necrosis",
        "consequence": "Sepsis, death",
        "prevention": "Recognize peritonitis early, don't delay"
      }
    ],
    "system_failures": [
      {
        "failure": "Transfer delays",
        "consequence": "Window for intervention missed",
        "prevention": "Early consultation, efficient transfer protocols"
      },
      {
        "failure": "Lack of hybrid OR",
        "consequence": "Suboptimal staged procedures",
        "prevention": "Institutional investment, alternative workflows"
      }
    ],
    "quality_improvement": {
      "morbidity_and_mortality_review": "Regular review of deaths and complications",
      "process_metrics": [
        "Time from ED to CTA",
        "Time from diagnosis to OR",
        "Second-look rate"
      ],
      "outcome_metrics": [
        "30-day mortality",
        "Anastomotic leak rate",
        "SBS rate"
      ]
    }
  },
  "clinical_pearls": [
    {
      "pearl": "Any clinical deterioration after mesenteric ischemia surgery should raise suspicion for rethrombosis, anastomotic leak, or ongoing sepsis\u2014have a low threshold for imaging",
      "implication": "Don't attribute deterioration to 'expected post-op course'\u2014investigate aggressively"
    },
    {
      "pearl": "Anastomotic leak after mesenteric ischemia surgery is often subtle initially\u2014fever and tachycardia without clear source should prompt CT",
      "implication": "Maintain high suspicion for leak; early detection improves outcomes"
    },
    {
      "pearl": "Multi-organ failure is the final common pathway in mesenteric ischemia deaths\u2014prevention focuses on early diagnosis and adequate source control",
      "implication": "Speed of intervention matters more than any single treatment choice"
    },
    {
      "pearl": "Complications after mesenteric ischemia surgery are common\u2014discussing realistic expectations with families is essential",
      "implication": "Set appropriate expectations; families should understand the high complication rate"
    }
  ],
