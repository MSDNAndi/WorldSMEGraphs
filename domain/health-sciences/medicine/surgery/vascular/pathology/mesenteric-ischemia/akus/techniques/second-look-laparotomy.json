  "content": {
    "title": "Second-Look Laparotomy",
    "definition": "Planned reoperative abdominal exploration performed 24-48 hours after initial surgery for mesenteric ischemia to reassess bowel viability and resect any additional non-viable intestine.",
    "rationale": {
      "basis": [
        "Initial bowel viability assessment may be inaccurate",
        "Ischemia-reperfusion injury may progress",
        "Demarcation of viable/non-viable becomes clearer over time",
        "Prevents massive resection based on uncertain viability"
      ],
      "timing": "Typically 24-48 hours after initial operation"
    },
    "indications": {
      "absolute": [
        "Questionable bowel viability at initial operation",
        "Large territory of marginal-appearing bowel",
        "Continued hemodynamic instability"
      ],
      "relative": [
        "Extensive revascularization",
        "High-risk patient",
        "Delay to operation >24 hours"
      ]
    },
    "technique": {
      "preparation": [
        "ICU resuscitation between operations",
        "Correction of coagulopathy/acidosis",
        "Hemodynamic optimization"
      ],
      "exploration": [
        "Full bowel examination",
        "Assessment of perfusion",
        "Resection of clearly non-viable segments"
      ],
      "adjuncts": [
        "Doppler assessment of mesenteric vessels",
        "Wood's lamp with IV fluorescein",
        "Clinical judgment remains primary"
      ],
      "closure": "Primary closure if bowel healthy; temporary closure if ongoing concerns"
    },
    "outcomes": {
      "additional_resection": "Up to 40% require additional resection",
      "mortality": "Reduces mortality in selected patients",
      "short_bowel": "May prevent unnecessary extensive resection"
    },
    "terminology": {
      "snomed_ct": "276274007",
      "icd_10": "K55.0",
      "cpt": "44005"
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Explain rationale for second-look laparotomy",
      "Identify indications for planned re-exploration",
      "Describe timing and technique"
    ],
    "clinical_pearls": [
      "When in doubt, plan a second-look",
      "24-48 hours allows demarcation",
      "Up to 40% will need additional resection"
    ]
  },
