  "pathophysiology_deep_dive": {
    "normal_splanchnic_circulation": {
      "blood_flow": "25% of cardiac output at rest, 35% postprandially",
      "autoregulation": "Can maintain flow with MAP 45-140 mmHg",
      "oxygen_extraction": "Can increase from 20% to 80% if flow decreases"
    },
    "mechanism_of_nomi": {
      "triggers": [
        "Low cardiac output states",
        "Hypovolemia and hemorrhage",
        "Septic shock (despite high cardiac output)",
        "Vasopressor use (especially alpha-agonists)",
        "Cardiopulmonary bypass",
        "Hemodialysis with ultrafiltration"
      ],
      "pathophysiology_steps": [
        "1. Systemic hypoperfusion triggers sympathetic activation",
        "2. Catecholamine release and mesenteric alpha-receptor stimulation",
        "3. Splanchnic vasoconstriction (shunts blood to vital organs)",
        "4. Sustained vasoconstriction depletes ATP and causes mucosal injury",
        "5. Vasoconstriction may persist even after cardiac output normalizes",
        "6. Diffuse, patchy bowel ischemia develops"
      ],
      "key_mediators": [
        "Norepinephrine and epinephrine (endogenous and exogenous)",
        "Angiotensin II",
        "Vasopressin",
        "Endothelin-1",
        "Reduced nitric oxide synthesis"
      ]
    }
  },
  "high_risk_populations": {
    "cardiac_surgery": {
      "incidence": "0.5-2% of cardiac surgery patients",
      "risk_factors": [
        "Prolonged cardiopulmonary bypass",
        "Low cardiac output syndrome post-op",
        "Need for IABP or ECMO",
        "Preoperative renal dysfunction",
        "Emergency surgery"
      ],
      "mortality": "70-100% once established",
      "timing": "Usually manifests 24-72 hours post-op"
    },
    "cardiogenic_shock": {
      "mechanism": "Low cardiac output \u2192 splanchnic hypoperfusion",
      "risk_factors": [
        "Acute myocardial infarction",
        "Decompensated heart failure",
        "Cardiomyopathy",
        "Massive pulmonary embolism"
      ]
    },
    "septic_shock": {
      "paradox": "High cardiac output but maldistribution of flow",
      "mechanism": "Microcirculatory dysfunction + vasopressor use",
      "particularly_high_risk": "Abdominal sepsis sources"
    },
    "hypovolemic_shock": {
      "causes": [
        "Hemorrhage",
        "Severe dehydration",
        "Burns"
      ],
      "mechanism": "Compensatory vasoconstriction to maintain BP"
    },
    "dialysis_patients": {
      "incidence": "Rare but reported",
      "mechanism": "Intradialytic hypotension and rapid fluid shifts"
    }
  },
  "clinical_presentation": {
    "classic_features": {
      "pain": "Variable - may be absent in sedated patients",
      "abdominal_exam": "Distension, absent bowel sounds, later peritonitis",
      "systemic": "Worsening shock, acidosis, multi-organ dysfunction"
    },
    "diagnostic_challenge": {
      "why_difficult": [
        "Patients are already critically ill and sedated",
        "Symptoms overlap with underlying condition",
        "Laboratory findings nonspecific",
        "Imaging may be subtle"
      ]
    },
    "surveillance_markers": {
      "laboratory": [
        "Rising lactate (most useful)",
        "Worsening base deficit",
        "Unexplained leukocytosis or leukopenia",
        "Rising D-dimer (bowel necrosis)",
        "Elevated I-FABP (investigational)"
      ],
      "clinical": [
        "Unexplained clinical deterioration",
        "Feeding intolerance",
        "Abdominal distension",
        "Bloody stool or nasogastric output",
        "Increasing vasopressor requirements"
      ]
    }
  },
  "imaging_in_nomi": {
    "ct_angiography": {
      "key_finding": "Patent mesenteric vessels (rules out occlusive disease)",
      "supportive_findings": [
        "Diminished bowel wall enhancement",
        "Mesenteric vessel narrowing (spasm)",
        "Bowel wall thickening (edema)",
        "Free fluid",
        "Pneumatosis (late - indicates necrosis)",
        "Portal venous gas (late - poor prognosis)"
      ],
      "limitations": [
        "May appear normal early",
        "Contrast timing affects vessel visualization",
        "Diffuse changes may be subtle"
      ]
    },
    "mesenteric_angiography": {
      "role": "Both diagnostic and therapeutic",
      "findings": [
        "Narrowing of SMA branches",
        "Spasm of arcades",
        "Decreased distal filling",
        "Delayed venous return"
      ],
      "advantage": "Allows papaverine infusion"
    }
  },
  "treatment_comprehensive": {
    "primary_treatment_principle": "Treat underlying cause + splanchnic vasodilation",
    "supportive_measures": {
      "hemodynamic_optimization": [
        "Restore cardiac output",
        "Judicious fluid resuscitation",
        "Inotropes preferred over vasoconstrictors if possible",
        "Wean vasopressors as tolerated"
      ],
      "vasopressor_considerations": {
        "problematic": [
          "High-dose norepinephrine",
          "Phenylephrine (pure alpha-agonist)",
          "Vasopressin (direct splanchnic constriction)"
        ],
        "potentially_preferable": [
          "Dobutamine (inotrope, may improve splanchnic flow)",
          "Milrinone (PDE inhibitor, vasodilatory)",
          "Low-dose dopamine (controversial, may be splanchnic vasodilator)"
        ],
        "practical_reality": "Often cannot wean vasopressors; focus on other interventions"
      }
    },
    "pharmacological_vasodilation": {
      "papaverine": {
        "mechanism": "Phosphodiesterase inhibitor, smooth muscle relaxant",
        "administration": "Selective SMA catheter infusion",
        "dose": "30-60 mg/hour continuous infusion",
        "duration": "12-24 hours typically",
        "monitoring": "Serial angiography to assess response",
        "complications": [
          "Systemic hypotension (usually manageable)",
          "Cardiac arrhythmias",
          "Catheter-related complications"
        ],
        "evidence": "Limited to case series; no RCTs"
      },
      "prostaglandins": {
        "mechanism": "Vasodilation and platelet inhibition",
        "agents": [
          "Prostaglandin E1 (PGE1)",
          "Prostacyclin"
        ],
        "evidence": "Anecdotal; less commonly used than papaverine"
      },
      "glucagon": {
        "mechanism": "Splanchnic vasodilation",
        "evidence": "Historical; rarely used currently"
      }
    },
    "surgical_intervention": {
      "indications": [
        "Frank peritonitis",
        "Pneumatosis or portal gas",
        "Clinical deterioration despite medical therapy",
        "Need for definitive bowel assessment"
      ],
      "approach": [
        "Laparotomy for bowel assessment",
        "Resection of necrotic segments",
        "Assessment of viability of remaining bowel",
        "Second-look surgery often needed"
      ],
      "prognosis": "Extremely poor once surgery required"
    }
  },
  "prevention": {
    "icu_strategies": [
      "Minimize duration and dose of vasopressors",
      "Optimize cardiac output with inotropes",
      "Avoid overaggressive ultrafiltration on dialysis",
      "Consider NOMI in any deteriorating patient on vasopressors"
    ],
    "cardiac_surgery_specific": [
      "Limit CPB time",
      "Pulsatile flow if available",
      "Avoid hypotension on bypass",
      "Early optimization of post-op cardiac output"
    ],
    "surveillance": [
      "Serial lactate monitoring",
      "Gastric tonometry (investigational, rarely available)",
      "Clinical suspicion in high-risk patients"
    ]
  },
  "outcomes": {
    "mortality": {
      "overall": "70-90%",
      "if_necrosis_at_surgery": "90-100%",
      "if_treated_early_medically": "50-70%"
    },
    "why_so_high": [
      "Underlying critical illness",
      "Delayed diagnosis",
      "Diffuse bowel involvement",
      "Ischemia-reperfusion injury",
      "Multi-organ dysfunction"
    ],
    "survivors": "Often require prolonged ICU stay, may have short bowel syndrome"
  },
  "dilemmas_specific_to_nomi": {
    "when_to_operate": {
      "dilemma": "Surgery is high risk in these patients, but delay is fatal",
      "approach": "Frank peritonitis or clear necrosis signs = surgery; otherwise, trial of papaverine"
    },
    "withdrawal_of_care": {
      "dilemma": "NOMI often occurs in patients with poor baseline prognosis",
      "approach": "Early goals of care discussion; surgery may be inappropriate in some"
    }
  },
