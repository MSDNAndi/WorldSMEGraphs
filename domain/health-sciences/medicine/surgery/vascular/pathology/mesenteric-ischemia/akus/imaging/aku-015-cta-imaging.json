  "content": {
    "statement": "aku-015-cta-imaging is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Mesenteric-Ischemia that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding aku-015-cta-imaging helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of aku-015-cta-imaging include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of aku-015-cta-imaging."
    },
    "definitions_glossary": {
      "concept": "A fundamental idea or notion in the domain",
      "property": "A characteristic or attribute of an entity",
      "relationship": "A connection or association between concepts"
    }
  },
  "cta_technique": {
    "protocol": {
      "contrast": "100-150 mL iodinated contrast, 3-5 mL/sec",
      "phases": {
        "non_contrast": {
          "purpose": "Detect hemorrhage, calcification",
          "delay": "N/A"
        },
        "arterial_phase": {
          "purpose": "Arterial anatomy, stenosis, occlusion, embolus",
          "delay": "25-35 seconds (bolus tracking)"
        },
        "venous_phase": {
          "purpose": "Venous thrombosis, bowel wall enhancement",
          "delay": "60-70 seconds"
        }
      },
      "slice_thickness": "0.5-1.0 mm",
      "reconstructions": [
        "Axial",
        "Coronal",
        "Sagittal",
        "MIP",
        "3D VR"
      ]
    },
    "optimal_timing": "Bolus tracking with trigger at 150-200 HU in aorta"
  },
  "arterial_findings": {
    "occlusive_disease": {
      "embolus": {
        "appearance": "Filling defect within SMA lumen",
        "location": "Typically 3-10 cm from SMA origin",
        "associated_findings": "May see other emboli (splenic, renal)",
        "distinguishing_feature": "Abrupt cutoff, meniscus sign"
      },
      "thrombosis": {
        "appearance": "Occlusion at vessel origin",
        "associated_findings": "Atherosclerotic calcification, ostial stenosis",
        "distinguishing_feature": "Gradual taper, pre-existing disease"
      },
      "stenosis": {
        "grading": {
          "mild": "<50%",
          "moderate": "50-70%",
          "severe": ">70%",
          "critical": ">90%"
        },
        "location": "Typically ostial for atherosclerosis"
      }
    },
    "nonocclusive_disease": {
      "NOMI": {
        "appearance": "Patent main vessels with diffuse narrowing of branches",
        "branch_vessels": "Pruned, irregular, spastic appearance",
        "bowel_findings": "May be normal early or show patchy changes"
      }
    },
    "collaterals": {
      "significance": "Suggest chronic disease",
      "pathways": [
        "Pancreaticoduodenal arcade",
        "Marginal artery",
        "Arc of Riolan"
      ]
    }
  },
  "venous_findings": {
    "SMV_thrombosis": {
      "appearance": "Filling defect in SMV",
      "associated": "May extend to portal vein",
      "secondary_signs": [
        "Mesenteric edema",
        "SMV enlargement"
      ]
    },
    "portal_vein_thrombosis": {
      "appearance": "Filling defect in portal vein",
      "extent": "Document extension to splenic, hepatic branches"
    }
  },
  "bowel_wall_findings": {
    "early_ischemia": {
      "wall_thickening": ">3mm (subjective)",
      "hyperenhancement": "Transient increased enhancement (arterial phase)",
      "mucosal_abnormalities": "Submucosal edema, target sign"
    },
    "established_ischemia": {
      "wall_thickening": "Marked thickening in venous, thin in arterial",
      "decreased_enhancement": "Poor or absent enhancement",
      "mesenteric_changes": "Haziness, fat stranding"
    },
    "advanced_findings": {
      "pneumatosis_intestinalis": {
        "description": "Gas within bowel wall",
        "significance": "Strongly suggests bowel necrosis",
        "caveat": "Can occur in benign conditions (emphysematous gastritis)"
      },
      "portal_venous_gas": {
        "description": "Gas in portal venous system",
        "significance": "Highly concerning for bowel necrosis",
        "appearance": "Linear lucencies in liver periphery"
      },
      "mesenteric_gas": {
        "description": "Extraluminal gas in mesentery",
        "significance": "Indicates perforation or transmural necrosis"
      }
    }
  },
  "pitfalls_and_limitations": {
    "false_negatives": [
      "Very early ischemia (before wall changes)",
      "NOMI (patent vessels, subtle changes)",
      "Small vessel disease"
    ],
    "false_positives": [
      "Pneumatosis from non-ischemic causes",
      "Celiac stenosis in asymptomatic atherosclerosis",
      "Motion artifact mimicking stenosis"
    ],
    "contraindications": [
      "Severe contrast allergy (consider MRA)",
      "Severe renal insufficiency (weigh risk/benefit)",
      "Patient too unstable for scanner"
    ]
  },
  "sensitivity_specificity": {
    "acute_arterial_occlusion": {
      "sensitivity": "93-100%",
      "specificity": "94-100%"
    },
    "acute_venous_thrombosis": {
      "sensitivity": "93-100%",
      "specificity": ">95%"
    },
    "chronic_stenosis": {
      "sensitivity": "89-100%",
      "specificity": "92-100%"
    },
    "bowel_necrosis": {
      "sensitivity": "Variable (64-82%)",
      "specificity": "High (>90%)",
      "note": "Absence of findings does not exclude necrosis"
    }
  },
  "reporting_essentials": {
    "arterial_assessment": [
      "Celiac, SMA, IMA patency and stenosis",
      "Location and nature of occlusion (embolus vs thrombus)",
      "Collateral pathways"
    ],
    "venous_assessment": [
      "SMV, portal vein, splenic vein patency",
      "Extent of thrombus"
    ],
    "bowel_assessment": [
      "Segments involved",
      "Wall thickness and enhancement",
      "Pneumatosis, portal gas, free gas"
    ],
    "other": [
      "Ascites",
      "Underlying cause (tumor, dissection)",
      "Comparison with prior studies"
    ]
  },
