    }
  },
  "epidemiological_data": {
    "incidence": {
      "rate": "1-2 per 100,000 population per year",
      "trend": "Increasing due to aging population and improved diagnostic awareness",
      "geographic_variation": "Higher in Western populations with high atherosclerotic burden"
    },
    "prevalence": {
      "symptomatic": "Rare (underdiagnosed)",
      "asymptomatic_stenosis": "6-10% of elderly (autopsy studies)",
      "note": "Most patients with anatomic disease remain asymptomatic"
    },
    "demographics": {
      "age_distribution": {
        "mean_age": "60-70 years",
        "range": "40-90 years",
        "peak_incidence": "Seventh decade"
      },
      "sex_distribution": {
        "female_male_ratio": "3:1",
        "proposed_explanations": [
          "Smaller vessel caliber in women",
          "Hormonal factors",
          "Referral patterns",
          "Longer life expectancy"
        ]
      }
    },
    "risk_factors": {
      "major": [
        {
          "factor": "Atherosclerosis",
          "prevalence_in_CMI": ">95%",
          "mechanism": "Progressive stenosis of mesenteric ostia"
        },
        {
          "factor": "Smoking",
          "relative_risk": "3-5x",
          "mechanism": "Accelerated atherosclerosis"
        },
        {
          "factor": "Hypertension",
          "prevalence_in_CMI": "70-80%",
          "mechanism": "Endothelial dysfunction, plaque formation"
        },
        {
          "factor": "Hyperlipidemia",
          "prevalence_in_CMI": "60-70%",
          "mechanism": "Lipid deposition in arterial walls"
        },
        {
          "factor": "Diabetes mellitus",
          "prevalence_in_CMI": "30-40%",
          "mechanism": "Accelerated atherosclerosis, small vessel disease"
        }
      ],
      "associated_conditions": [
        {
          "condition": "Coronary artery disease",
          "prevalence_in_CMI": "50-70%",
          "clinical_implication": "High perioperative cardiac risk"
        },
        {
          "condition": "Peripheral arterial disease",
          "prevalence_in_CMI": "30-50%",
          "clinical_implication": "Marker of systemic atherosclerosis"
        },
        {
          "condition": "Cerebrovascular disease",
          "prevalence_in_CMI": "20-30%",
          "clinical_implication": "Stroke risk perioperatively"
        },
        {
          "condition": "Renal artery stenosis",
          "prevalence_in_CMI": "30-40%",
          "clinical_implication": "Often coexists, affects surgical planning"
        }
      ],
      "non_atherosclerotic_causes": {
        "prevalence": "<5%",
        "etiologies": [
          {
            "etiology": "Median arcuate ligament syndrome",
            "typical_age": "Young women",
            "features": "Extrinsic compression of celiac axis"
          },
          {
            "etiology": "Fibromuscular dysplasia",
            "typical_age": "Middle-aged women",
            "features": "Non-atherosclerotic arterial disease"
          },
          {
            "etiology": "Vasculitis (Takayasu's, giant cell)",
            "typical_age": "Variable",
            "features": "Inflammatory arterial disease"
          },
          {
            "etiology": "Radiation-induced vasculopathy",
            "typical_age": "Post-radiation therapy",
            "features": "Fibrotic arterial stenosis"
          }
        ]
      }
    }
  },
  "natural_history": {
    "diagnostic_delay": {
      "mean_duration": "18-24 months",
      "range": "Months to years",
      "contributing_factors": [
        "Nonspecific symptoms",
        "Overlap with functional GI disorders",
        "Physician unfamiliarity",
        "Fear of eating vs. food avoidance misdiagnosis"
      ]
    },
    "progression": {
      "symptomatic_progression": "Gradual worsening of postprandial pain and weight loss",
      "acute_on_chronic": "20-30% of AMI cases have preceding CMI symptoms",
      "mortality_if_untreated": "High risk of acute ischemic event"
    },
    "weight_loss": {
      "prevalence": "80-90% of patients",
      "mechanism": "Food fear (sitophobia) and malabsorption",
      "severity": "Often >10% body weight loss"
    }
  },
  "clinical_pearls": [
    {
      "pearl": "The 'classic triad' of CMI (postprandial pain, food fear, weight loss) is present in only 50-70% of patients",
      "implication": "Maintain high suspicion even with incomplete presentation"
    },
    {
      "pearl": "Women are disproportionately affected but may be underdiagnosed due to attribution of symptoms to IBS or functional disorders",
      "implication": "Consider CMI in women with unexplained weight loss and GI symptoms"
    },
    {
      "pearl": "Asymptomatic mesenteric stenosis is common, but symptomatic CMI is rare\u2014the collateral circulation is robust",
      "implication": "Treatment decisions must be based on symptoms, not anatomy alone"
    },
    {
      "pearl": "Patients with CMI have extensive systemic atherosclerosis and require comprehensive cardiovascular risk management",
      "implication": "Perioperative cardiac evaluation is essential"
    }
  ],
