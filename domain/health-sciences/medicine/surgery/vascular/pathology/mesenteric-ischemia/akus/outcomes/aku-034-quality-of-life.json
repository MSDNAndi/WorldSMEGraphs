  "cmi_quality_of_life": {
    "pre_treatment": {
      "typical_status": [
        "Significant weight loss (often >10%)",
        "Food fear (sitophobia)",
        "Reduced oral intake",
        "Social isolation (avoiding meals with others)",
        "Depression and anxiety common",
        "Reduced physical function due to malnutrition"
      ],
      "qol_scores": "Significantly impaired across physical and mental domains"
    },
    "post_revascularization": {
      "symptom_relief": {
        "pain_resolution": "80-90% achieve significant pain reduction",
        "food_fear_resolution": "Most patients resume normal eating"
      },
      "nutritional_recovery": {
        "weight_gain": "Average 5-10 kg in first 6-12 months",
        "nutritional_markers": "Albumin, prealbumin improve"
      },
      "qol_improvement": {
        "physical_function": "Significant improvement in most patients",
        "mental_health": "Depression and anxiety typically resolve",
        "social_function": "Return to normal social eating patterns",
        "overall_qol": "Often approaches age-matched norms"
      },
      "timeframe": "Improvement begins within weeks, continues for 6-12 months"
    },
    "factors_affecting_recovery": {
      "positive_predictors": [
        "Complete revascularization",
        "Durable treatment (patent vessel)",
        "Good baseline functional status",
        "Social support"
      ],
      "negative_predictors": [
        "Persistent restenosis requiring reintervention",
        "Concurrent comorbidities",
        "Pre-existing functional GI disorder",
        "Severe baseline malnutrition"
      ]
    }
  },
  "ami_quality_of_life": {
    "survivor_population": {
      "context": "High mortality means survivors are a selected group",
      "typical_trajectory": "Prolonged hospital stay, often ICU, gradual recovery"
    },
    "early_recovery": {
      "challenges": [
        "Prolonged hospitalization (weeks to months)",
        "ICU delirium and weakness",
        "Wound healing issues",
        "Stoma adaptation if present",
        "Nutritional support requirements"
      ],
      "qol_status": "Severely impaired initially"
    },
    "long_term_outcomes": {
      "without_significant_bowel_loss": {
        "prognosis": "Often excellent QoL recovery",
        "function": "Normal or near-normal GI function",
        "timeline": "Recovery over 3-6 months"
      },
      "with_significant_bowel_loss": {
        "sbs_impact": "See AKU-032 for SBS-specific outcomes",
        "nutritional_dependence": "May require long-term TPN",
        "qol_impairment": "Variable\u2014some adapt well, others struggle"
      }
    },
    "psychological_impact": {
      "ptsd_like_symptoms": {
        "incidence": "20-40% of ICU survivors",
        "features": [
          "Flashbacks",
          "Nightmares",
          "Avoidance",
          "Hypervigilance"
        ],
        "persistence": "May last years if untreated"
      },
      "depression": {
        "incidence": "30-50%",
        "risk_factors": [
