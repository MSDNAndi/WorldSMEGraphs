  "clinical_pearls": [
    {
      "pearl": "For CMI patients, quality of life improvement is often the primary treatment goal\u2014successful revascularization can be transformative",
      "implication": "Frame treatment discussions around symptom relief and functional recovery, not just vessel patency"
    },
    {
      "pearl": "AMI survivors often experience significant psychological morbidity (PTSD, depression)\u2014screen and address proactively",
      "implication": "Include psychological support in long-term follow-up plans"
    },
    {
      "pearl": "Nutritional recovery (weight gain, albumin normalization) is a practical surrogate for QoL in mesenteric ischemia",
      "implication": "Track nutritional parameters as outcome metrics"
    },
    {
      "pearl": "TPN dependence significantly impacts QoL but many patients adapt\u2014do not assume TPN-dependent life is not worth living",
      "implication": "Counsel patients and families realistically about SBS outcomes"
    }
  ],
