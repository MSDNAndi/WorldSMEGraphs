      "relationship": "A connection or association between concepts"
    }
  },
  "surveillance_modalities": {
    "mesenteric_duplex_ultrasound": {
      "role": "Primary surveillance modality",
      "technique": {
        "patient_preparation": "Fasting for 8-12 hours",
        "transducer": "Low frequency curvilinear (2-5 MHz)",
        "views": "Sagittal and transverse aorta, celiac, SMA origins"
      },
      "velocity_criteria": {
        "celiac_stenosis": "PSV >200 cm/s or no flow",
        "SMA_stenosis": "PSV >275-300 cm/s or no flow",
        "ratio": "Velocity ratio >3:1 (vessel:aorta)"
      },
      "advantages": [
        "Non-invasive",
        "No radiation",
        "Repeatable",
        "Cost-effective"
      ],
      "limitations": [
        "Operator-dependent",
        "Bowel gas interference",
        "Body habitus limitations",
        "Cannot assess distal vessels"
      ]
    },
    "CT_angiography": {
      "role": "Problem-solving, pre-intervention planning",
      "indication": "Abnormal duplex, recurrent symptoms, bypass assessment",
      "advantages": "Comprehensive anatomic assessment",
      "limitations": "Radiation, contrast, not for routine surveillance"
    },
    "clinical_assessment": {
      "symptoms_to_monitor": [
        "Return of postprandial pain",
        "Weight loss",
        "Food fear",
        "Acute abdominal symptoms"
      ],
      "physical_exam": "Abdominal bruit, signs of malnutrition"
    }
  },
  "surveillance_schedule": {
    "after_endovascular": {
      "baseline": "1 month post-procedure",
      "year_1": "Every 3-4 months",
      "year_2": "Every 6 months",
      "beyond": "Annually",
      "rationale": "Higher restenosis rate, need for closer monitoring"
    },
    "after_open_bypass": {
      "baseline": "1 month post-procedure",
      "year_1": "Every 6 months",
      "beyond": "Annually",
      "rationale": "Lower restenosis rate but graft degeneration can occur"
    },
    "after_acute_episode": {
      "additional_monitoring": "May need more frequent imaging if extensive resection or ongoing nutritional issues"
    }
  },
  "criteria_for_reintervention": {
    "endovascular_restenosis": {
      "anatomic": ">70% in-stent restenosis",
      "hemodynamic": "PSV >400 cm/s or ratio >4:1",
      "symptomatic": "Recurrence of CMI symptoms"
    },
    "bypass_stenosis": {
      "anatomic": ">70% stenosis or occlusion",
      "hemodynamic": "Significant velocity increase from baseline",
      "symptomatic": "Recurrence of symptoms"
    },
    "approach_to_reintervention": {
      "endovascular_restenosis": "Repeat angioplasty \u00b1 stenting usually first choice",
      "bypass_stenosis": "Consider surgical revision for proximal or distal lesions",
      "occlusion": "May need new bypass or alternative approach"
    }
  },
  "secondary_prevention": {
    "medical_therapy": {
      "antiplatelet": "Aspirin 81-325 mg daily",
      "statin": "High-intensity statin for atherosclerotic disease",
      "risk_factor_modification": [
        "Smoking cessation",
        "Blood pressure control",
        "Diabetes management",
        "Weight management"
      ]
    },
    "anticoagulation": {
      "indication": "Atrial fibrillation, MVT, hypercoagulable state",
      "duration": "Lifelong if ongoing indication"
    }
  },
  "outcomes_of_surveillance": {
    "endovascular_patency": {
      "primary_1yr": "70-85%",
      "assisted_primary_3yr": "80-90%",
      "secondary": ">90% with surveillance and reintervention"
    },
    "open_bypass_patency": {
      "primary_5yr": "80-90%",
      "secondary": ">95%"
    },
    "impact_of_surveillance": "Early detection allows elective reintervention, avoiding emergency surgery"
  },
  "patient_education": {
    "warning_signs": [
      "Return of postprandial pain",
      "Unintentional weight loss",
      "Fear of eating",
      "Any acute severe abdominal pain"
    ],
    "instructions": [
      "Keep all surveillance appointments",
      "Report symptoms promptly",
      "Take medications as prescribed",
      "Maintain healthy lifestyle"
    ]
  },
