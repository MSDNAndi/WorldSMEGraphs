  "content": {
    "title": "Pseudoxanthoma Elasticum (PXE)",
    "definition": "Autosomal recessive connective tissue disorder caused by ABCC6 gene mutations, characterized by progressive calcification and fragmentation of elastic fibers in skin, eyes, and cardiovascular system.",
    "genetics": {
      "gene": "ABCC6 (ATP-binding cassette subfamily C member 6)",
      "chromosome": "16p13.1",
      "inheritance": "Autosomal recessive",
      "mechanism": "Defective transmembrane transporter leading to ectopic mineralization"
    },
    "clinical_manifestations": {
      "skin": {
        "appearance": "Yellowish papules/plaques (cobblestone)",
        "location": "Flexural areas (neck, axillae, groin, antecubital)",
        "histology": "Fragmented, calcified elastic fibers"
      },
      "ocular": {
        "angioid_streaks": "Breaks in Bruch's membrane",
        "choroidal_neovascularization": "Leading cause of visual loss",
        "peau_dorange": "Orange-peel fundus appearance"
      },
      "cardiovascular": {
        "peripheral_arterial_disease": "Premature, severe claudication",
        "coronary_artery_disease": "Accelerated atherosclerosis",
        "gi_bleeding": "From arterial calcification"
      }
    },
    "vascular_involvement": {
      "pattern": "Arterial media calcification",
      "presentation": [
        "Premature claudication (young patients)",
        "Absent/diminished pulses",
        "GI hemorrhage"
      ],
      "imaging": "Extensive arterial calcification disproportionate to age"
    },
    "diagnosis": {
      "clinical": "Characteristic skin + eye + vascular findings",
      "skin_biopsy": "Fragmented, calcified elastic fibers",
      "genetic_testing": "ABCC6 mutation analysis"
    },
    "vascular_management": {
      "challenges": [
        "Extensive calcification limits intervention",
        "Small vessel involvement",
        "Progressive disease"
      ],
      "approach": [
        "Risk factor modification",
        "Surgical revascularization when feasible",
        "Limited endovascular options due to calcification"
      ]
    },
    "terminology": {
      "snomed_ct": "61124000",
      "icd_10": "Q82.8"
    }
  },
  "pedagogical": {
