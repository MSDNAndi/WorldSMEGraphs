  "content": {
    "statement": "hht-001-definition is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Genetic-Connective-Tissue that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding hht-001-definition helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of hht-001-definition include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of hht-001-definition."
    },
    "curacao_criteria": {
      "criteria": [
        "Epistaxis - spontaneous, recurrent nosebleeds",
        "Telangiectasias - multiple, characteristic locations (lips, oral cavity, fingers, nose)",
        "Visceral AVMs - pulmonary, hepatic, cerebral, spinal, GI",
        "Family history - first-degree relative with HHT"
      ],
      "interpretation": {
        "definite": "\u22653 criteria",
        "possible": "2 criteria",
        "unlikely": "0-1 criteria"
      }
    }
  },
  "clinical_features": {
    "manifestations": {
      "epistaxis": {
        "prevalence": "90-95%",
        "onset": "Usually by age 20",
        "severity": "Variable - can be severe, require transfusion"
      },
      "telangiectasias": {
        "prevalence": "70-80%",
        "locations": [
          "Lips",
          "Tongue",
          "Fingers",
          "Nasal mucosa"
        ],
        "onset": "Increase with age"
      },
      "pulmonary_avm": {
        "prevalence": "30-50%",
        "complications": [
          "Paradoxical embolism (stroke)",
          "Brain abscess",
          "Hypoxemia",
          "Hemoptysis"
        ],
        "screening": "Contrast echocardiography, then CT if positive"
      },
      "hepatic_avm": {
        "prevalence": "30-70%",
        "complications": [
          "High-output heart failure",
          "Portal hypertension",
          "Biliary ischemia"
        ]
      },
      "cerebral_avm": {
        "prevalence": "10-20%",
        "complications": [
          "Hemorrhagic stroke"
        ]
      },
      "gi_telangiectasias": {
        "prevalence": "25-30%",
        "complications": [
          "Chronic GI bleeding",
          "Iron deficiency anemia"
        ]
      }
    },
    "treatment": {
      "epistaxis": [
        "Humidification",
        "Nasal lubricants",
        "Laser ablation",
        "Septodermoplasty",
        "Bevacizumab (anti-VEGF)"
      ],
      "pulmonary_avm": {
        "screening": "All patients at diagnosis and q5-10 years",
        "treatment": "Transcatheter embolization if feeding artery \u22653mm"
      },
      "gi_bleeding": [
        "Iron supplementation",
        "Transfusion",
        "Argon plasma coagulation",
        "Bevacizumab"
      ],
      "hepatic_avm": [
        "Medical heart failure management",
        "Liver transplant for severe cases",
        "Avoid embolization (biliary necrosis risk)"
      ]
    }
  },
