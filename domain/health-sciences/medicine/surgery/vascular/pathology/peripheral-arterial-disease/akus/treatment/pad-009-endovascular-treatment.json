  "content": {
    "statement": "pad-009-endovascular-treatment is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Peripheral-Arterial-Disease that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding pad-009-endovascular-treatment helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of pad-009-endovascular-treatment include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of pad-009-endovascular-treatment."
    },
    "by_anatomic_location": {
      "aortoiliac": {
        "approach": "Endovascular first-line for most lesions",
        "technique": "Primary stenting preferred (better patency than PTA alone)",
        "stent_types": [
          "Balloon-expandable (precise placement)",
          "Self-expanding (longer lesions)"
        ],
        "patency": "5-year patency 70-90% for iliac stenting"
      },
      "femoropopliteal": {
        "approach": "Endovascular for focal lesions; bypass for long occlusions if good conduit",
        "technique": "DCB as primary; atherectomy for calcium; avoid routine stenting",
        "dcb_agents": "Paclitaxel-coated balloons (Lutonix, IN.PACT)",
        "stents": [
          "Self-expanding nitinol",
          "Covered stents (Viabahn) for long lesions"
        ],
        "patency": "2-year patency 50-80% depending on lesion complexity"
      },
      "infrapopliteal": {
        "approach": "Endovascular primary for most CLI",
        "technique": "PTA (balloon only) primary; DCB emerging; stents NOT recommended",
        "goal": "Establish in-line flow to foot, preferably via angiosome vessel"
      }
    }
  },
  "clinical_features": {
    "device_types": {
      "plain_balloon": {
        "use": "Standard PTA, vessel prep",
        "patency": "Moderate, high restenosis in SFA"
      },
      "drug_coated_balloon": {
        "use": "Femoropopliteal primary therapy",
        "drug": "Paclitaxel",
        "patency": "Improved vs plain PTA"
      },
      "bare_metal_stent": {
        "use": "Iliac primary, femoropopliteal bailout",
        "types": [
          "Self-expanding",
          "Balloon-expandable"
        ]
      },
      "drug_eluting_stent": {
        "use": "Selected femoropopliteal",
        "example": "Zilver PTX"
      },
      "covered_stent": {
        "use": "Long SFA lesions, aneurysms, perforation",
        "example": "Viabahn"
      },
      "atherectomy": {
        "use": "Calcium modification, plaque debulking",
        "types": [
          "Directional",
          "Orbital",
          "Laser",
          "Rotational"
        ]
      }
    },
    "complications": {
