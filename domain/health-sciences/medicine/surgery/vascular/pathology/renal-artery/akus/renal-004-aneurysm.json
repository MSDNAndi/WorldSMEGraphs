  "content": {
    "title": "Renal Artery Aneurysm",
    "description": "Localized dilatation of renal artery, most commonly at bifurcation, requiring intervention based on size and patient factors.",
    "clinical_features": {
      "incidence": "0.01-1% of population on imaging",
      "location": "Most at main renal or first branch bifurcation",
      "etiology": ["Medial fibroplasia", "Atherosclerosis", "Connective tissue disorders"]
    },
    "indications_for_treatment": {
      "size": ">2 cm generally accepted threshold",
      "pregnancy": "Treatment recommended in women of childbearing age at any size",
      "symptomatic": "Hypertension, pain, hematuria",
      "enlarging": "Any documented growth"
    },
    "treatment_options": {
      "open": ["Aneurysmorrhaphy", "Excision with branch reconstruction", "Ex vivo repair"],
      "endovascular": ["Coil embolization", "Stent graft (limited applicability)"]
    },
    "clinical_pearl": "Pregnancy risk is overstated historically, but childbearing potential lowers treatment threshold"
