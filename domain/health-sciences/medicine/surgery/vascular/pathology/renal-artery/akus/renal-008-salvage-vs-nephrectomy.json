    "title": "Renal Salvage vs Nephrectomy Decision",
    "description": "Clinical decision-making framework for attempted revascularization versus nephrectomy in renal artery disease.",
    "factors_favoring_salvage": {
      "imaging": ["Kidney size >8cm", "Cortical thickness >1cm"],
      "function": "Some residual function on nuclear scan",
      "chronicity": "Acute occlusion more favorable",
      "bilateral_disease": "Need to preserve renal mass"
    },
    "factors_favoring_nephrectomy": {
      "imaging": "Atrophic kidney (<7cm), thin cortex",
      "function": "<10% differential function on renogram",
      "complications": "Uncontrollable hypertension, flash pulmonary edema",
      "malignancy": "Concern for renal cell carcinoma"
    },
    "decision_points": {
      "solitary_kidney": "Attempt salvage if any function preserved",
      "bilateral_atrophy": "Consider bilateral nephrectomy with dialysis plan"
    },
    "clinical_pearl": "Kidney size and cortical thickness predict recoverability; <10% function rarely recovers after revascularization"
  },
