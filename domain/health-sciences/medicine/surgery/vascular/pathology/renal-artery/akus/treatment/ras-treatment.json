  "content": {
    "title": "Atherosclerotic Renal Artery Stenosis Treatment",
    "definition": "Management of renal artery stenosis due to atherosclerosis, encompassing medical optimization versus revascularization strategies based on clinical presentation and evidence.",
    "current_evidence": {
      "astral_trial": "No benefit of revascularization over medical therapy for mild-moderate RAS",
      "coral_trial": "No benefit for blood pressure or renal function with stenting",
      "conclusion": "Medical therapy is first-line for most patients"
    },
    "medical_therapy": {
      "blood_pressure": [
        "ACE inhibitors/ARBs (with monitoring)",
        "Calcium channel blockers",
        "Diuretics"
      ],
      "cardiovascular_risk": [
        "Statin therapy",
        "Antiplatelet agents",
        "Smoking cessation"
      ],
      "monitoring": "Creatinine, potassium monitoring with ACE/ARB initiation"
    },
    "revascularization_indications": {
      "supported": [
        "Flash pulmonary edema",
        "Refractory heart failure",
        "Rapidly declining renal function",
        "Refractory hypertension (failure of 3+ drugs)"
      ],
      "not_supported": [
        "Incidentally discovered RAS",
        "Mild hypertension controlled on medical therapy",
        "Stable chronic kidney disease"
      ]
    },
    "revascularization_techniques": {
      "endovascular": {
        "technique": "Angioplasty with stenting",
        "stent_type": "Balloon-expandable stent preferred",
        "embolic_protection": "Considered for severe disease"
      },
      "surgical": {
        "options": ["Aortorenal bypass", "Hepatorenal/splenorenal bypass", "Reimplantation"],
        "indication": "Combined aortic reconstruction, failed endovascular"
      }
    },
    "outcomes": {
      "bp_response": "Variable, often disappointing",
      "renal_function": "Stabilization rather than improvement",
      "restenosis": "15-20% at 2 years post-stent"
    },
    "terminology": {
      "snomed_ct": "70545002",
      "icd_10": "I70.1"
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Interpret CORAL/ASTRAL trial implications",
      "Identify appropriate revascularization candidates",
      "Apply medical therapy as first-line"
    ],
    "clinical_pearls": [
      "Flash pulmonary edema = consider revascularization",
      "Most RAS does NOT benefit from intervention",
      "CORAL/ASTRAL changed practice significantly"
    ]
  },
