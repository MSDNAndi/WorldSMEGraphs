  "content": {
    "title": "Wright (Hyperabduction) Test",
    "description": "Provocative maneuver for thoracic outlet syndrome evaluating compression in the subcoracoid space.",
    "technique": {
      "position": "Patient seated or standing",
      "maneuver": "Arm abducted to 180 degrees and externally rotated",
      "assessment": "Monitor radial pulse and reproduction of symptoms"
    },
    "interpretation": {
      "positive": "Pulse obliteration and/or symptom reproduction",
      "specificity": "Low - many normal individuals have pulse changes"
    },
    "clinical_utility": {
      "best_for": "Hyperabduction syndrome (pectoralis minor compression)",
      "limitations": "High false positive rate"
    },
    "clinical_pearl": "Most useful when correlated with symptom reproduction rather than just pulse changes"
  },
