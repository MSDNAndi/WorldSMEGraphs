  "@id": "aku:vascular:rare-syndromes:kawasaki-disease",
  "name": "Kawasaki Disease",
  "alternateName": [
    "Mucocutaneous Lymph Node Syndrome",
    "MCLS",
    "Kawasaki Syndrome"
  ],
  "description": "An acute febrile vasculitis of childhood primarily affecting medium-sized arteries, with particular tropism for coronary arteries. Leading cause of acquired heart disease in children in developed countries. Coronary artery aneurysms are the major complication.",
  "code": [
    {
      "@type": "MedicalCode",
      "codeValue": "M30.3",
      "codingSystem": "ICD-10-CM"
    },
    {
      "@type": "MedicalCode",
      "codeValue": "75053002",
      "codingSystem": "SNOMED-CT",
      "name": "Kawasaki disease"
    }
  ],
  "classification": {
    "domain_path": "health-sciences/medicine/surgery/vascular/pathology/rare-syndromes",
    "type": "definition",
    "subtype": "pediatric_vasculitis",
    "difficulty": "intermediate",
    "board_yield": "HIGH"
  },
  "pathophysiology": {
    "etiology": "Unknown - likely infectious trigger in genetically susceptible children",
    "epidemiology": {
      "age": "80% cases in children <5 years old",
      "peak_incidence": "18-24 months",
      "ethnicity": "Higher in Asian populations (especially Japanese)",
      "seasonality": "Winter-spring predominance"
    },
    "vascular_pathology": {
      "acute_phase": "Neutrophilic infiltration of vessel wall",
      "subacute_phase": "Lymphocyte and plasma cell infiltration",
      "chronic_phase": "Luminal myofibroblastic proliferation, aneurysm formation",
      "target": "Medium-sized muscular arteries, especially coronary arteries"
    }
  },
  "clinical_features": {
    "diagnostic_criteria": {
      "required": "Fever \u22655 days AND \u22654 of 5 principal features",
      "principal_features": [
        "Bilateral bulbar conjunctival injection (limbic sparing)",
        "Oral mucous membrane changes (strawberry tongue, cracked lips)",
        "Polymorphous rash",
        "Extremity changes (edema/erythema acute; desquamation subacute)",
        "Cervical lymphadenopathy (usually unilateral, >1.5 cm)"
      ],
      "incomplete_kawasaki": "Fever + 2-3 features, requires lab support"
    },
    "phases": {
      "acute_phase": "Days 1-14: Fever, irritability, conjunctivitis, rash",
      "subacute_phase": "Days 14-25: Desquamation, thrombocytosis, coronary aneurysms develop",
      "convalescent_phase": ">25 days: Resolution, persistent coronary changes"
    },
    "cardiac_complications": {
      "coronary_artery_aneurysms": {
        "incidence": "25% untreated, <5% with IVIG treatment",
        "classification": {
          "small": "<5 mm",
          "medium": "5-8 mm",
          "giant": ">8 mm (highest risk)"
        },
        "complications": "Thrombosis, stenosis, myocardial infarction"
      },
      "other_cardiac": [
        "Myocarditis",
        "Pericarditis",
        "Valvular regurgitation",
        "Heart failure"
      ]
    }
  },
  "diagnosis": {
    "clinical_diagnosis": "Based on diagnostic criteria (no confirmatory test)",
    "laboratory_findings": {
      "acute_phase": [
        "Elevated ESR and CRP",
        "Leukocytosis with left shift",
        "Normocytic anemia",
        "Hypoalbuminemia",
        "Elevated liver enzymes"
      ],
      "subacute_phase": [
        "Thrombocytosis (often >1,000,000) - CLASSIC",
        "Elevated ESR persists"
      ]
    },
    "echocardiography": {
      "timing": "At diagnosis, 2 weeks, 6-8 weeks",
      "findings": "Coronary artery dilation, aneurysms, decreased function"
    },
    "z_score": "Coronary artery size normalized for body surface area"
  },
  "management": {
    "acute_treatment": {
      "ivig": {
        "dose": "2 g/kg single infusion over 10-12 hours",
        "timing": "Within first 10 days of illness",
        "effect": "Reduces coronary aneurysm risk from 25% to <5%"
      },
      "aspirin": {
        "high_dose": "80-100 mg/kg/day during acute phase",
        "low_dose": "3-5 mg/kg/day after fever resolves x 6-8 weeks"
      }
    },
    "ivig_resistance": {
      "definition": "Persistent or recurrent fever 36 hours after IVIG",
      "treatment": [
        "Second IVIG dose",
        "Corticosteroids (methylprednisolone)",
        "Infliximab (anti-TNF-\u03b1)"
      ]
    },
    "long_term_follow_up": {
      "no_coronary_involvement": "No restrictions after 6-8 weeks",
      "small_aneurysms": "Low-dose aspirin, annual cardiology follow-up",
      "giant_aneurysms": "Anticoagulation, activity restriction, regular imaging"
    }
  },
  "clinical_pearls": [
    "Thrombocytosis in subacute phase is CLASSIC - if platelets low, consider MIS-C or other diagnosis",
    "IVIG within 10 days reduces coronary aneurysm risk from 25% to <5%",
    "Giant aneurysms (>8 mm) have highest risk of MI and sudden death",
    "Leading cause of acquired heart disease in children in developed countries"
  ],
