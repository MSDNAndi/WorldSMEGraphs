  "classification": {
    "domain_path": "health-sciences/medicine/surgery/vascular/pathology/rare-syndromes",
    "type": "definition",
    "subtype": "vasomotor_disorder",
    "difficulty": "advanced",
    "board_yield": "LOW"
  },
  "pathophysiology": {
    "primary_erythromelalgia": {
      "genetics": "Autosomal dominant mutations in SCN9A gene",
      "mechanism": "Gain-of-function mutation in Nav1.7 sodium channel",
      "effect": "Increased firing of nociceptive neurons, vasodilation",
      "onset": "Childhood or adolescence"
    },
    "secondary_erythromelalgia": {
      "myeloproliferative_disorders": {
        "polycythemia_vera": "Most common cause",
        "essential_thrombocythemia": "Platelet-mediated vascular occlusion",
        "mechanism": "Aspirin-responsive due to platelet dysfunction"
      },
      "other_causes": [
        "Autoimmune diseases (SLE, RA)",
        "Medications (calcium channel blockers, bromocriptine)",
        "Peripheral neuropathy",
        "Venous insufficiency",
        "Mushroom poisoning (Clitocybe acromelalga)"
      ]
    },
    "vascular_mechanism": "Arteriovenous shunting causes increased blood flow, tissue hypoxia despite hyperemia"
  },
  "clinical_features": {
    "classic_triad": [
      "Burning pain",
      "Erythema (redness)",
      "Warmth of affected extremity"
    ],
    "distribution": {
      "feet": "Most common (bilateral)",
      "hands": "Less common",
      "face_ears": "Rare"
    },
    "temporal_pattern": {
      "triggers": "Heat, exercise, dependency, warm footwear",
      "relief": "Cooling, elevation",
      "duration": "Minutes to hours per episode"
    },
    "behavior": {
      "cooling_seeking": "Patients immerse feet in cold water, use fans",
      "complication": "Tissue damage from excessive cooling, skin maceration"
    },
    "examination_findings": {
      "during_attack": "Erythema, warmth, tenderness",
      "between_attacks": "May be normal",
      "pulse": "Usually intact (unlike ischemia)"
    }
  },
  "diagnosis": {
    "clinical_diagnosis": "Based on characteristic symptoms and triggers",
    "diagnostic_criteria": [
      "Burning pain in extremities",
      "Pain triggered or aggravated by warmth",
      "Pain relieved by cooling",
      "Erythema during attacks",
      "Increased skin temperature during attacks"
    ],
    "workup": {
      "cbc_with_differential": "Rule out myeloproliferative disorder",
      "jak2_mutation": "If elevated platelets or RBC",
      "bone_marrow_biopsy": "If myeloproliferative disorder suspected",
      "genetic_testing": "SCN9A mutation for primary cases"
    },
    "differential": [
      "Raynaud phenomenon (cold triggers, pallor-cyanosis-rubor)",
      "Peripheral neuropathy",
      "Complex regional pain syndrome",
      "Cellulitis"
    ]
  },
  "management": {
    "general_measures": [
      "Avoid triggers (heat, prolonged standing)",
      "Cooling during attacks (avoid excessive cooling)",
      "Elevation of extremities"
    ],
    "secondary_erythromelalgia": {
      "aspirin": "Highly effective for myeloproliferative-associated cases",
      "treat_underlying": "Cytoreductive therapy for PV/ET"
    },
    "primary_erythromelalgia": {
      "sodium_channel_blockers": [
        "Mexiletine",
        "Carbamazepine",
        "Lidocaine (topical or IV)"
      ],
      "other_medications": [
        "Gabapentin",
        "Tricyclic antidepressants",
        "Misoprostol",
        "Calcium channel blockers (paradoxically may help)"
      ]
    },
    "refractory_cases": [
      "Epidural or sympathetic blocks",
      "Ketamine infusions",
      "Sodium nitroprusside infusion"
    ]
  },
  "clinical_pearls": [
    "OPPOSITE of Raynaud: heat triggers erythromelalgia, cold triggers Raynaud",
    "Aspirin-responsive erythromelalgia = think myeloproliferative disorder",
    "SCN9A mutations cause both erythromelalgia (gain of function) and congenital insensitivity to pain (loss of function)",
    "Patients seeking cold exposure risk skin maceration and frostbite injury"
  ],
