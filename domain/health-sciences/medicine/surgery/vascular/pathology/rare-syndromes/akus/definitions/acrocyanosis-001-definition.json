{
  "@context": "https://schema.org/",
  "@type": "MedicalCondition",
  "@id": "aku:vascular:rare-syndromes:acrocyanosis",
  "name": "Acrocyanosis",
  "alternateName": [
    "Primary Acrocyanosis",
    "Persistent Acrocyanosis"
  ],
  "description": "A benign, persistent, painless, symmetric cyanosis of the hands and feet caused by vasospasm of small cutaneous arterioles with secondary dilation of capillaries and venules. Distinguished from Raynaud phenomenon by its persistence and lack of episodic color changes.",
  "code": [
    {
      "@type": "MedicalCode",
      "codeValue": "I73.89",
      "codingSystem": "ICD-10-CM"
    },
    {
      "@type": "MedicalCode",
      "codeValue": "91434003",
      "codingSystem": "SNOMED-CT",
      "name": "Acrocyanosis"
    }
  ],
  "classification": {
    "domain_path": "health-sciences/medicine/surgery/vascular/pathology/rare-syndromes",
    "type": "definition",
    "subtype": "vasomotor_disorder",
    "difficulty": "intermediate",
    "board_yield": "LOW"
  },
  "pathophysiology": {
    "primary_acrocyanosis": {
      "mechanism": "Arteriolar vasospasm with compensatory capillary/venular dilation",
      "blood_flow": "Slow flow through dilated subpapillary venous plexus",
      "oxygen_extraction": "Increased due to slow flow, causing deoxygenated blood pooling",
      "precipitants": "Cold exposure exacerbates, warmth improves"
    },
    "secondary_acrocyanosis": {
      "causes": [
        "Anorexia nervosa (common)",
        "Connective tissue diseases",
        "Antiphospholipid syndrome",
        "Cryoglobulinemia",
        "Hematologic malignancies",
        "Medications (beta-blockers, bleomycin)",
        "Spinal cord injury"
      ]
    },
    "demographics": {
      "typical_patient": "Young women",
      "age_onset": "Adolescence or young adulthood",
      "constitutional": "Often associated with low BMI, cold sensitivity"
    }
  },
  "clinical_features": {
    "classic_presentation": {
      "color": "Persistent symmetric bluish discoloration",
      "distribution": "Hands > feet, may involve wrists/ankles",
      "temperature": "Cool to touch but NOT cold",
      "pain": "Painless (important differentiator)"
    },
    "characteristics": {
      "persistence": "Continuous, not episodic (unlike Raynaud)",
      "symmetry": "Always bilateral and symmetric",
      "response_to_warming": "Improves but does not completely resolve",
      "hyperhidrosis": "Common, palmar and plantar"
    },
    "examination_findings": {
      "color": "Uniform blue/purple, no pallor phase",
      "capillary_refill": "May be slightly delayed",
      "pulses": "Normal and palpable",
      "no_trophic_changes": "No ulcers, no tissue loss"
    },
    "psychosocial_impact": "Cosmetic concern, especially in young women"
  },
  "diagnosis": {
    "clinical_diagnosis": "Based on characteristic appearance and absence of other findings",
    "criteria": [
      "Persistent cyanosis of hands/feet",
      "Symmetric distribution",
      "Worsened by cold, improved by warmth",
      "No pain or trophic changes",
      "Normal arterial pulses"
    ],
    "workup_to_exclude_secondary": {
      "if_suspected": [
        "CBC (hematologic malignancy)",
        "Cryoglobulins",
        "ANA, antiphospholipid antibodies",
        "Serum protein electrophoresis"
      ],
      "vascular_studies": "Usually normal, may show slow flow"
    },
    "differential_diagnosis": [
      {
        "condition": "Raynaud phenomenon",
        "differentiation": "Episodic triphasic color changes (white-blue-red)"
      },
      {
        "condition": "Peripheral arterial disease",
        "differentiation": "Diminished pulses, claudication, ischemic changes"
      },
      {
        "condition": "Cyanotic heart disease",
        "differentiation": "Central cyanosis, clubbing, abnormal echo"
      }
    ]
  },
  "management": {
    "reassurance": {
      "benign_prognosis": "Primary acrocyanosis is benign, no tissue damage",
      "education": "Explain vasomotor nature, not dangerous"
    },
    "conservative_measures": [
      "Avoid cold exposure",
      "Keep extremities warm (gloves, insulated footwear)",
      "Avoid vasoconstrictors (caffeine, nicotine)",
      "Maintain adequate hydration and nutrition"
    ],
    "pharmacotherapy": {
      "rarely_needed": "Usually not indicated for primary acrocyanosis",
      "if_severe": [
        "Calcium channel blockers (nifedipine)",
        "Alpha-blockers (prazosin)",
        "Topical nitroglycerin"
      ]
    },
    "secondary_acrocyanosis": "Treat underlying cause"
  },
  "clinical_pearls": [
    "Primary acrocyanosis is BENIGN - no ulcers, no tissue loss, no gangrene",
    "Key differentiator from Raynaud: PERSISTENT cyanosis vs EPISODIC color changes",
    "Common in anorexia nervosa - always screen for eating disorders in young women",
    "No pallor phase - goes directly from normal to blue (unlike Raynaud's triphasic)"
  ],
