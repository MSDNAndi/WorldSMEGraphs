  "content": {
    "title": "Pulmonary Artery Sling",
    "description": "Anomalous left pulmonary artery arising from right pulmonary artery, passing between trachea and esophagus.",
    "clinical_features": {
      "presentation": ["Respiratory distress", "Stridor", "Recurrent infections"],
      "age": "Usually presents in infancy",
      "associated": "Tracheal stenosis (complete rings) in 50%"
    },
    "anatomy": {
      "anomaly": "LPA from RPA, courses behind trachea",
      "compression": "Causes tracheoesophageal compression"
    },
    "diagnosis": {
      "imaging": "CT angiography or MRA",
      "bronchoscopy": "Evaluate for tracheal stenosis"
    },
    "treatment": {
      "surgical": "LPA reimplantation to main PA",
      "tracheal_repair": "May require tracheal reconstruction if stenotic"
    },
    "clinical_pearl": "Always evaluate for tracheal stenosis (complete cartilage rings) - may require simultaneous repair"
  },
