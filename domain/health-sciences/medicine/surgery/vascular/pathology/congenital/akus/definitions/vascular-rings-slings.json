  "content": {
    "title": "Vascular Rings and Pulmonary Artery Sling",
    "definition": "Congenital vascular anomalies in which abnormal vessels or their branches encircle and compress the trachea and/or esophagus, causing respiratory and feeding symptoms in infancy.",
    "vascular_rings": {
      "double_aortic_arch": {
        "anatomy": "Both right and left arches persist, encircling trachea/esophagus",
        "frequency": "Most common complete ring",
        "symptoms": "Stridor, dysphagia, respiratory distress"
      },
      "right_arch_left_ligament": {
        "anatomy": "Right aortic arch with left-sided ductus/ligamentum",
        "complete_ring": "Yes, formed by ligamentum"
      },
      "innominate_artery_compression": {
        "anatomy": "Anomalous origin compresses trachea anteriorly",
        "complete_ring": "No, but clinically significant"
      }
    },
    "pulmonary_artery_sling": {
      "anatomy": "Left pulmonary artery arises from right PA, courses between trachea and esophagus",
      "compression": "Posterior tracheal/right main bronchus compression",
      "associated": "Complete tracheal rings in 50%"
    },
    "clinical_presentation": {
      "respiratory": ["Stridor", "Wheezing", "Recurrent respiratory infections", "Reflex apnea"],
      "gastrointestinal": ["Dysphagia", "Feeding difficulties", "Vomiting"],
      "age": "Usually presents in first year of life"
    },
    "diagnosis": {
      "chest_xray": "May show right-sided aortic arch",
      "barium_swallow": "Classic posterior indentation",
      "ct_mri": "Definitive anatomic diagnosis",
      "echocardiography": "Evaluates associated cardiac defects",
      "bronchoscopy": "Assesses airway compression severity"
    },
    "treatment": {
      "surgical_indication": "Symptomatic patients",
      "double_arch": "Division of smaller (usually left) arch",
      "ring_with_ligamentum": "Division of ligamentum arteriosum",
      "pulmonary_sling": "Reimplantation of left PA +/- tracheal repair"
    },
