    "description": "Rare autosomal recessive connective tissue disorder with extreme arterial tortuosity and elongation.",
    "clinical_features": {
      "vascular": ["Severe arterial tortuosity and elongation", "Stenoses at branch points", "Aneurysms (less common)"],
      "other": ["Soft skin", "Joint hypermobility", "Facial dysmorphism"]
    },
    "genetics": {
      "gene": "SLC2A10 (glucose transporter)",
      "inheritance": "Autosomal recessive"
    },
    "complications": {
      "vascular": "Ischemic stroke from carotid/vertebral tortuosity",
      "pulmonary": "Pulmonary artery stenosis"
    },
    "treatment": {
      "surveillance": "Serial imaging for aneurysm development",
      "surgical_challenges": "Extreme tortuosity complicates any intervention"
    },
    "clinical_pearl": "Severe tortuosity on imaging should prompt consideration of ATS; genetic testing confirms diagnosis"
