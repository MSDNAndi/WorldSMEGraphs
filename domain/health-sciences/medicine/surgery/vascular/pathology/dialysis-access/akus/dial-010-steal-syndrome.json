  "content": {
    "title": "Dialysis Access-Related Steal Syndrome (HAIDI)",
    "statement": "Dialysis Access-Related Steal Syndrome (HAIDI) is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Dialysis-Access that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding Dialysis Access-Related Steal Syndrome (HAIDI) helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of Dialysis Access-Related Steal Syndrome (HAIDI) include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of Dialysis Access-Related Steal Syndrome (HAIDI)."
    },
    "pathophysiology": {
      "physiologic_steal": {
        "occurrence": "Present in all functional accesses",
        "compensation": "Hand perfusion maintained by collaterals",
        "asymptomatic": "Most patients"
      },
      "symptomatic_steal": {
        "mechanism": "Inadequate hand perfusion despite collaterals",
        "factors": [
          "High access flow",
          "Proximal inflow artery used",
          "Poor collateral development",
          "Underlying PAD"
        ]
      }
    },
    "haidi_classification": {
      "grade_1": {
        "symptoms": "Mild pain, no motor or sensory loss",
        "management": "Observation, conservative"
      },
      "grade_2": {
        "symptoms": "Pain, paresthesias, no tissue loss",
        "management": "Consider intervention"
      },
      "grade_3": {
        "symptoms": "Motor or sensory deficit, no tissue loss",
        "management": "Intervention required"
      },
      "grade_4": {
        "symptoms": "Tissue loss (ulceration, gangrene)",
        "management": "Urgent intervention or ligation"
      }
    },
    "risk_factors": {
      "patient_factors": [
        "Diabetes mellitus",
        "Peripheral arterial disease",
        "Female sex",
        "Age >65 years",
        "Prior access failures"
      ],
      "access_factors": [
        "Proximal access (brachial artery inflow)",
        "High-flow access",
        "Large anastomosis",
        "Arteriovenous graft > fistula"
      ]
    },
    "diagnosis": {
      "clinical": [
        "Hand pain, especially during dialysis",
        "Coolness and pallor",
        "Paresthesias or motor weakness",
        "Tissue loss (severe)"
      ],
      "examination": [
        "Diminished or absent radial/ulnar pulse",
        "Reduced digital pressures",
        "Improvement with access compression (positive test)"
      ],
      "studies": {
        "duplex": "Assess access flow and arterial inflow",
        "digital_pressures": "Digital-brachial index <0.6 suggests steal",
        "angiography": "Define arterial anatomy and collaterals"
      }
    },
    "treatment_options": {
      "conservative": {
        "indication": "HAIDI grade 1",
        "management": [
          "Observation",
          "Hand warmth",
          "Reassurance"
        ]
      },
      "banding": {
        "technique": "Narrowing access outflow to reduce flow",
        "indication": "High-flow steal",
        "success": "Variable, may fail over time"
      },
      "dril_procedure": {
        "name": "Distal Revascularization - Interval Ligation",
        "technique": "Bypass from proximal artery to distal brachial + ligate between",
        "indication": "HAIDI grade 2-4",
        "success": "70-80% resolution with access preservation"
      },
      "rudi": {
        "name": "Revision Using Distal Inflow",
        "technique": "Move inflow to more distal artery",
        "indication": "Alternative to DRIL"
      },
      "pai": {
        "name": "Proximalization of Arterial Inflow",
        "technique": "Use graft to bring inflow from more proximal artery",
        "indication": "Inflow stenosis with steal"
      },
      "access_ligation": {
        "indication": "Failed revascularization, severe tissue loss",
        "consequence": "Loss of access, need for new site"
      }
    },
    "terminology": {
      "snomed_ct": "371056006",
      "icd_10": "T82.898A"
    }
  },
