  "content": {
    "title": "Radiocephalic Arteriovenous Fistula (Brescia-Cimino)",
    "statement": "Radiocephalic Arteriovenous Fistula (Brescia-Cimino) is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Dialysis-Access that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding Radiocephalic Arteriovenous Fistula (Brescia-Cimino) helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of Radiocephalic Arteriovenous Fistula (Brescia-Cimino) include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of Radiocephalic Arteriovenous Fistula (Brescia-Cimino)."
    },
    "anatomy": {
      "artery": {
        "name": "Radial artery",
        "location": "Lateral forearm, wrist level",
        "size": "2-3 mm diameter typically"
      },
      "vein": {
        "name": "Cephalic vein",
        "course": "Lateral forearm to deltopectoral groove",
        "requirement": "Diameter \u22652.5 mm, patent, not thrombosed"
      },
      "anastomosis": {
        "location": "1-2 cm proximal to wrist crease",
        "technique": "End-to-side (vein to artery) preferred"
      }
    },
    "preoperative_evaluation": {
      "vein_mapping": {
        "modality": "Duplex ultrasound",
        "diameter_threshold": "\u22652.5 mm for cephalic vein",
        "assessment": "Patency, compressibility, depth"
      },
      "arterial_assessment": {
        "allen_test": "Confirm palmar arch integrity",
        "radial_artery_size": "\u22652 mm preferred"
      },
      "clinical_exam": [
        "Prior IV access sites and damage",
        "Dominant hand consideration",
        "Central venous stenosis history"
      ]
    },
    "surgical_technique": {
      "incision": "Transverse or longitudinal at wrist",
      "dissection": {
        "vein": "Mobilize 3-4 cm of cephalic vein",
        "artery": "Expose radial artery, control branches"
      },
      "anastomosis": {
        "type": "End-to-side (vein to artery) most common",
        "suture": "6-0 or 7-0 polypropylene, running",
        "size": "4-6 mm arteriotomy"
      },
      "completion": [
        "Confirm thrill present",
        "Check for kinks or twists",
        "Doppler or duplex confirmation"
      ]
    },
    "postoperative_care": {
      "immediate": [
        "Elevate arm",
        "Check thrill frequently",
        "Avoid BP measurements or blood draws in access arm"
      ],
      "maturation": {
        "timeline": "4-6 weeks minimum, ideally 8-12 weeks",
        "rule_of_6s": "Flow >600 mL/min, diameter >6 mm, depth <6 mm"
      },
      "monitoring": [
        "Physical exam (thrill, pulse)",
        "Duplex surveillance if not maturing"
      ]
    },
    "outcomes": {
      "primary_patency": {
        "one_year": "60-70%",
        "five_year": "40-50%"
      },
      "maturation_rate": "60-70%",
      "failure_causes": [
        "Small vein diameter",
        "Juxta-anastomotic stenosis",
        "Accessory veins",
        "Thrombosis"
      ]
    },
    "complications": {
      "early": [
        "Thrombosis",
        "Hematoma",
        "Wound infection"
      ],
      "late": [
        "Juxta-anastomotic stenosis",
        "Aneurysm formation",
        "Steal syndrome (rare at wrist)",
        "Failure to mature"
      ]
    },
    "vs_other_access": {
      "vs_brachiocephalic": "Lower steal risk, preserves proximal options",
      "vs_graft": "Better longevity, lower infection rate",
      "vs_catheter": "Much lower infection and mortality"
    },
