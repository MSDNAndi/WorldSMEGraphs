  "content": {
    "term": "Fistulogram",
    "synonyms": ["Dialysis Access Angiography", "AV Fistula Venography", "Access Venogram"],
    "definition": "A contrast-based imaging study of a hemodialysis arteriovenous fistula or graft that visualizes the arterial inflow, anastomosis, body of the fistula/graft, venous outflow, and central veins. Fistulograms are both diagnostic and therapeutic, commonly combined with interventions such as angioplasty or thrombectomy.",
    "indications": {
      "diagnostic": [
        "Access dysfunction (elevated venous pressures, poor flow)",
        "Difficult cannulation",
        "Prolonged bleeding after needle removal",
        "Suspected stenosis or thrombosis",
        "Access maturation assessment",
        "Arm swelling suggesting central stenosis"
      ],
      "therapeutic": [
        "Angioplasty of stenosis",
        "Thrombectomy for clotted access",
        "Stent placement",
        "Coil embolization of side branches"
      ]
    },
    "technique": {
      "access": [
        "Antegrade puncture into fistula/graft body (most common)",
        "Retrograde puncture for arterial evaluation",
        "Brachial or femoral approach for central evaluation"
      ],
      "imaging_sequence": [
        "Arterial inflow study",
        "Arterial anastomosis",
        "Fistula/graft body",
        "Venous anastomosis (graft)",
        "Juxta-anastomotic segment",
        "Draining veins to subclavian",
        "Central veins (SVC if indicated)"
      ],
      "projections": [
        "Multiple projections to visualize anastomoses",
        "Oblique views for overlapping vessels"
      ]
    },
    "findings": {
      "stenosis": [
        "Juxta-anastomotic (most common AVF)",
        "Venous outflow stenosis",
        "Swing segment stenosis (grafts)",
        "Central venous stenosis",
        ">50% diameter reduction = significant"
      ],
      "other_abnormalities": [
        "Thrombosis",
        "Pseudoaneurysm",
        "Side branch steal",
        "Arterial inflow disease",
        "Hematoma"
      ]
    },
    "interventions": {
      "angioplasty": "First-line treatment for stenosis",
      "stent": "For recoil or recurrent stenosis",
      "stent_graft": "For pseudoaneurysm or rupture",
      "thrombectomy": "For acute thrombosis (pharmacomechanical)"
    },
    "complications": [
      "Vessel rupture (treat with prolonged balloon, covered stent)",
      "Thrombosis",
      "Hematoma at access site",
      "Contrast reactions",
      "Distal embolization"
    ]
  },
