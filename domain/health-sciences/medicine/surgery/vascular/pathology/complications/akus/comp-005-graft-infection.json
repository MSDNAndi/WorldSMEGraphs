  "content": {
    "title": "Prosthetic Vascular Graft Infection: Diagnosis and Management",
    "statement": "Prosthetic Vascular Graft Infection: Diagnosis and Management is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Complications that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding Prosthetic Vascular Graft Infection: Diagnosis and Management helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of Prosthetic Vascular Graft Infection: Diagnosis and Management include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of Prosthetic Vascular Graft Infection: Diagnosis and Management."
    },
    "classification": {
      "szilagyi": {
        "grade_i": "Cellulitis involving wound",
        "grade_ii": "Infection involving subcutaneous tissue",
        "grade_iii": "Infection involving graft"
      },
      "timing": {
        "early": "<4 months - virulent organisms, operative contamination",
        "late": ">4 months - indolent organisms, biofilm, hematogenous seeding"
      }
    },
    "microbiology": {
      "early_infection": {
        "organisms": [
          "Staphylococcus aureus",
          "Gram-negative bacilli",
          "Streptococci"
        ],
        "presentation": "Sepsis, wound breakdown, hemorrhage"
      },
      "late_infection": {
        "organisms": [
          "Coagulase-negative staphylococci",
          "Enterococci"
        ],
        "presentation": "Indolent, sinus tracts, anastomotic pseudoaneurysm"
      },
      "aortoenteric_fistula": {
        "organisms": [
          "Enteric flora",
          "Candida"
        ],
        "presentation": "GI bleeding, sepsis"
      }
    },
    "clinical_presentation": {
      "local_signs": [
        "Wound erythema and drainage",
        "Sinus tract to graft",
        "Groin mass (pseudoaneurysm)",
        "Exposed graft"
      ],
      "systemic_signs": [
        "Fever, leukocytosis",
        "Sepsis",
        "Embolic phenomena"
      ],
      "aef_herald_bleed": {
        "pattern": "Self-limited GI bleed before massive hemorrhage",
        "significance": "Window for intervention before exsanguination"
      }
    },
    "diagnosis": {
      "imaging": {
        "ct_with_contrast": {
          "findings": [
            "Peri-graft fluid (>3 months post-op)",
            "Peri-graft air",
            "Anastomotic pseudoaneurysm",
            "Loss of tissue planes"
          ],
          "sensitivity": "90%"
        },
        "pet_ct": {
          "utility": "FDG uptake at graft indicates inflammation/infection",
          "advantage": "Better for indolent infections"
        },
        "wbc_scan": "Tagged WBC scan can localize infection"
      },
      "laboratory": [
        "Elevated WBC",
        "Elevated CRP/ESR",
        "Blood cultures"
      ],
      "interventional": "CT-guided aspiration of peri-graft collection"
    },
    "treatment": {
      "principles": [
        "Source control (graft excision)",
        "Revascularization",
        "Prolonged antibiotics",
        "Tissue coverage"
      ],
      "graft_excision": {
        "complete": "All infected prosthetic material",
        "debridement": "All infected tissue",
        "stump_management": "Oversew or patch aortic stump (risk of blowout)"
      },
      "revascularization_options": {
        "extra_anatomic": {
          "technique": "Axillobifemoral or femorofemoral bypass through clean tissue",
          "advantages": "Avoids infected field",
          "disadvantages": "Poorer long-term patency, staged procedure"
        },
        "in_situ": {
          "conduits": [
            "Antibiotic-impregnated prosthetic (rifampin-soaked)",
            "Cryopreserved allograft",
            "Autogenous vein (NAIS reconstruction)"
          ],
          "advantages": "Better hemodynamics, single procedure",
          "considerations": "Selected cases with controlled infection"
        }
      },
      "antibiotics": {
        "initial": "Broad spectrum covering likely pathogens",
        "duration": "6 weeks minimum, often lifelong suppression",
        "tailoring": "Based on culture results"
      }
    },
    "special_situations": {
      "aortoenteric_fistula": {
        "diagnosis": "EGD may visualize graft in bowel",
        "treatment": "Emergent graft excision, bowel repair, omental interposition",
        "mortality": "25-50%"
      },
      "aef_stump_blowout": {
        "risk": "After extra-anatomic bypass",
        "prevention": "Omental wrap, tissue coverage"
      }
    },
    "outcomes": {
      "mortality": {
        "aortic_infection": "25-50%",
        "peripheral_infection": "10-20%"
      },
      "limb_loss": "20-30% for peripheral graft infection",
      "recurrence": "10-20%"
    },
