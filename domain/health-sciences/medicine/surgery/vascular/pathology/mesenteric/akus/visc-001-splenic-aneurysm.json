  "content": {
    "identifier": "VISC-001",
    "title": "Splenic Artery Aneurysm",
    "definition": "The most common visceral artery aneurysm, occurring in the splenic artery, with unique considerations for pregnancy and female patients.",
    "concepts": [
      {
        "concept_id": "epidemiology",
        "term": "Epidemiology",
        "definition": "Who develops splenic artery aneurysms.",
        "clinical_features": {
          "frequency": "Most common visceral aneurysm (60% of visceral aneurysms)",
          "female_predominance": "4:1 female to male ratio",
          "associations": "Multiparity, portal hypertension, medial fibrodysplasia",
          "prevalence": "0.1-0.8% in autopsy series"
        }
      },
      {
        "concept_id": "natural_history",
        "term": "Natural History and Rupture Risk",
        "definition": "Behavior of untreated splenic artery aneurysms.",
        "clinical_features": {
          "rupture_rate": "2-3% overall, higher in select populations",
          "pregnancy": "25-40% maternal mortality if ruptures during pregnancy",
          "size_threshold": "2cm often used as treatment threshold",
          "growth": "Variable, some remain stable for years"
        }
      },
      {
        "concept_id": "treatment_indications",
        "term": "Treatment Indications",
        "definition": "When to intervene on splenic artery aneurysm.",
        "clinical_features": {
          "size": ">2cm diameter",
          "pregnancy": "Women of childbearing potential or pregnant",
          "symptomatic": "Any symptoms attributable to aneurysm",
          "enlarging": "Documented growth on serial imaging",
          "liver_transplant": "Before liver transplantation"
        }
      },
      {
        "concept_id": "treatment_options",
        "term": "Treatment Options",
        "definition": "How to treat splenic artery aneurysm.",
        "clinical_features": {
          "embolization": "Coil or plug embolization - first line for most",
          "stent_graft": "Covered stent for suitable anatomy",
          "open": "Resection with or without reconstruction",
          "laparoscopic": "Minimally invasive ligation"
        }
      }
    ],
    "clinical_features": {
      "imaging": "CT angiography for diagnosis and treatment planning"
    }
  },
