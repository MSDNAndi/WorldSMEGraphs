  },
  "pathophysiology": {
    "mechanism": "Profound mesenteric vasoconstriction without vessel occlusion",
    "triggers": {
      "low_cardiac_output": [
        "Cardiogenic shock",
        "Post-cardiac surgery",
        "Severe heart failure"
      ],
      "hypovolemia": [
        "Septic shock",
        "Hemorrhage",
        "Severe dehydration"
      ],
      "medications": [
        "High-dose vasopressors (alpha-agonists)",
        "Digoxin",
        "Ergot alkaloids",
        "Cocaine"
      ],
      "hemodialysis": "Intradialytic hypotension"
    },
    "vascular_response": "Splanchnic vasoconstriction redirects blood to vital organs but causes gut ischemia"
  },
  "clinical_features": {
    "setting": "Critically ill, often in ICU, post-operative",
    "presentation": {
      "pain": "Diffuse abdominal pain, may be mild initially",
      "pain_out_of_proportion": "Classic but may be absent in sedated patients",
      "distension": "Abdominal distension",
      "gi_bleeding": "Late sign, indicates mucosal necrosis"
    },
    "difficulty": "Diagnosis challenging in intubated/sedated patients"
  },
  "diagnosis": {
    "high_index_of_suspicion": "Required in at-risk patients",
    "laboratory": {
      "lactate": "Elevated (but non-specific)",
      "base_deficit": "Metabolic acidosis",
      "wbc": "Leukocytosis",
      "amylase_ldh": "May be elevated"
    },
    "imaging": {
      "ct_angiography": {
        "findings": "Patent major vessels, bowel wall changes",
        "differentiation": "No filling defect (unlike embolic/thrombotic)"
      }
    },
    "angiography": {
      "gold_standard": "Catheter angiography",
      "findings": [
        "Narrowing of origins of major branches",
        "String of sausages appearance",
        "Spasm of arcades",
        "Impaired filling of intramural vessels",
        "Reflux of contrast into aorta"
      ]
    }
  },
  "management": {
    "resuscitation": {
      "fluid_resuscitation": "Restore intravascular volume",
      "optimize_cardiac_output": "Inotropes if needed",
      "reduce_vasopressors": "Wean vasoconstrictors if possible"
    },
    "vasodilator_therapy": {
      "papaverine": {
        "route": "Intra-arterial via SMA catheter",
        "dose": "30-60 mg/hour infusion",
        "duration": "Continue 24-48 hours until symptoms resolve"
      },
      "alternatives": "Glucagon, prostaglandin E1"
    },
    "avoid_vasoconstrictors": "Minimize alpha-agonist use",
    "surgery": {
      "indication": "Signs of peritonitis, bowel necrosis",
      "procedure": "Exploratory laparotomy, resection of necrotic bowel",
      "second_look": "Plan for second-look laparotomy"
    }
