{
  "@context": "https://schema.org/",
  "@type": "MedicalCondition",
  "@id": "aku:vascular:mesenteric:mesenteric-venous-thrombosis",
  "name": "Mesenteric Venous Thrombosis",
  "alternateName": [
    "MVT",
    "Superior Mesenteric Vein Thrombosis",
    "Portal Mesenteric Thrombosis"
  ],
  "description": "Thrombosis of the mesenteric venous system causing intestinal congestion, edema, and potentially infarction. Accounts for 5-15% of mesenteric ischemia. Often associated with hypercoagulable states or local factors. Generally better prognosis than arterial mesenteric ischemia.",
  "code": [
    {
      "@type": "MedicalCode",
      "codeValue": "K55.059",
      "codingSystem": "ICD-10-CM"
    },
    {
      "@type": "MedicalCode",
      "codeValue": "55607006",
      "codingSystem": "SNOMED-CT",
      "name": "Mesenteric vein thrombosis"
    }
  ],
  "classification": {
    "domain_path": "health-sciences/medicine/surgery/vascular/pathology/mesenteric",
    "type": "definition",
    "subtype": "venous_thrombosis",
    "difficulty": "advanced",
    "board_yield": "HIGH"
  },
  "pathophysiology": {
    "mechanism": "Venous outflow obstruction \u2192 intestinal congestion \u2192 edema \u2192 hemorrhagic infarction",
    "progression": "Generally slower onset than arterial occlusion",
    "vessels": {
      "smv": "Superior mesenteric vein (most common)",
      "imv": "Inferior mesenteric vein",
      "portal": "May extend to portal vein"
    }
  },
  "etiology": {
    "hypercoagulable_states": [
      "Factor V Leiden",
      "Prothrombin G20210A mutation",
      "Protein C/S deficiency",
      "Antithrombin deficiency",
      "Antiphospholipid syndrome",
      "Myeloproliferative disorders (JAK2 positive)"
    ],
    "local_factors": [
      "Abdominal surgery",
      "Pancreatitis",
      "Cirrhosis and portal hypertension",
      "Intra-abdominal infection",
      "Inflammatory bowel disease",
      "Malignancy"
    ],
    "idiopathic": "20-30% have no identifiable cause"
  },
  "clinical_features": {
    "presentation_types": {
      "acute": "Hours to days, severe symptoms",
      "subacute": "Days to weeks, progressive symptoms",
      "chronic": "Weeks to months, may be asymptomatic"
    },
    "symptoms": [
      "Abdominal pain (often diffuse, colicky)",
      "Nausea and vomiting",
      "Diarrhea (sometimes bloody)",
      "Abdominal distension",
      "Anorexia"
    ],
    "signs": {
      "early": "May have minimal findings",
      "late": "Peritonitis if bowel infarction"
    }
  },
  "diagnosis": {
    "laboratory": {
      "elevated": "WBC, lactate, D-dimer",
      "thrombophilia_workup": "After acute treatment"
    },
    "imaging": {
      "ct_with_iv_contrast": {
        "gold_standard": "CT angiography with portal venous phase",
        "findings": [
          "Thrombus in SMV/portal vein (filling defect)",
          "Bowel wall thickening and enhancement",
          "Mesenteric fat stranding",
          "Ascites"
        ]
      },
      "mra_mrv": "Alternative, no radiation",
      "ultrasound": "May show thrombus in portal vein"
    }
  },
  "management": {
    "anticoagulation": {
      "first_line": "Anticoagulation is mainstay of treatment",
      "acute": "Heparin (UFH or LMWH)",
      "long_term": "Warfarin (INR 2-3) or DOAC",
      "duration": "6 months minimum, often indefinite if thrombophilia"
    },
    "supportive_care": [
      "NPO, bowel rest",
      "IV fluids",
      "Nasogastric decompression if distension",
      "Pain control"
    ],
    "thrombolysis": {
      "indication": "Selected cases with extensive thrombosis, no peritonitis",
      "approach": "Transjugular, transhepatic, or operative catheter"
    },
    "surgery": {
      "indications": [
        "Peritonitis",
        "Bowel infarction/necrosis",
        "Failed medical management"
      ],
      "procedure": "Exploratory laparotomy, bowel resection",
      "second_look": "Often planned for reassessment"
    }
  },
  "prognosis": {
    "mortality": "20-30% (lower than arterial mesenteric ischemia)",
    "recurrence": "Common without anticoagulation",
    "long_term": "May develop portal hypertension from chronic thrombosis"
  },
  "clinical_pearls": [
    "Think MVT in young patient with abdominal pain and hypercoagulable state",
    "CT portal venous phase is key - must look at venous structures, not just arteries",
    "Anticoagulation alone is often curative (unlike arterial mesenteric ischemia)",
    "Always do thrombophilia workup - high yield for underlying disorder"
  ],
