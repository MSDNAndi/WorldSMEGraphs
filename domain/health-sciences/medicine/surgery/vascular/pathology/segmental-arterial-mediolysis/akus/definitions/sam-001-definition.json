  "content": {
    "title": "Segmental Arterial Mediolysis (SAM)",
    "definition": "A rare non-atherosclerotic, non-inflammatory arteriopathy characterized by lysis of the outer arterial media, leading to dissection, aneurysm formation, and spontaneous hemorrhage, primarily affecting the visceral arteries.",
    "clinical_features": {
      "pathophysiology": {
        "histology": [
          "Vacuolar degeneration of smooth muscle cells",
          "Lysis of outer media",
          "Separation of outer media from adventitia",
          "Intramural hemorrhage",
          "Gap formation in arterial wall"
        ],
        "progression": {
          "phase_1": "Injuring phase - medial lysis, dissection, hemorrhage",
          "phase_2": "Reparative phase - granulation tissue, aneurysm formation"
        },
        "etiology": "Unknown; theories include alpha-1 agonist exposure, ischemic insult"
      },
      "epidemiology": {
        "age": "Middle-aged to elderly (mean 50-60 years)",
        "gender": "Slight male predominance",
        "incidence": "Rare, often underdiagnosed",
        "presentation": "Often acute abdominal emergency"
      },
      "vessels_affected": {
        "most_common": [
          "Celiac artery and branches (especially splenic)",
          "Superior mesenteric artery",
          "Middle colic artery",
          "Renal arteries"
        ],
        "less_common": [
          "Inferior mesenteric artery",
          "Coronary arteries",
          "Intracranial vessels",
          "Iliac arteries"
        ]
      },
      "presentation": {
        "acute": [
          "Sudden severe abdominal pain",
          "Retroperitoneal hemorrhage",
          "Intraperitoneal hemorrhage",
          "Hemorrhagic shock",
          "Mesenteric ischemia"
        ],
        "chronic": [
          "Asymptomatic aneurysms (incidental finding)",
          "Recurrent abdominal pain",
          "Vague abdominal symptoms"
        ]
      },
      "imaging": {
        "cta_findings": [
          "Multiple visceral artery aneurysms",
          "Dissection with intimal flap",
          "String of beads appearance (may mimic FMD)",
          "Active extravasation (if bleeding)",
          "Retroperitoneal or mesenteric hematoma"
        ],
        "angiography": [
          "Multiple aneurysms in unusual distribution",
          "Dissection planes",
          "Irregular vessel caliber"
        ]
      },
      "differential_diagnosis": [
        "Fibromuscular dysplasia",
        "Polyarteritis nodosa",
        "Ehlers-Danlos syndrome",
        "Mycotic aneurysm",
        "Spontaneous coronary artery dissection (SCAD)"
      ]
    },
    "management": {
      "acute_hemorrhage": {
        "resuscitation": "Standard hemorrhagic shock management",
        "endovascular": {
          "first_line": "Coil embolization of bleeding vessel",
          "covered_stent": "For main trunk preservation",
          "advantages": "Less invasive, can treat multiple sites"
        },
        "surgical": {
          "indications": [
            "Failed endovascular control",
            "Peritonitis requiring exploration",
            "Bowel ischemia"
          ],
          "options": ["Ligation", "Resection", "Bypass (rarely)"]
        }
      },
      "asymptomatic_aneurysms": {
        "surveillance": "Serial CTA at 3, 6, 12 months then annually",
        "treatment_threshold": "Growing or symptomatic aneurysms"
      },
      "medical_therapy": {
        "blood_pressure_control": "Avoid hypotension spikes",
        "avoid_alpha_agonists": "Theoretical benefit based on pathophysiology",
        "antiplatelet": "No established role"
      }
    },
    "prognosis": {
      "acute_presentation": "Can be fatal if not recognized promptly",
      "recurrence": "Can develop new aneurysms at other sites",
      "long_term": "Good with appropriate surveillance and treatment"
    },
    "codes": {
      "snomed_ct": "722196000 | Segmental arterial mediolysis",
