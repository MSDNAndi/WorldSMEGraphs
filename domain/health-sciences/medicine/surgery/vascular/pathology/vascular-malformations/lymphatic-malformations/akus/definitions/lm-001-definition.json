  "content": {
    "title": "Lymphatic Malformations",
    "definition": "Low-flow vascular malformations composed of dilated lymphatic channels lined by normal lymphatic endothelium. Classified by ISSVA as simple vascular malformations of lymphatic type. Present at birth, grow proportionally with the child, and never involute spontaneously.",
    "clinical_features": {
      "classification": {
        "macrocystic": {
          "definition": "Cysts >2 cm diameter",
          "old_term": "Cystic hygroma",
          "common_location": "Posterior cervical triangle, axilla",
          "treatment_response": "Excellent to sclerotherapy"
        },
        "microcystic": {
          "definition": "Cysts <2 cm diameter",
          "appearance": "Soft tissue mass with skin vesicles",
          "treatment_response": "Poor to sclerotherapy"
        },
        "mixed": {
          "definition": "Both macro and microcystic components",
          "treatment": "Combine modalities"
        }
      },
      "epidemiology": {
        "incidence": "1 in 2,000-4,000 live births",
        "prenatal_detection": "Often visible on prenatal ultrasound",
        "associations": ["Chromosomal abnormalities (Turner, trisomies)", "Noonan syndrome"]
      },
      "pathophysiology": {
        "mechanism": "Failure of lymphatic-venous connections during embryogenesis",
        "genetics": "PIK3CA mutations in some cases",
        "fluid_content": "Chylous (lipid-rich) or serous"
      },
      "clinical_presentation": {
        "location": {
          "head_neck": "Most common (75%), often posterior triangle",
          "axilla": "Second most common",
          "mediastinum": "May extend from neck",
          "extremity": "Less common",
          "visceral": "Mesentery, retroperitoneum"
        },
        "symptoms": {
          "mass_effect": "Dysphagia, airway compromise, disfigurement",
          "infection": "Recurrent cellulitis, abscess",
          "bleeding": "Intralesional hemorrhage",
          "vesicles": "Skin lymphatic blebs, leakage"
        },
        "natural_history": {
          "stable": "May remain stable for years",
          "expansion": "Upper respiratory infection, trauma, hormones (puberty, pregnancy)"
        }
      },
      "diagnostic_workup": {
        "ultrasound": {
          "findings": "Multiloculated cystic mass, no flow on Doppler",
          "role": "Initial evaluation"
        },
        "mri": {
          "gold_standard": "Yes",
          "t2": "High signal intensity (fluid-filled)",
          "t1": "Low signal, or intermediate if bloody",
          "enhancement": "Septal enhancement, no solid enhancement"
        },
        "prenatal": {
          "ultrasound": "Cystic hygroma, hydrops",
          "amniocentesis": "Karyotype to rule out chromosomal abnormality"
        }
      },
      "treatment": {
        "observation": {
          "indication": "Asymptomatic, stable",
          "monitoring": "Serial imaging, symptoms"
        },
        "sclerotherapy": {
          "first_line": "For macrocystic lesions",
          "agents": {
            "ok_432_picibanil": "Attenuated Strep. pyogenes, excellent for LM",
            "doxycycline": "Common alternative",
            "ethanol": "Effective but higher complication rate",
            "bleomycin": "Alternative"
          },
          "technique": "Aspirate fluid, inject sclerosant, repeat sessions",
          "efficacy": "70-90% improvement in macrocystic"
        },
        "surgical": {
          "indications": [
            "Microcystic lesions",
            "Failed sclerotherapy",
            "Airway compromise requiring urgent treatment"
          ],
          "technique": "Complete excision when possible, debulking",
          "complications": ["Nerve injury", "Recurrence", "Wound complications"]
        },
        "medical": {
          "sirolimus": {
            "mechanism": "mTOR inhibitor",
            "indication": "Refractory, extensive lesions",
            "efficacy": "Reduction in size, symptoms"
          }
        }
      }
    },
    "diagnostic_codes": {
      "icd10": ["Q18.1", "D18.1"],
      "snomed_ct": ["46607003"]
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Classify lymphatic malformations by cyst size",
      "Predict treatment response based on classification",
      "Apply appropriate treatment algorithm"
    ],
    "clinical_pearls": [
      "Macrocystic = excellent sclerotherapy response; microcystic = poor response",
      "Prenatal cystic hygroma mandates karyotype - high association with Turner syndrome",
      "OK-432 (Picibanil) is the ideal sclerosant for LM but may not be available everywhere",
      "Sirolimus is increasingly used for refractory/extensive lymphatic malformations",
      "Expansion during URI is classic - lymphatic congestion during illness"
    ],
    "common_misconceptions": [
      "Misconception: 'Cystic hygroma' is the same as 'lymphangioma' - Reality: Both terms are outdated, use 'lymphatic malformation'"
    ]
  },
