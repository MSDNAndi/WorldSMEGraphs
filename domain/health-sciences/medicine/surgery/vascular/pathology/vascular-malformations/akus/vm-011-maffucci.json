  "content": {
    "title": "Maffucci Syndrome",
    "description": "Rare disorder characterized by enchondromas and venous malformations (spindle cell hemangiomas).",
    "clinical_features": {
      "skeletal": "Multiple enchondromas, primarily hands and feet",
      "vascular": "Spindle cell hemangiomas (venous type)",
      "presentation": "Childhood onset with progressive deformity"
    },
    "genetics": {
      "mutations": "Somatic IDH1/IDH2 mutations",
      "inheritance": "Not inherited - somatic"
    },
    "malignancy_risk": {
      "enchondroma_transformation": "Up to 30% risk of chondrosarcoma",
      "surveillance": "Regular imaging monitoring"
    },
    "vascular_management": {
      "approach": "Symptomatic treatment of venous malformations",
      "options": "Sclerotherapy, surgical excision if symptomatic"
    },
    "clinical_pearl": "High malignancy risk requires surveillance; vascular lesions are secondary concern to skeletal tumors"
  },
