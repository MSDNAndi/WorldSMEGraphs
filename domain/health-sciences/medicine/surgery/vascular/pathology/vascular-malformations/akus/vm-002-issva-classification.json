  "clinical_features": {
    "vascular_tumors": {
      "infantile_hemangioma": {
        "natural_history": "Appears 1-4 weeks, rapid growth 0-12 months, involution 1-10 years",
        "treatment": "Observation, propranolol if problematic",
        "genetics": "GLUT-1 positive (differentiates from malformations)"
      },
      "congenital_hemangioma": {
        "subtypes": [
          "RICH (rapidly involuting)",
          "NICH (non-involuting)",
          "PICH (partially involuting)"
        ],
        "difference": "Present and fully formed at birth (unlike infantile)"
      },
      "kaposiform_hemangioendothelioma": {
        "concern": "Kasabach-Merritt phenomenon (consumptive coagulopathy)",
        "treatment": "Sirolimus, vincristine, surgery"
      }
    },
    "vascular_malformations": {
      "simple": {
        "capillary_CM": {
          "example": "Port-wine stain",
          "flow": "Low-flow",
          "treatment": "Pulsed dye laser"
        },
        "venous_VM": {
          "characteristics": "Compressible, expands with Valsalva",
          "flow": "Low-flow",
          "treatment": "Sclerotherapy, surgical excision"
        },
        "lymphatic_LM": {
          "types": [
            "Macrocystic",
            "Microcystic",
            "Mixed"
          ],
          "flow": "Low-flow (no flow)",
          "treatment": "Sclerotherapy (macrocystic), sirolimus"
        },
        "arteriovenous_AVM": {
          "characteristics": "Warm, thrill, bruit, may bleed",
          "flow": "High-flow",
          "treatment": "Embolization + resection, staged approach"
        }
      },
      "combined": [
        "CVM (capillary-venous)",
        "LVM (lymphatic-venous)",
        "CLVM (Klippel-Trenaunay)",
        "CAVM"
      ]
    },
