  "content": {
    "title": "Blue Rubber Bleb Nevus Syndrome",
    "description": "Rare disorder with multiple venous malformations of skin and GI tract causing chronic GI bleeding.",
    "clinical_features": {
      "cutaneous": "Blue, compressible, rubbery skin lesions",
      "gi_involvement": "Venous malformations throughout GI tract",
      "presentation": "Chronic GI bleeding, iron deficiency anemia"
    },
    "genetics": {
      "mutations": "TEK/TIE2 mutations in some cases",
      "inheritance": "Usually sporadic, rare familial cases"
    },
    "complications": {
      "chronic_bleeding": "May require transfusion support",
      "intussusception": "GI lesions may cause obstruction"
    },
    "treatment": {
      "medical": "Iron supplementation, transfusions",
      "endoscopic": "Cauterization of GI lesions",
      "surgical": "Resection of accessible lesions, sirolimus shows promise"
    },
    "clinical_pearl": "Sirolimus (mTOR inhibitor) has shown benefit in reducing lesion size and bleeding"
  },
