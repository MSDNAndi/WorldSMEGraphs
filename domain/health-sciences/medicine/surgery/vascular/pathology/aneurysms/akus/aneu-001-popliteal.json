  "content": {
    "title": "Popliteal Artery Aneurysm",
    "description": "The most common peripheral arterial aneurysm, predominantly affecting older males, with high risk of thrombosis and distal embolization rather than rupture.",
    "epidemiology": "Male:female ratio 30:1, mean age 65, bilateral in 50%, associated AAA in 30-50%",
    "definition": "Diameter >2cm or 1.5x normal adjacent artery",
    "pathophysiology": "Degenerative process, possibly related to repetitive knee flexion trauma. High rates of mural thrombus formation and distal embolization.",
    "clinical_presentation": {
      "asymptomatic": "50% at diagnosis",
      "acute_ischemia": "Thrombosis with poor runoff (20-30%)",
      "chronic_ischemia": "From repeated embolization",
      "compression": "Rare, may cause DVT-like symptoms",
      "rupture": "Uncommon (<5%)"
    },
    "imaging": {
      "duplex": "Initial study, measures diameter, thrombus",
      "cta_mra": "Pre-operative planning, runoff assessment"
    },
    "treatment": {
      "indications": "Symptomatic, diameter >2cm, mural thrombus",
      "surgical_options": ["Medial approach with ligation and bypass", "Posterior approach with interposition", "Endovascular exclusion (selected cases)"],
      "key_factor": "Patent runoff vessels critical for outcome"
    }
  },
