  "content": {
    "title": "Isolated Iliac Artery Aneurysm",
    "description": "Aneurysm of the iliac arteries without associated AAA. Internal iliac aneurysms are most commonly isolated; common iliac more often associated with AAA.",
    "epidemiology": "2-7% of aortoiliac aneurysms, mean age 70, male predominance, often bilateral",
    "definition": {
      "common_iliac": ">1.5cm (normal 1-1.2cm)",
      "internal_iliac": ">2cm",
      "external_iliac": "Very rare"
    },
    "clinical_presentation": {
      "asymptomatic": "Most common",
      "mass_effect": "Ureteral obstruction, venous compression, neural compression",
      "rupture": "Higher risk than extremity aneurysms (14-25%)"
    },
    "treatment": {
      "indications": "CIA >3-3.5cm, IIA >3cm, symptomatic",
      "open": "Bypass with exclusion or resection",
      "endovascular": "Covered stent (CIA), coil embolization (IIA)",
      "IIA_consideration": "Unilateral sacrifice acceptable; bilateral may cause buttock claudication, erectile dysfunction"
    }
  },
