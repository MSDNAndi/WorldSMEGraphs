  "content": {
    "identifier": "VPROC-003",
    "title": "Perforating Vein Treatment",
    "definition": "Ablation or ligation of incompetent perforating veins that connect the superficial and deep venous systems, contributing to chronic venous insufficiency and ulceration.",
    "concepts": [
      {
        "concept_id": "anatomy",
        "term": "Perforator Anatomy",
        "definition": "Key perforating veins in venous disease.",
        "clinical_features": {
          "paratibial": "Cockett perforators - medial lower leg",
          "posterior_tibial": "Boyd's perforator - below knee",
          "thigh": "Dodd's perforator - mid thigh",
          "normal_function": "Direct flow from superficial to deep",
          "pathologic": "Outward (refluxing) flow when incompetent"
        }
      },
      {
        "concept_id": "indications",
        "term": "Indications",
        "definition": "When to treat perforating veins.",
        "clinical_features": {
          "ulcer_associated": "Perforator near venous ulcer (CEAP C6)",
          "diameter": ">3.5mm diameter with outward flow >500ms",
          "failed_saphenous": "Persistent reflux after saphenous ablation",
          "controversy": "Role in absence of ulcer still debated"
        }
      },
      {
        "concept_id": "techniques",
        "term": "Treatment Techniques",
        "definition": "Methods for perforator ablation.",
        "clinical_features": {
          "seps": "Subfascial endoscopic perforator surgery (historical)",
          "thermal_ablation": "Percutaneous laser or RF ablation",
          "sclerotherapy": "Ultrasound-guided foam sclerotherapy",
          "open_ligation": "Direct surgical ligation (Linton procedure historical)"
        }
      },
      {
        "concept_id": "outcomes",
        "term": "Outcomes",
        "definition": "Results of perforator treatment.",
        "clinical_features": {
          "ulcer_healing": "May accelerate ulcer healing",
          "recurrence": "May reduce ulcer recurrence",
          "evidence": "Evidence for isolated perforator treatment is limited",
          "adjunct": "Usually adjunct to saphenous ablation"
        }
      }
    ],
    "clinical_features": {
      "current_practice": "Usually treat with saphenous ablation, selective perforator treatment"
    }
  },
