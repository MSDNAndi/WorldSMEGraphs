  "content": {
    "identifier": "VEN-005",
    "title": "DVT Treatment Algorithm",
    "definition": "Evidence-based treatment algorithm for deep vein thrombosis including anticoagulation, thrombolysis, and mechanical thrombectomy.",
    "concepts": [
      {
        "concept_id": "anticoagulation",
        "term": "Anticoagulation Therapy",
        "definition": "First-line treatment for most DVT, preventing clot propagation and recurrence.",
        "clinical_features": {
          "initial": ["LMWH", "Fondaparinux", "DOAC", "IV UFH"],
          "long_term": ["DOAC preferred", "Warfarin INR 2-3", "LMWH in cancer"],
          "duration": {
            "provoked": "3 months",
            "unprovoked": "Indefinite if low bleeding risk",
            "cancer": "Until cancer resolved"
          }
        }
      },
      {
        "concept_id": "thrombolysis",
        "term": "Catheter-Directed Thrombolysis",
        "definition": "Pharmacomechanical thrombolysis for iliofemoral DVT to prevent post-thrombotic syndrome.",
        "clinical_features": {
          "indications": ["Iliofemoral DVT", "Symptom duration <14 days", "Low bleeding risk", "Good functional status"],
          "agents": ["tPA", "Reteplase", "Tenecteplase"],
          "devices": ["EKOS ultrasound-accelerated", "AngioJet", "Trellis"],
          "contraindications": ["Active bleeding", "Recent surgery", "Stroke history"]
        }
      },
      {
        "concept_id": "mechanical-thrombectomy",
        "term": "Mechanical Thrombectomy",
        "definition": "Percutaneous mechanical clot removal as adjunct or alternative to thrombolysis.",
        "clinical_features": {
          "devices": ["ClotTriever", "Flowtriever", "Inari"],
          "advantage": "Reduced lytic dose and bleeding risk",
          "iliac_stenting": "Often required for underlying compression"
        }
      },
      {
        "concept_id": "ivc-filter",
        "term": "IVC Filter Placement",
        "definition": "Indication for inferior vena cava filter placement in DVT/PE.",
        "clinical_features": {
          "absolute": "Anticoagulation contraindicated",
          "relative": ["Massive PE with hemodynamic compromise", "Poor cardiopulmonary reserve"],
          "retrievable_preferred": "Should be removed when AC resumed"
        }
      }
    ],
    "clinical_features": {
      "bleeding_assessment": "HAS-BLED score for bleeding risk",
      "compression": "Graduated compression stockings controversial"
    },
    "diagnostic_criteria": {
      "treatment_success": "Resolution of symptoms, DVT non-occlusive or resolved on imaging"
    }
  },
