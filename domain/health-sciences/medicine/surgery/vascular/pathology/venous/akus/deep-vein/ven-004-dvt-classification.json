  "content": {
    "identifier": "VEN-004",
    "title": "Deep Vein Thrombosis Classification",
    "definition": "Classification systems for deep vein thrombosis based on anatomic location, acuity, and clinical severity.",
    "concepts": [
      {
        "concept_id": "anatomic-classification",
        "term": "Anatomic Classification",
        "definition": "DVT classified by location: distal (calf veins), proximal (popliteal and above), and iliofemoral.",
        "clinical_features": {
          "distal": ["Posterior tibial", "Peroneal", "Gastrocnemius", "Soleal"],
          "proximal": ["Popliteal", "Femoral", "Common femoral"],
          "iliofemoral": ["Iliac veins", "IVC"],
          "clinical_significance": "Proximal DVT has higher PE risk and requires treatment"
        }
      },
      {
        "concept_id": "acuity-classification",
        "term": "Temporal Classification",
        "definition": "DVT classified by duration since symptom onset.",
        "clinical_features": {
          "acute": "<14 days, best candidate for intervention",
          "subacute": "14-28 days",
          "chronic": ">28 days, organized thrombus"
        }
      },
      {
        "concept_id": "phlegmasia-spectrum",
        "term": "Phlegmasia Spectrum",
        "definition": "Severe forms of DVT with limb-threatening venous outflow obstruction.",
        "clinical_features": {
          "phlegmasia_alba_dolens": ["Massive iliofemoral DVT", "Pale swollen leg", "Arterial spasm"],
          "phlegmasia_cerulea_dolens": ["Complete venous occlusion", "Cyanotic leg", "Compartment syndrome risk"],
          "venous_gangrene": ["Arterial insufficiency", "Tissue necrosis", "Limb loss risk"]
        }
      }
    ],
    "clinical_features": {
      "wells_criteria": "Clinical prediction score for DVT probability",
      "d_dimer": "Negative D-dimer rules out DVT in low probability",
      "ultrasound": "Compression ultrasound is diagnostic standard"
    },
    "diagnostic_criteria": {
      "probability": {
        "high": ">3 points on Wells score",
        "moderate": "1-2 points",
        "low": "0 or negative points"
      }
    }
  },
