  "content": {
    "identifier": "SVD-005",
    "title": "Saphenofemoral Junction",
    "definition": "The anatomic junction where the great saphenous vein empties into the common femoral vein, a critical landmark for venous surgery and the most common site of saphenous reflux origin.",
    "concepts": [
      {
        "concept_id": "location",
        "term": "SFJ Location",
        "definition": "Surface and deep anatomic landmarks.",
        "clinical_features": {
          "surface": "3-4cm inferolateral to pubic tubercle",
          "depth": "4-5cm deep to skin in average patient",
          "relation_to_inguinal_ligament": "Approximately 4cm inferior",
          "relation_to_femoral_artery": "Medial to common femoral artery"
        }
      },
      {
        "concept_id": "tributaries",
        "term": "SFJ Tributaries",
        "definition": "Named veins joining at or near the junction.",
        "clinical_features": {
          "superficial_epigastric": "Courses toward umbilicus",
          "superficial_circumflex_iliac": "Courses laterally toward ASIS",
          "external_pudendal": "Courses medially to genitalia",
          "anterolateral_thigh": "Variable, drains anterior thigh",
          "posteromedial_thigh": "Variable, drains medial thigh"
        }
      },
      {
        "concept_id": "terminal-valve",
        "term": "Terminal Valve",
        "definition": "The valve at the saphenofemoral junction.",
        "clinical_features": {
          "location": "Within 1-2cm of junction",
          "function": "Prevents reflux from femoral to saphenous vein",
          "competence": "Key determinant of saphenous reflux"
        }
      },
      {
        "concept_id": "surgical-anatomy",
        "term": "Surgical Considerations",
        "definition": "Anatomic factors important for intervention.",
        "clinical_features": {
          "flush_ligation": "At junction during traditional surgery",
          "ablation_distance": "2cm from junction recommended for thermal ablation",
          "recurrence_source": "Neovascularization or residual stump"
        }
      }
    ],
    "clinical_features": {
      "ultrasound_assessment": "Standard start point for saphenous vein mapping",
      "reflux_origin": "Most common source of primary varicose veins"
    }
  },
