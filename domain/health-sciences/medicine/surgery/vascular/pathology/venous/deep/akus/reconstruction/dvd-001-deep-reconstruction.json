  "content": {
    "title": "Deep Venous Reconstruction",
    "definition": "Surgical procedures aimed at restoring venous outflow and/or competence in the deep venous system for patients with severe post-thrombotic syndrome or primary deep venous insufficiency.",
    "indications": {
      "primary": [
        "Severe post-thrombotic syndrome refractory to conservative therapy",
        "Iliofemoral venous occlusion with chronic symptoms",
        "Primary deep venous reflux with ulceration"
      ],
      "patient_selection": [
        "Failed compression therapy",
        "Venous claudication limiting quality of life",
        "Non-healing venous ulcer despite superficial ablation"
      ]
    },
    "reconstruction_types": {
      "endovascular": {
        "iliofemoral_stenting": {
          "indication": "Chronic iliofemoral DVT, May-Thurner syndrome",
          "technique": "Large-bore dedicated venous stents",
          "patency": "85-90% at 1 year with anticoagulation"
        },
        "recanalization": "CTO crossing of chronic occlusions"
      },
      "open_bypass": {
        "palma_procedure": {
          "indication": "Unilateral iliofemoral occlusion",
          "technique": "Contralateral saphenous vein crossover graft",
          "av_fistula": "Often added to enhance patency"
        },
        "saphenopopliteal_bypass": "Femoropopliteal bypass using saphenous"
      },
      "valve_procedures": {
        "valvuloplasty": "Repair of native valve",
        "valve_transplant": "Brachial or axillary valve segment",
        "neovalve": "Creation of neo-valve from vein wall"
      }
    },
    "outcomes": {
      "iliac_stenting": "High patency, excellent symptom relief",
      "bypass": "Variable, requires anticoagulation",
      "valve_surgery": "Limited durability, technically demanding"
    },
    "complications": [
      "Thrombosis of reconstruction",
      "Wound complications",
      "Recurrent symptoms"
    ],
    "terminology": {
      "snomed_ct": "76189005",
      "icd_10": "I87.09",
      "cpt": "35501"
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Identify candidates for deep venous reconstruction",
      "Describe major reconstruction options",
      "Understand outcomes of iliofemoral stenting"
    ],
    "clinical_pearls": [
      "Iliofemoral stenting is first-line for chronic obstruction",
      "Palma procedure requires contralateral healthy vein",
      "Valve surgery has limited durability"
    ]
  },
