  "content": {
    "term": "Iliofemoral Venous Stenting",
    "synonyms": ["Iliac Vein Stenting", "Deep Venous Stenting", "Venous Outflow Stenting"],
    "definition": "Endovascular placement of stents in the iliofemoral venous system to treat chronic venous outflow obstruction, most commonly due to May-Thurner syndrome (iliac vein compression) or post-thrombotic syndrome. Dedicated venous stents have improved outcomes compared to arterial stents used off-label.",
    "indications": {
      "non_thrombotic": [
        "May-Thurner syndrome with symptomatic iliofemoral compression",
        "External iliac vein compression",
        "Symptomatic iliac vein stenosis"
      ],
      "post_thrombotic": [
        "Post-thrombotic syndrome with chronic iliac obstruction",
        "Failed conservative therapy (compression, medications)",
        "Venous claudication",
        "Recurrent DVT despite anticoagulation"
      ],
      "acute_thrombotic": [
        "Adjunct to pharmacomechanical thrombolysis for acute iliofemoral DVT",
        "Underlying stenosis revealed after thrombus removal"
      ]
    },
    "patient_selection": {
      "symptoms": [
        "Leg swelling unresponsive to compression",
        "Venous claudication (pain with exertion)",
        "Recurrent DVT",
        "Severe PTS (Villalta â‰¥15)"
      ],
      "imaging_criteria": [
        ">50% stenosis on IVUS or venography",
        "Significant pressure gradient across lesion",
        "Documented obstruction on duplex/CT/MR venography"
      ]
    },
    "technique": {
      "access": [
        "Femoral vein (ipsilateral common femoral or popliteal)",
        "Jugular vein (for IVC extension)"
      ],
      "imaging": [
        "Ascending venography for visualization",
        "IVUS (intravascular ultrasound) for accurate sizing",
        "IVUS superior to venography for stenosis detection"
      ],
      "stent_selection": {
        "dedicated_venous_stents": [
          "Wallstent (historical)",
          "VENOVO stent",
          "VICI Venous Stent",
          "Zilver Vena",
          "Abre Venous Stent"
        ],
        "sizing": "Generally 14-16 mm for common iliac, 12-14 mm for external iliac",
        "landing_zones": "Extend into healthy vein proximally and distally"
      },
      "adjuncts": [
        "Pre-dilation for chronic occlusion",
        "Post-dilation to appose stent",
        "IVUS to confirm adequate expansion"
      ]
    },
    "outcomes": {
      "technical_success": ">95%",
      "patency": {
        "non_thrombotic": "90-95% at 2 years",
        "post_thrombotic": "70-80% at 2 years"
      },
      "symptom_relief": "70-80% significant improvement",
      "ulcer_healing": "60-80% healing rate"
    },
    "complications": [
      "In-stent restenosis",
      "Stent thrombosis",
      "Stent migration (rare with proper sizing)",
      "Access site complications",
      "Contralateral iliac vein compression ('jailing')"
    ],
    "anticoagulation": {
      "acute": "Continue therapeutic anticoagulation",
      "chronic": [
        "At least 3-6 months anticoagulation post-stenting",
        "Longer if underlying thrombophilia or prior DVT"
      ]
    }
  },
