  "content": {
    "title": "Pelvic Congestion Syndrome",
    "definition": "Chronic pelvic pain syndrome in women caused by pelvic venous insufficiency, with dilated and incompetent pelvic veins leading to venous congestion. Often associated with ovarian vein reflux and may be secondary to venous outflow obstruction.",
    "clinical_features": {
      "epidemiology": {
        "prevalence": "Up to 30% of chronic pelvic pain in women",
        "age_group": "Premenopausal women, multiparous",
        "risk_factors": ["Multiparity", "Polycystic ovaries", "Hormonal factors"]
      },
      "pathophysiology": {
        "primary": {
          "mechanism": "Incompetent ovarian/pelvic vein valves",
          "consequence": "Retrograde flow and venous distension",
          "hormonal_influence": "Estrogen-induced venous dilation"
        },
        "secondary": {
          "may_thurner_syndrome": "Left iliac vein compression",
          "nutcracker_syndrome": "Left renal vein compression",
          "ivc_obstruction": "Thrombosis, compression, filters"
        }
      },
      "clinical_presentation": {
        "pain_characteristics": {
          "quality": "Dull, aching, dragging",
          "location": "Unilateral or bilateral lower quadrant/pelvis",
          "aggravating_factors": [
            "Standing",
            "Walking",
            "Premenstrual period",
            "Post-coital (postcoital ache)"
          ],
          "relieving_factors": "Lying down, early morning better"
        },
        "associated_symptoms": [
          "Dyspareunia",
          "Dysmenorrhea",
          "Vulvar/perineal varices",
          "Leg varicosities (atypical distribution)",
          "Urinary frequency",
          "Irritable bowel symptoms"
        ],
        "physical_findings": [
          "Vulvar, perineal, or thigh varices",
          "Pelvic tenderness on exam",
          "Ovarian point tenderness"
        ]
      },
      "diagnostic_workup": {
        "imaging": {
          "transvaginal_doppler": {
            "role": "Initial screening",
            "findings": ["Dilated pelvic veins >6mm", "Retrograde flow >3 seconds", "Slow flow <3 cm/s"]
          },
          "ct_venography": {
            "role": "Anatomic evaluation, exclude compression",
            "technique": "Delayed venous phase"
          },
          "mr_venography": {
            "role": "Alternative, better soft tissue",
            "findings": "Dilated gonadal veins, pelvic varices"
          },
          "catheter_venography": {
            "role": "Gold standard, allows intervention",
            "technique": "Selective catheterization of gonadal veins",
            "findings": "Reflux, cross-pelvic collaterals"
          }
        },
        "differential_diagnosis": [
          "Endometriosis",
          "Chronic pelvic inflammatory disease",
          "Interstitial cystitis",
          "Irritable bowel syndrome",
          "Musculoskeletal pain"
        ]
      },
      "treatment": {
        "conservative": {
          "medical": ["Medroxyprogesterone", "GnRH agonists", "Danazol"],
          "supportive": ["Pelvic floor physical therapy", "NSAIDs"]
        },
        "interventional": {
          "ovarian_vein_embolization": {
            "technique": "Coil and/or sclerosant embolization",
            "success_rate": "70-85% symptom improvement",
            "approach": "Right internal jugular or femoral access"
          }
        },
        "surgical": {
          "indications": "Failed embolization, anatomic issues",
          "procedures": ["Oophorectomy", "Hysterectomy (last resort)"]
        }
      }
    },
    "diagnostic_codes": {
      "icd10": ["I87.1", "N94.89"],
      "snomed_ct": ["236761006"]
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Recognize clinical features suggestive of pelvic congestion syndrome",
      "Apply appropriate diagnostic algorithm",
      "Understand role of ovarian vein embolization"
    ],
    "clinical_pearls": [
      "Consider PCS in women with chronic pelvic pain worse with standing and relieved by lying down",
      "Look for secondary causes: May-Thurner, Nutcracker syndrome",
      "Vulvar varices filling from above suggest gonadal vein reflux",
      "Ovarian vein embolization is first-line intervention with 70-85% success rate"
    ],
    "common_misconceptions": [
      "Misconception: PCS is a diagnosis of exclusion - Reality: It has specific diagnostic criteria and imaging findings"
    ]
  },
