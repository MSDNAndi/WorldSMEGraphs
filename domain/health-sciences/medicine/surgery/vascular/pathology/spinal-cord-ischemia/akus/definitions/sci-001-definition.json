  "content": {
    "title": "Spinal Cord Ischemia After Aortic Surgery",
    "definition": "Ischemic injury to the spinal cord occurring as a complication of thoracic or thoracoabdominal aortic surgery, resulting in paraparesis or paraplegia, caused by interruption of spinal cord blood supply.",
    "clinical_features": {
      "anatomy": {
        "blood_supply": {
          "anterior_spinal_artery": "Supplies anterior 2/3 of cord",
          "posterior_spinal_arteries": "Supply posterior 1/3 of cord",
          "radicular_arteries": "Segmental feeders from aorta"
        },
        "artery_of_adamkiewicz": {
          "name": "Arteria radicularis magna",
          "origin": "Usually T9-L2 (80% on left side)",
          "significance": "Major blood supply to lower spinal cord",
          "identification": "May be identified on preoperative CTA/MRA"
        },
        "watershed_zones": "T4-T8 most vulnerable (between territories)"
      },
      "risk_factors": {
        "procedural": [
          "Extent of aortic coverage (Crawford type II highest risk)",
          "Aortic cross-clamp time",
          "Sacrifice of intercostal/lumbar arteries",
          "Prior aortic surgery",
          "Emergent surgery"
        ],
        "patient": [
          "Hypotension",
          "Atherosclerosis",
          "Advanced age",
          "Renal insufficiency",
          "Diabetes"
        ]
      },
      "crawford_classification_risk": {
        "type_I": "5-10% paraplegia risk",
        "type_II": "15-30% paraplegia risk (highest)",
        "type_III": "5-10% paraplegia risk",
        "type_IV": "2-5% paraplegia risk"
      },
      "presentation": {
        "immediate": "Awakens from anesthesia with paraplegia",
        "delayed": "Normal postoperatively, develops weakness hours to days later (30-40% of cases)",
        "patterns": {
          "anterior_spinal_syndrome": "Motor paralysis with preserved proprioception",
          "complete": "Flaccid paralysis, sensory loss, autonomic dysfunction"
        }
      }
    },
    "prevention_strategies": {
      "preoperative": {
        "imaging": "Identify Adamkiewicz artery on CTA/MRA",
        "staging": "Staged repair for extensive aneurysms",
        "risk_assessment": "Calculate predicted risk for informed consent"
      },
      "intraoperative": {
        "spinal_drain": {
          "mechanism": "Reduces CSF pressure, improves spinal cord perfusion pressure",
          "target": "CSF pressure <10 mmHg",
          "insertion": "Before surgery or at surgery start"
        },
        "intercostal_reimplantation": {
          "principle": "Reimplant critical intercostal arteries (especially T8-L1)",
          "technique": "Button or patch technique"
        },
        "perfusion_adjuncts": [
          "Left heart bypass",
          "Partial cardiopulmonary bypass",
          "Hypothermia (mild to moderate)"
        ],
        "monitoring": [
          "Motor evoked potentials (MEPs)",
          "Somatosensory evoked potentials (SSEPs)",
          "Combined monitoring preferred"
        ],
        "hemodynamic_goals": [
          "Mean arterial pressure >80-90 mmHg",
          "Avoid hypotension",
          "Maintain adequate hematocrit"
        ]
      },
      "postoperative": {
        "spinal_drain": "Continue 48-72 hours postoperatively",
        "blood_pressure": "Keep MAP elevated (80-100 mmHg)",
        "monitoring": "Frequent neurologic exams, especially first 72 hours",
        "avoid": "Hypotension, anemia, hypoxia"
      }
    },
    "treatment_of_deficit": {
      "immediate_interventions": [
        "Increase MAP to 90-100 mmHg",
        "CSF drainage to pressure <10 mmHg",
        "Correct anemia (transfuse to Hgb >10)",
        "Optimize oxygenation",
        "Consider high-dose steroids (controversial)"
      ],
      "if_spinal_drain_not_in_place": "Place emergently",
      "rescue_interventions": [
        "Maximize collateral flow",
        "Consider angiography to identify/treat occlusions"
      ],
      "rehabilitation": "Early PT/OT for recovery optimization"
    },
    "prognosis": {
      "immediate_paraplegia": "Worse prognosis, often incomplete recovery",
      "delayed_paraplegia": "Better prognosis with aggressive treatment",
      "recovery_factors": [
        "Time to intervention",
        "Severity of initial deficit",
        "Age and comorbidities"
      ]
    },
