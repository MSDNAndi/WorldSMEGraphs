  "content": {
    "statement": "dvt-001-definition is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Deep-Vein-Thrombosis that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding dvt-001-definition helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of dvt-001-definition include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of dvt-001-definition."
    },
    "definitions_glossary": {
      "deep_veins": "Veins located deep to muscle fascia (vs. superficial veins)",
      "venous_thromboembolism": "Spectrum including DVT and pulmonary embolism",
      "pulmonary_embolism": "Obstruction of pulmonary arteries by embolized thrombus",
      "proximal_dvt": "DVT in popliteal vein or above (femoral, iliac)",
      "distal_dvt": "DVT confined to calf veins (tibial, peroneal, soleal, gastrocnemius)",
      "virchow_triad": "Three factors promoting thrombosis: stasis, injury, hypercoagulability",
      "post_thrombotic_syndrome": "Chronic venous insufficiency following DVT"
    }
  },
  "clinical_features": {
    "epidemiology": {
      "annual_incidence": "1-2 per 1,000 persons",
      "lifetime_risk": "2-5%",
      "recurrence_rate": "30% at 10 years",
      "pe_with_proximal_dvt": "~50% have asymptomatic PE",
      "mortality_untreated_proximal": "~20% from PE"
    },
    "virchow_triad_examples": {
      "stasis": [
        "Immobility (bed rest, long flights)",
        "Paralysis",
        "Heart failure",
        "Venous obstruction",
        "Obesity"
      ],
      "endothelial_injury": [
        "Surgery, especially orthopedic",
        "Trauma",
        "Prior DVT",
        "Central venous catheters",
        "Pacemaker leads"
      ],
      "hypercoagulability": [
        "Factor V Leiden",
        "Prothrombin G20210A mutation",
        "Antiphospholipid syndrome",
        "Malignancy",
        "Pregnancy/postpartum",
        "Oral contraceptives/HRT",
        "Nephrotic syndrome"
      ]
    },
    "clinical_presentation": {
      "symptoms": [
        "Unilateral leg swelling",
        "Pain or tenderness",
        "Warmth",
        "Erythema",
        "Distended superficial veins"
      ],
      "signs": [
        "Pitting edema",
        "Calf tenderness on palpation",
        "Increased calf circumference (>3 cm difference)",
        "Homan's sign (calf pain with dorsiflexion - unreliable)"
      ]
    },
    "anatomic_classification": {
      "proximal_dvt": {
        "veins": [
          "Common femoral",
          "Femoral (superficial femoral)",
          "Popliteal",
          "Iliac"
        ],
        "pe_risk": "High (~50%)",
        "treatment": "Anticoagulation mandatory"
      },
      "distal_dvt": {
        "veins": [
          "Anterior tibial",
          "Posterior tibial",
          "Peroneal",
          "Soleal",
          "Gastrocnemius"
        ],
        "pe_risk": "Low (~5%)",
        "treatment": "Controversial: treat or serial imaging"
      }
    }
  },
