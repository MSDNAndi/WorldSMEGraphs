  "content": {
    "title": "Toe Amputation: Principles and Techniques",
    "statement": "Toe Amputation: Principles and Techniques is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Pad that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding Toe Amputation: Principles and Techniques helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of Toe Amputation: Principles and Techniques include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of Toe Amputation: Principles and Techniques."
    },
    "indications": {
      "absolute": [
        "Wet gangrene with spreading infection",
        "Dry gangrene limiting function or hygiene",
        "Osteomyelitis of phalanges not responding to treatment",
        "Non-healing wound with exposed bone"
      ],
      "relative": [
        "Painful digital ischemia limiting quality of life",
        "Wound preventing shoe fitting",
        "Source control for sepsis"
      ]
    },
    "perfusion_assessment": {
      "toe_pressure": {
        "adequate": ">30 mmHg",
        "marginal": "20-30 mmHg",
        "inadequate": "<20 mmHg (consider revascularization first)"
      },
      "tcpo2": {
        "adequate": ">30 mmHg",
        "marginal": "20-30 mmHg",
        "inadequate": "<20 mmHg"
      },
      "clinical_signs": [
        "Palpable pedal pulses",
        "Capillary refill <3 seconds",
        "Doppler signals present",
        "Skin perfusion assessment"
      ]
    },
    "amputation_levels": {
      "distal_phalanx": {
        "indication": "Tip necrosis, nail bed infection",
        "technique": "Disarticulation at DIP joint",
        "outcome": "Minimal functional impact"
      },
      "mtp_disarticulation": {
        "indication": "Gangrene extending to proximal phalanx",
        "technique": "Disarticulate at MTP joint, racquet incision",
        "great_toe_consideration": "Preserve base of proximal phalanx if possible"
      },
      "ray_amputation": {
        "indication": "Gangrene extending to metatarsal head",
        "technique": "Remove toe plus portion of metatarsal",
        "biomechanics": "Changes foot pressure distribution"
      }
    },
    "surgical_technique": {
      "incision": {
        "distal": "Circumferential or fish-mouth",
        "mtp": "Racquet incision",
        "ray": "Longitudinal with transverse extension"
      },
      "closure": {
        "clean_wound": "Loose primary closure or secondary intention",
        "infected_wound": "Leave open, pack with gauze",
        "healing_assessment": "Monitor edges for demarcation"
      },
      "bone_management": {
        "smoothing": "File sharp bone edges",
        "flap_coverage": "Ensure soft tissue covers bone end"
      }
    },
    "postoperative_care": {
      "wound_management": [
        "Daily dressing changes initially",
        "Transition to less frequent as healing progresses",
        "Monitor for infection and progression"
      ],
      "offloading": [
        "Non-weight bearing initially",
        "Healing shoe or boot",
        "Gradual return to weight bearing"
      ],
      "follow_up": [
        "Weekly until healed",
        "Watch for proximal progression"
      ]
    },
    "outcomes": {
      "healing_rate": {
        "adequate_perfusion": "70-85%",
        "marginal_perfusion": "50-70%",
        "after_revascularization": "75-90%"
