  "content": {
    "term": "Trash Foot",
    "synonyms": ["Atheroembolic Foot", "Cholesterol Embolization Syndrome", "Blue Toe Syndrome"],
    "definition": "A clinical syndrome resulting from distal embolization of atheromatous debris (cholesterol crystals, platelet aggregates, fibrin) from a proximal arterial source to the digital vessels of the foot. Characterized by acute onset of painful, cyanotic digits with preserved proximal pulses, often occurring after arterial instrumentation.",
    "etiology": {
      "sources": [
        "Aortic atheroma",
        "Iliac artery plaque",
        "Popliteal aneurysm",
        "Femoral artery atheroma"
      ],
      "triggers": [
        "Arterial catheterization (most common)",
        "Endovascular procedures",
        "Anticoagulation (destabilizes plaque)",
        "Thrombolytic therapy",
        "Cardiac surgery",
        "Spontaneous (rare)"
      ]
    },
    "clinical_features": {
      "classic_presentation": [
        "Sudden onset painful, cyanotic toes",
        "Preserved pedal pulses (classic finding)",
        "Livedo reticularis on foot/leg",
        "Petechiae",
        "Intact femoral/popliteal pulses"
      ],
      "progression": [
        "Initial cyanosis â†’ ischemic pain",
        "May progress to gangrene of digits",
        "Multiple digits often involved",
        "Unilateral or bilateral"
      ],
      "systemic_manifestations": [
        "Renal insufficiency (renal cholesterol emboli)",
        "GI symptoms (mesenteric emboli)",
        "Hollenhorst plaques (retinal emboli)",
        "Eosinophilia",
        "Elevated ESR"
      ]
    },
    "diagnosis": {
      "clinical": "Classic presentation with preserved pulses",
      "laboratory": [
        "Eosinophilia (25% of cases)",
        "Elevated ESR/CRP",
        "Elevated creatinine if renal involvement"
      ],
      "imaging": [
        "Duplex to identify embolic source",
        "CTA to evaluate aortoiliac atheroma",
        "Echocardiogram if cardiac source suspected"
      ],
      "biopsy": "Skin or muscle biopsy showing cholesterol clefts (pathognomonic but rarely needed)"
    },
    "differential_diagnosis": [
      "Arterial thrombosis (absent pulses)",
      "Vasculitis",
      "Raynaud phenomenon",
      "Frostbite",
      "Septic emboli"
    ],
    "management": {
      "conservative": [
        "Wound care",
        "Pain management",
        "Antiplatelet therapy",
        "Statin therapy (plaque stabilization)"
      ],
      "identify_and_treat_source": [
        "Aortic source: consider covered endograft",
        "Popliteal aneurysm: surgical repair",
        "Iliac source: endovascular exclusion"
      ],
      "avoid": [
        "Anticoagulation may worsen (removes protective thrombus)",
        "Further instrumentation through diseased segment"
      ],
      "amputation": [
        "Limited digital amputation for demarcated gangrene",
        "Conservative approach - let tissue demarcate"
      ]
    },
    "prognosis": [
      "Often self-limited if source controlled",
      "Renal involvement portends poor prognosis",
      "May require minor amputation of digits"
    ]
  },
