  "content": {
    "title": "Transmetatarsal Amputation (TMA)",
    "statement": "Transmetatarsal Amputation (TMA) is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Pad that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding Transmetatarsal Amputation (TMA) helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of Transmetatarsal Amputation (TMA) include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of Transmetatarsal Amputation (TMA)."
    },
    "indications": {
      "tissue_loss": [
        "Multiple toe gangrene",
        "Forefoot gangrene or necrosis",
        "Failed ray amputations",
        "Non-healing forefoot wounds"
      ],
      "infection": [
        "Forefoot osteomyelitis",
        "Deep space infection of forefoot",
        "Failed debridement of forefoot infection"
      ]
    },
    "contraindications": {
      "absolute": [
        "Gangrene extending to midfoot or heel",
        "Non-viable plantar flap tissue",
        "Severe ankle contracture (equinus)"
      ],
      "relative": [
        "Non-ambulatory patient (consider primary BKA)",
        "Severe peripheral neuropathy with prior contralateral amputation",
        "ABI <0.50 without revascularization options"
      ]
    },
    "perfusion_requirements": {
      "ankle_pressure": {
        "adequate": ">70 mmHg",
        "marginal": "50-70 mmHg",
        "inadequate": "<50 mmHg (consider revascularization)"
      },
      "abi": {
        "adequate": ">0.50",
        "marginal": "0.40-0.50",
        "inadequate": "<0.40"
      },
      "tcpo2": {
        "adequate": ">30 mmHg at forefoot level",
        "marginal": "20-30 mmHg"
      }
    },
    "surgical_technique": {
      "incision": {
        "pattern": "Fish-mouth incision",
        "dorsal": "Transverse across metatarsal heads",
        "plantar": "Extends to metatarsal-phalangeal crease",
        "principle": "Plantar flap 2-3 cm longer than dorsal"
      },
      "bone_transection": {
        "level": "Mid-metatarsal shaft",
        "pattern": "Parabolic (1st and 5th shorter than 2nd-4th)",
        "smoothing": "File all bone edges smooth"
      },
      "soft_tissue": {
        "flexors_extensors": "Transect sharply, allow retraction",
        "vessels_nerves": "Ligate vessels, transect nerves cleanly",
        "flap": "Handle gently, preserve vascularity"
      },
      "closure": {
        "infected": "Leave open or loose approximation",
        "clean": "Layered closure without tension",
        "drain": "Not routinely used"
      }
    },
    "achilles_management": {
      "problem": "Unopposed plantarflexion causes equinus deformity",
      "solution": "Prophylactic Achilles lengthening",
      "technique": "Percutaneous triple hemisection or open Z-lengthening",
      "timing": "At time of TMA or as staged procedure"
    },
    "postoperative_care": {
      "immediate": [
        "Posterior splint or cast to prevent equinus",
        "Non-weight bearing initially",
        "Daily wound assessment"
      ],
      "rehabilitation": [
        "Gradual weight bearing at 4-6 weeks",
        "Shoe modification with filler",
        "Physical therapy for gait training"
      ],
      "long_term": [
        "Custom shoes and insoles",
        "Regular skin and contralateral foot checks",
        "Lifetime surveillance for ulceration"
      ]
    },
    "outcomes": {
      "healing_rate": {
        "adequate_perfusion": "70-85%",
        "marginal_perfusion": "50-65%",
        "post_revascularization": "75-90%"
      },
      "ambulation": {
        "rate": "70-80% ambulatory at 1 year",
        "independence": "Most walk without prosthesis"
      },
      "revision_rate": {
        "to_higher_level": "15-30%",
        "common_cause": "Wound dehiscence, ongoing ischemia"
      }
    },
