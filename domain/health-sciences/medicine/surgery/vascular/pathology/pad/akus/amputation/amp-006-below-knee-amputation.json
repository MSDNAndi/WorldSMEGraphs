  "content": {
    "title": "Below-Knee Amputation (BKA): Transtibial Amputation",
    "statement": "Below-Knee Amputation (BKA): Transtibial Amputation is a fundamental concept in Health-Sciences Medicine Surgery Vascular Pathology Pad that provides essential knowledge for understanding related topics and clinical/practical applications.",
    "explanation": {
      "intuition": "Understanding Below-Knee Amputation (BKA): Transtibial Amputation helps build foundational knowledge. The concept connects to broader principles in the field.",
      "key_insight": "The key aspects of Below-Knee Amputation (BKA): Transtibial Amputation include core principles, common applications, and integration with related concepts.",
      "technical_details": "Technical details involve specific mechanisms, measurements, and evidence-based applications of Below-Knee Amputation (BKA): Transtibial Amputation."
    },
    "indications": {
      "primary": [
        "Non-reconstructable limb ischemia",
        "Failed revascularization with non-healing wounds",
        "Extensive foot gangrene extending to ankle",
        "Overwhelming foot sepsis not responding to debridement"
      ],
      "secondary": [
        "Trauma with unreconstructable injury",
        "Chronic osteomyelitis refractory to treatment",
        "Malignancy requiring resection"
      ]
    },
    "contraindications": {
      "absolute": [
        "Gangrene extending above ankle",
        "Knee flexion contracture >20 degrees (relative)"
      ],
      "relative": [
        "Non-ambulatory patient (consider AKA for wound management)",
        "Severe dementia precluding prosthetic use",
        "No popliteal pulse with non-reconstructable inflow"
      ]
    },
    "perfusion_assessment": {
      "clinical": [
        "Palpable popliteal pulse (best predictor)",
        "Skin warmth and color at proposed flap level",
        "Bleeding at incision edges"
      ],
      "objective": {
        "abi_thigh": ">0.50 at thigh level",
        "tcpo2": ">30 mmHg at calf level",
        "skin_perfusion_pressure": ">30 mmHg"
      }
    },
    "surgical_technique": {
      "level": {
        "ideal": "12-15 cm below tibial tuberosity",
        "minimum": "Enough for prosthetic socket (5-7 cm below tibial tuberosity)",
        "principle": "Preserve as much length as perfusion allows"
      },
      "incision": {
        "anterior": "One-third of circumference",
        "posterior_flap": "Two-thirds of circumference, extends 15 cm",
        "ratio": "1:2 anterior to posterior flap length"
      },
      "bone_transection": {
        "tibia": "Bevel anterior edge 45 degrees",
        "fibula": "1-2 cm shorter than tibia",
        "periosteum": "Strip 1 cm proximal to bone cut"
      },
      "soft_tissue": {
        "muscles": "Gastrocnemius-soleus myocutaneous flap",
        "vessels": "Ligate anterior tibial, posterior tibial, peroneal",
        "nerves": "Transect cleanly, allow retraction",
        "closure": "Myoplasty - secure flap to anterior compartment/tibia"
      },
      "closure": {
        "technique": "Layered closure without tension",
        "drain": "Consider closed suction drain",
        "dressing": "Soft dressing or rigid dressing (controversial)"
      }
    },
    "postoperative_care": {
      "immediate": [
        "Stump elevation to reduce edema",
        "Pain management (nerve block, PCA)",
        "Physical therapy consultation"
      ],
      "rehabilitation": {
        "timeline": [
          "Day 1-3: Stump care and positioning",
          "Week 1-2: Shrinker sock application",
          "Week 3-6: Prosthetic casting and fitting",
          "Week 6+: Gait training with prosthesis"
        ],
        "goals": [
          "Stump maturation and shaping",
          "Maintain knee extension",
          "Strengthen residual limb",
          "Progressive prosthetic ambulation"
        ]
      }
    },
    "outcomes": {
      "healing": {
        "primary": "80-90% with adequate selection",
        "revision_to_aka": "10-20%"
      },
      "functional": {
        "prosthetic_ambulation": "70-80% at 2 years",
        "independent_ambulation": "50-60%",
        "community_ambulation": "40-50%"
      },
      "mortality": {
        "30_day": "10-15%",
        "1_year": "25-35%",
        "5_year": "50-70%"
      }
    },
    "energy_expenditure": {
      "bka_vs_normal": "25-40% increase in walking energy",
      "aka_vs_bka": "40-60% more energy required for AKA",
      "clinical_implication": "Knee preservation dramatically improves rehabilitation"
    },
