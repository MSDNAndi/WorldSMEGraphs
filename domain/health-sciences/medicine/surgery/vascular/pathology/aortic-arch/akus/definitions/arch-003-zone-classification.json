  "content": {
    "title": "Aortic Arch Zone Classification (Zone 0-4)",
    "definition": "Standardized anatomic classification system defining proximal landing zones for thoracic endovascular aortic repair (TEVAR), based on the relationship to arch branch vessels.",
    "zones": {
      "zone_0": {
        "boundaries": "Ascending aorta to innominate artery",
        "requires": "Complete arch debranching (all 3 vessels)",
        "approach": "Usually requires sternotomy"
      },
      "zone_1": {
        "boundaries": "Innominate artery to left carotid artery",
        "requires": "Innominate and left carotid revascularization",
        "coverage": "Innominate origin covered"
      },
      "zone_2": {
        "boundaries": "Left carotid to left subclavian artery",
        "requires": "Left carotid revascularization",
        "coverage": "Left carotid origin covered"
      },
      "zone_3": {
        "boundaries": "Left subclavian to proximal descending aorta",
        "requires": "Left subclavian revascularization recommended",
        "coverage": "Left subclavian origin covered"
      },
      "zone_4": {
        "boundaries": "Proximal descending thoracic aorta",
        "requires": "No revascularization typically needed",
        "standard": "Standard TEVAR landing zone"
      }
    },
    "clinical_significance": {
      "stroke_risk": "Increases with more proximal zones",
      "complexity": "Zone 0-1 requires cardiac surgery involvement",
      "left_subclavian": {
        "revascularization_indications": [
          "Dominant left vertebral artery",
          "Patent LIMA-coronary bypass",
          "Functioning left arm AVF"
        ]
      }
    },
    "terminology": {
      "snomed_ct": "450673001",
      "icd_10": "I71.2"
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Define the 5 aortic arch landing zones",
      "Identify which vessels require revascularization per zone",
      "Understand stroke risk implications by zone"
    ],
    "clinical_pearls": [
      "Zone 0 = most complex, highest stroke risk",
      "Always consider left subclavian revascularization before coverage",
      "Dominant left vertebral is absolute indication for subclavian revascularization"
    ]
  },
