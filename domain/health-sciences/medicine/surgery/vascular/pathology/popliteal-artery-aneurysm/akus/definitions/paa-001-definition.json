  "content": {
    "title": "Popliteal Artery Aneurysm",
    "definition": "The most common peripheral arterial aneurysm, defined as focal dilation of the popliteal artery to >1.5 times the normal diameter (typically >2 cm). Highly associated with other aneurysms and characterized by high risk of limb-threatening thromboembolic complications rather than rupture.",
    "clinical_features": {
      "epidemiology": {
        "frequency": "70% of all peripheral aneurysms",
        "demographics": "Male predominance 30:1, age 60-70 years",
        "bilaterality": "50% bilateral",
        "association_with_aaa": "40-50% have concomitant AAA",
        "other_associations": ["Contralateral popliteal (50%)", "Femoral aneurysm (30%)"]
      },
      "pathophysiology": {
        "etiology": "Degenerative, atherosclerotic",
        "mechanism": "Medial degeneration, repetitive flexion stress",
        "complication_pattern": {
          "thrombosis": "Most common complication",
          "embolization": "Chronic microembolization or acute",
          "rupture": "RARE (<5%)"
        }
      },
      "clinical_presentation": {
        "asymptomatic": {
          "frequency": "40-50%",
          "detection": "Incidental on imaging or palpation"
        },
        "symptomatic": {
          "acute_ischemia": {
            "mechanism": "Thrombosis or embolization",
            "presentation": "Sudden onset limb ischemia",
            "significance": "25-30% amputation rate when acute"
          },
          "chronic_ischemia": {
            "mechanism": "Microembolization (Blue Toe Syndrome)",
            "presentation": "Claudication, rest pain, tissue loss"
          },
          "local_compression": {
            "vein": "DVT, leg swelling",
            "nerve": "Tibial nerve symptoms"
          }
        }
      },
      "diagnostic_workup": {
        "physical_exam": {
          "palpation": "Prominent pulsatile mass in popliteal fossa",
          "bilateral_exam": "Always examine contralateral",
          "associated": "Examine femoral arteries, abdomen for AAA"
        },
        "imaging": {
          "duplex_ultrasound": {
            "role": "First-line, diagnosis and surveillance",
            "measurements": "Diameter, thrombus, runoff assessment"
          },
          "ct_angiography": {
            "role": "Pre-operative planning",
            "assess": "Anatomy, runoff, associated aneurysms"
          },
          "mra": "Alternative to CTA",
          "conventional_angiography": "For endovascular planning"
        },
        "screening_protocol": {
          "contralateral": "Always screen contralateral popliteal",
          "aaa": "Abdominal ultrasound or CT to screen for AAA"
        }
      },
      "treatment": {
        "indications_for_repair": {
          "symptomatic": "All symptomatic aneurysms",
          "asymptomatic": {
            "size": ">2 cm diameter",
            "thrombus": "Any mural thrombus regardless of size",
            "poor_runoff": "Concern about embolic damage to runoff"
          }
        },
        "surgical_options": {
          "medial_approach": {
            "technique": "Bypass with proximal/distal ligation",
            "conduit": "Great saphenous vein (preferred)",
            "advantages": "Most common, good access"
          },
          "posterior_approach": {
            "technique": "Direct interposition or bypass",
            "indications": "True saccular aneurysm, revision",
            "allows": "Direct aneurysm excision"
          }
        },
        "endovascular": {
          "technique": "Covered stent graft exclusion",
          "concerns": [
            "Knee flexion â†’ stent fracture",
            "Long-term patency inferior to bypass",
            "Lack of long-term data"
          ],
          "role": "Selected cases, high surgical risk"
        },
        "outcomes": {
          "elective_bypass": "5-year patency 60-80%",
          "acute_ischemia": "25-30% amputation rate",
          "key_factor": "Runoff vessel status determines outcome"
        }
      }
    },
    "diagnostic_codes": {
      "icd10": ["I72.4"],
      "snomed_ct": ["442131006"]
    }
  },
  "pedagogical": {
    "learning_objectives": [
      "Recognize the high association with bilateral popliteal and AAA",
      "Understand thromboembolic rather than rupture risk",
      "Apply appropriate indications for repair"
    ],
    "clinical_pearls": [
      "If you find one popliteal aneurysm, look for the other (50% bilateral) and AAA (40-50%)",
      "Rupture is RARE - the danger is thrombosis and embolization",
      "Treat asymptomatic PAA >2 cm or with thrombus to prevent limb loss",
      "GSV is the preferred conduit for bypass",
      "Acute thrombosed PAA has 25-30% amputation rate - don't wait for symptoms"
    ],
    "common_misconceptions": [
      "Misconception: PAA rupture is the main concern - Reality: Thromboembolism causing limb ischemia is the major threat"
    ]
  },
