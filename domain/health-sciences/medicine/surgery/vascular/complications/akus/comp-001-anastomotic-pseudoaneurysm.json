  "content": {
    "identifier": "COMP-001",
    "title": "Anastomotic Pseudoaneurysm",
    "definition": "A pulsatile hematoma contained by surrounding tissues at a vascular anastomosis, resulting from partial disruption of the suture line without a complete true aneurysm wall.",
    "concepts": [
      {
        "concept_id": "etiology",
        "term": "Etiology",
        "definition": "Causes of anastomotic pseudoaneurysm.",
        "clinical_features": {
          "suture_failure": "Suture breakage or loosening",
          "infection": "Graft infection causing tissue breakdown",
          "technical": "Inadequate bites, tension on anastomosis",
          "material_failure": "Graft or artery degeneration",
          "progression": "Arterial degeneration at suture line"
        }
      },
      {
        "concept_id": "presentation",
        "term": "Clinical Presentation",
        "definition": "How pseudoaneurysms present clinically.",
        "clinical_features": {
          "pulsatile_mass": "Expanding pulsatile mass at graft anastomosis",
          "pain": "Local pain, tenderness",
          "skin_changes": "Overlying skin erythema, thinning",
          "rupture": "Acute hemorrhage (emergency)",
          "thrombosis": "May cause graft occlusion",
          "infection": "Signs of graft infection if etiology"
        }
      },
      {
        "concept_id": "diagnosis",
        "term": "Diagnosis",
        "definition": "Imaging for anastomotic pseudoaneurysm.",
        "clinical_features": {
          "duplex": "Characteristic yin-yang flow pattern, neck visualization",
          "cta": "Defines relationship to surrounding structures",
          "mri": "Alternative if CTA contraindicated",
          "angiography": "For endovascular planning"
        }
      },
      {
        "concept_id": "management",
        "term": "Treatment",
        "definition": "Management approaches for anastomotic pseudoaneurysm.",
        "clinical_features": {
          "open_repair": "Traditional approach - excision and interposition graft",
          "endovascular": "Covered stent if anatomy suitable",
          "infected": "Graft excision, extra-anatomic bypass, in situ reconstruction",
          "thrombin": "Not typically used for anastomotic pseudoaneurysms"
        }
      }
    ],
    "clinical_features": {
      "incidence": "1-5% of bypass grafts at 5 years",
      "most_common": "Femoral anastomosis most common location"
    }
