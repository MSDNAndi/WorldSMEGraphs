  "clinical_features": {
    "pathophysiology": {
      "mechanism": "Thoracic duct carries chyle from intestine to left subclavian vein. Injury (surgery, trauma) or obstruction (lymphoma, metastases) causes chyle leakage into pleural space. Chyle loss causes malnutrition and immunodeficiency (T-lymphocyte loss).",
      "etiologies": [
        "Traumatic: cardiothoracic surgery (most common), esophagectomy, neck dissection",
        "Non-traumatic: lymphoma, metastatic cancer, infections, LAM"
      ],
      "clinical_presentation": [
        "Dyspnea",
        "Milky pleural fluid",
        "Malnutrition if prolonged"
      ]
    },
    "diagnostic_criteria": {
      "presentation": [
        "Dyspnea",
        "Milky pleural fluid",
        "Malnutrition if prolonged"
      ],
      "pleural_fluid": {
        "appearance": "Milky, turbid (may be serous if fasting)",
        "triglycerides": ">110 mg/dL diagnostic",
        "chylomicrons": "Confirmatory if triglycerides borderline",
        "lymphocyte_predominant": "Typical"
      }
    },
    "treatment_options": {
      "conservative": {
        "npo_tpn": "Reduce chyle flow by eliminating enteral fat",
        "octreotide": "Reduces lymphatic flow",
        "mct_diet": "Medium-chain triglycerides bypass thoracic duct"
      },
      "interventional": {
        "thoracic_duct_embolization": "Interventional radiology approach",
        "thoracic_duct_ligation": "Surgical if conservative fails after 2 weeks"
      },
      "treat_underlying": "Chemotherapy for lymphoma"
    }
