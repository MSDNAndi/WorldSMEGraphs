    "definitions_glossary": {
      "action": "S = \u222bL dt = \u222b(T-V)dt, fundamental quantity measuring 'amount' of physical process",
      "reduced_planck_constant": "\u210f = h/(2\u03c0) = 1.054571817...\u00d710\u207b\u00b3\u2074 J\u00b7s, fundamental quantum of action",
      "planck_constant": "h = 6.62607015\u00d710\u207b\u00b3\u2074 J\u00b7s (exact), quantum of action for full cycles",
      "angular_momentum": "L = r\u00d7p, has same dimensions as action: [M\u00b7L\u00b2\u00b7T\u207b\u00b9]",
      "phase_space": "(q,p) space where q = position, p = momentum; quantum cells have area \u210f",
      "principle_least_action": "Classical paths satisfy \u03b4S = 0 (stationary action)",
      "feynman_path_integral": "Quantum amplitude \u221d \u03a3_paths e^(iS/\u210f), sum over all paths",
      "action_angle_variables": "(J,\u03b8) where J = \u222ep dq = n\u210f for periodic systems"
    }
