    "comparison_with_compton": [
      {
        "aspect": "Definition",
        "de_broglie": "\u03bb_dB = h/p (depends on momentum)",
        "compton": "\u03bb_C = h/(mc) (depends on rest mass)",
        "difference": "One varies with velocity, other is intrinsic"
      },
      {
        "aspect": "Stationary particle (v=0)",
        "de_broglie": "\u03bb_dB \u2192 \u221e (infinite wavelength)",
        "compton": "\u03bb_C = h/(mc) (finite)",
        "difference": "de Broglie diverges, Compton stays finite"
      },
      {
        "aspect": "Relativistic limit (v\u2192c)",
        "de_broglie": "\u03bb_dB \u2192 h/(mc) = \u03bb_C",
        "compton": "\u03bb_C = h/(mc) (constant)",
        "difference": "They converge at v = c"
      },
      {
        "aspect": "Ratio",
        "relationship": "\u03bb_dB/\u03bb_C = mc/(mv) = c/v",
        "note": "Ratio depends on particle velocity"
      }
