    "title": "Natural Units Conversion Formulas",
    "summary": "Practical conversion formulas between natural units (c = \u210f = 1) and SI units. Essential for translating theoretical calculations into measurable quantities.",
    "key_conversion_factors": {
      "hbar_c": {
        "value": "197.327 MeV\u00b7fm = 0.197327 GeV\u00b7fm",
        "usage": "Converting between energy and length scales",
        "example": "1 GeV\u207b\u00b9 = 0.197 fm (length)"
      },
      "hbar": {
        "value": "6.582\u00d710\u207b\u00b9\u2076 eV\u00b7s",
        "usage": "Converting between energy and time",
        "example": "Lifetime \u03c4 = \u210f/\u0393 where \u0393 is decay width in eV"
      },
      "c": {
        "value": "2.998\u00d710\u2078 m/s",
        "usage": "Converting between length and time, mass and energy"
      }
    },
    "conversion_rules": {
      "from_natural_to_SI": {
        "energy_to_mass": "m (kg) = E (J) / c\u00b2 = E (GeV) \u00d7 1.783\u00d710\u207b\u00b2\u2077 kg/GeV",
        "energy_to_length": "L (m) = \u210fc / E = 197 MeV\u00b7fm / E",
        "energy_to_time": "t (s) = \u210f / E = 6.58\u00d710\u207b\u00b9\u2076 eV\u00b7s / E",
        "momentum_to_SI": "p (kg\u00b7m/s) = p (GeV/c) \u00d7 5.34\u00d710\u207b\u00b9\u2079 kg\u00b7m/s per GeV/c"
      },
      "from_SI_to_natural": {
        "mass_to_energy": "E (GeV) = m (kg) \u00d7 c\u00b2 / (1.602\u00d710\u207b\u00b9\u2070 J/GeV)",
        "length_to_inverse_energy": "E (GeV) = \u210fc / L = 0.197 GeV\u00b7fm / L (fm)",
        "time_to_inverse_energy": "E (GeV) = \u210f / t = 6.58\u00d710\u207b\u00b2\u2075 GeV\u00b7s / t (s)"
      }
    },
