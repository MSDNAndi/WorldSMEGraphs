  "content": {
    "title": "Planck Scale vs Nuclear Scale: From Quarks to Quantum Gravity",
    "abstract": "A systematic comparison of nuclear/QCD scales to Planck scales, spanning 20 orders of magnitude in length and revealing how the strong force regime (10\u207b\u00b9\u2075 m) relates to quantum gravity (10\u207b\u00b3\u2075 m).",
    "overview": {
      "nuclear_scale": "r_proton ~ 10\u207b\u00b9\u2075 m, E_nuclear ~ MeV-GeV",
      "planck_scale": "\u2113_P ~ 10\u207b\u00b3\u2075 m, E_P ~ 10\u00b9\u2079 GeV",
      "gap": "20 orders of magnitude in length, 19 orders in energy",
      "key_insight": "Nuclear physics is well-understood; gap to Planck is traversed only theoretically"
    },
    "scale_comparisons": {
      "length_scales": {
        "planck_length": {
          "symbol": "\u2113_P",
          "value": "1.62 \u00d7 10\u207b\u00b3\u2075 m",
          "physics": "Quantum gravity scale; spacetime structure"
        },
        "quark_size": {
          "symbol": "r_quark",
          "value": "< 10\u207b\u00b9\u2079 m (experimental limit)",
          "physics": "Point-like in Standard Model; possible substructure",
          "ratio_to_planck": "< 10\u207b\u00b9\u2079/10\u207b\u00b3\u2075 = 10\u00b9\u2076"
        },
        "proton_radius": {
          "symbol": "r_p",
          "value": "0.84 \u00d7 10\u207b\u00b9\u2075 m = 0.84 fm",
          "physics": "Strong force confinement scale",
          "ratio_to_planck": "0.84 \u00d7 10\u207b\u00b9\u2075/1.62 \u00d7 10\u207b\u00b3\u2075 \u2248 5 \u00d7 10\u00b9\u2079"
        },
        "nuclear_radius": {
          "formula": "R_A = r\u2080 A^(1/3) where r\u2080 \u2248 1.2 fm",
          "value": "~5 fm for heavy nuclei",
          "ratio_to_planck": "~3 \u00d7 10\u00b2\u2070"
        }
      },
      "energy_scales": {
        "planck_energy": {
          "symbol": "E_P",
          "value": "1.22 \u00d7 10\u00b9\u2079 GeV",
          "physics": "Quantum gravity; black hole formation"
        },
        "qcd_scale": {
          "symbol": "\u039b_QCD",
          "value": "~200 MeV = 0.2 GeV",
          "physics": "Confinement, hadronization",
          "ratio_to_planck": "~10\u00b2\u2070"
        },
        "proton_mass": {
          "symbol": "m_p c\u00b2",
          "value": "938 MeV \u2248 1 GeV",
          "physics": "QCD binding energy (mostly)",
          "ratio_to_planck": "~10\u00b9\u2079"
        },
        "nuclear_binding": {
          "symbol": "B/A",
          "value": "~8 MeV/nucleon",
          "physics": "Nuclear binding (strong + EM)",
          "ratio_to_planck": "~10\u00b2\u00b9"
        }
      },
      "time_scales": {
        "planck_time": {
          "symbol": "t_P",
          "value": "5.39 \u00d7 10\u207b\u2074\u2074 s",
          "physics": "Minimum time in QG"
        },
        "strong_interaction_time": {
          "symbol": "t_strong = r_p/c",
          "value": "~3 \u00d7 10\u207b\u00b2\u2074 s = 3 yoctoseconds",
          "physics": "Time for light to cross proton",
          "ratio_to_planck": "~6 \u00d7 10\u00b9\u2079"
        },
        "nuclear_time": {
          "symbol": "t_nuclear = \u210f/(MeV)",
          "value": "~10\u207b\u00b2\u00b2 s",
          "physics": "Nuclear excited state lifetimes",
          "ratio_to_planck": "~2 \u00d7 10\u00b2\u00b9"
        }
      }
    },
    "qcd_to_planck": {
      "asymptotic_freedom": {
        "description": "Strong coupling \u03b1_s decreases at high energy",
        "formula": "\u03b1_s(Q) ~ 1/ln(Q\u00b2/\u039b\u00b2_QCD)",
        "at_qcd_scale": "\u03b1_s(1 GeV) ~ 0.5",
        "at_planck_scale": "\u03b1_s(E_P) ~ 0.02 (extrapolated)"
      },
      "running_to_planck": {
        "description": "Following RG flow from QCD to Planck",
        "energy_range": "1 GeV to 10\u00b9\u2079 GeV (19 orders)",
        "qcd_to_gut": "QCD merges with electroweak at GUT scale ~10\u00b9\u2076 GeV",
        "gut_to_planck": "Unified theory to quantum gravity: 3 orders of magnitude"
      },
      "proton_in_planck_units": {
        "mass": "m_p/m_P = 938 MeV / 1.22 \u00d7 10\u00b9\u2079 GeV \u2248 7.7 \u00d7 10\u207b\u00b2\u2070",
        "size": "r_p/\u2113_P = 0.84 fm / 1.6 \u00d7 10\u207b\u00b3\u2075 m \u2248 5 \u00d7 10\u00b9\u2079",
        "interpretation": "Proton is tiny in mass but huge in size compared to Planck"
      }
    },
    "force_comparison": {
      "strong_at_nuclear_scale": {
        "coupling": "\u03b1_s ~ 1 at Q ~ 1 GeV",
        "range": "~1 fm (confinement)",
        "mechanism": "Gluon exchange, color charge"
      },
      "gravity_at_nuclear_scale": {
        "coupling": "\u03b1_G = Gm_p\u00b2/(\u210fc) ~ 6 \u00d7 10\u207b\u00b3\u2079",
        "ratio": "\u03b1_s/\u03b1_G ~ 10\u00b3\u2078 at nuclear scale",
        "interpretation": "Gravity utterly negligible in nuclear physics"
      },
      "gravity_at_planck_scale": {
        "coupling": "\u03b1_G = (E/E_P)\u00b2 = 1 when E = E_P",
        "interpretation": "Gravity becomes as strong as other forces at Planck"
      }
    },
    "physical_content_comparison": {
      "proton_structure": {
        "quarks": "2 up + 1 down quark",
        "mass_fraction": "Quarks contribute ~1% of proton mass; rest from QCD binding",
        "gluons": "Virtual gluon field carries most of momentum"
      },
      "planck_volume_in_proton": {
        "calculation": "V_p/V_P = (4/3)\u03c0 r_p\u00b3 / \u2113_P\u00b3",
        "value": "\u2248 (10\u207b\u00b9\u2075)\u00b3 / (10\u207b\u00b3\u2075)\u00b3 = 10\u2076\u2070",
        "interpretation": "A proton contains 10\u2076\u2070 Planck volumes\u2014vast!"
      },
      "information_content": {
        "proton_info": "~10 parameters describe proton (mass, charge, spin, etc.)",
        "holographic_max": "Proton surface can hold S ~ r_p\u00b2/\u2113_P\u00b2 ~ 10\u2074\u2070 bits (holographic)",
        "interpretation": "Proton's actual complexity far below holographic limit"
      }
    },
