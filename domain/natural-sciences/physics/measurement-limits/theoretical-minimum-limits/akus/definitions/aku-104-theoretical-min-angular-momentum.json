  "content": {
    "title": "Theoretical Minimum Angular Momentum",
    "abstract": "Angular momentum is quantized in units of ℏ/2, making this one of the most fundamental and well-established quantizations in physics, directly following from the algebraic structure of quantum mechanics.",
    "theoretical_minimum": {
      "value": "ℏ/2 = 5.27285×10⁻³⁵ J·s",
      "name": "Half quantum of angular momentum",
      "status": "PROVEN - fundamental quantization",
      "confidence": "Very High"
    },
    "quantization_rule": {
      "general_formula": "J² = ℏ² j(j+1) where j = 0, 1/2, 1, 3/2, ...",
      "z_component": "J_z = mℏ where m = -j, -j+1, ..., j-1, j",
      "minimum_nonzero": "j = 1/2 gives |J| = (√3/2)ℏ ≈ 0.866ℏ",
      "minimum_z_component": "For j = 1/2: J_z = ±ℏ/2"
    },
    "types_of_angular_momentum": [
      {
        "type": "Orbital angular momentum (L)",
        "quantization": "l = 0, 1, 2, 3, ... (integers only)",
        "minimum_nonzero": "ℏ for l=1",
        "minimum_total": "0 for l=0"
      },
      {
        "type": "Spin angular momentum (S)",
        "quantization": "s = 0, 1/2, 1, 3/2, ... (integers and half-integers)",
        "minimum_nonzero": "ℏ/2 for s=1/2 (fermions)",
        "examples": {
          "s=0": "Higgs boson, pion",
          "s=1/2": "Electron, quarks, neutrinos",
          "s=1": "Photon, W/Z bosons, gluons",
          "s=3/2": "Delta baryons, gravitino",
          "s=2": "Graviton (hypothetical)"
        }
      },
      {
        "type": "Total angular momentum (J = L + S)",
        "quantization": "j can be integer or half-integer depending on spin"
      }
    ],
    "why_half_integers": {
      "mathematical_origin": "Representations of SU(2) rotation group",
      "explanation": "Single-valuedness under 4π rotation (not 2π) allows half-integer representations",
      "spinor_transformation": "ψ → -ψ under 2π rotation for fermions"
    },
    "physical_implications": [
      {
        "implication": "Fermions vs Bosons",
        "description": "Half-integer spin → fermions (Pauli exclusion), integer spin → bosons"
      },
      {
        "implication": "Atomic structure",
        "description": "Electron spin ℏ/2 underlies periodic table via Pauli principle"
      },
      {
        "implication": "Magnetic moments",
        "description": "Spin angular momentum creates intrinsic magnetic dipole"
      },
      {
        "implication": "Stern-Gerlach experiment",
        "description": "Direct observation of spin-1/2 quantization (two spots)"
      }
    ],
    "can_angular_momentum_be_zero": {
      "answer": "Yes, for spinless particles and l=0 states",
      "examples": [
        "Higgs boson (spin 0)",
        "Pions (spin 0)",
        "Ground state hydrogen atom has l=0 (but electron still has spin)"
      ],
      "note": "For massive particles with spin, intrinsic spin is always nonzero"
    },
    "comparison_with_planck": {
      "planck_angular_momentum": "ℏ = 1.055×10⁻³⁴ J·s",
      "relation": "Minimum nonzero spin = ℏ/2 = half of Planck angular momentum",
      "insight": "Planck constant IS the quantum of angular momentum (orbital) or action"
    }
  },
